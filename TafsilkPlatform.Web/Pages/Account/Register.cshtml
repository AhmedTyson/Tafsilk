@page
@model TafsilkPlatform.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form method="post">
    <div>
        <label>Email</label>
        <input asp-for="Input.Email" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Input.Password" type="password" />
    </div>
    <div>
        <label>Phone</label>
        <input asp-for="Input.PhoneNumber" />
    </div>
    <div>
        <label>Role</label>
        <select asp-for="Input.Role">
            <option value="Customer">Customer</option>
            <option value="Tailor">Tailor</option>
            <option value="Corporate">RFQ Company</option>
        </select>
    </div>
    <div>
        <label>Full Name (Customer)</label>
        <input asp-for="Input.FullName" />
    </div>
    <div>
        <label>Shop Name (Tailor)</label>
        <input asp-for="Input.ShopName" />
    </div>
    <div>
        <label>Address (Tailor)</label>
        <input asp-for="Input.Address" />
    </div>
    <div>
        <label>Company Name (Corporate)</label>
        <input asp-for="Input.CompanyName" />
    </div>
    <div>
        <label>Contact Person (Corporate)</label>
        <input asp-for="Input.ContactPerson" />
    </div>
    <button type="submit">Register</button>
</form>
@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="text-danger">@Model.Error</div>
}
