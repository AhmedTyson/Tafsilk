@page
@model TafsilkPlatform.Web.Pages.Account.ChooseRoleModel
@{
    ViewData["Title"] = "Complete Registration";
}
<h2>Complete Registration</h2>
<form method="post">
    <input type="hidden" asp-for="Email" />
    <div>
        <label>Role</label>
        <select asp-for="Role">
            <option value="Customer">Customer</option>
            <option value="Tailor">Tailor</option>
            <option value="Corporate">RFQ Company</option>
        </select>
    </div>
    <div><label>Full Name (Customer)</label><input asp-for="FullName" /></div>
    <div><label>Shop Name (Tailor)</label><input asp-for="ShopName" /></div>
    <div><label>Address (Tailor)</label><input asp-for="Address" /></div>
    <div><label>Company Name (Corporate)</label><input asp-for="CompanyName" /></div>
    <div><label>Contact Person (Corporate)</label><input asp-for="ContactPerson" /></div>
    <button type="submit">Complete</button>
</form>
@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="text-danger">@Model.Error</div>
}