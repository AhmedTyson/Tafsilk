@page
@model TafsilkPlatform.Web.Pages.ErrorModel
@{
    ViewData["Title"] = "خطأ";
}
<div class="alert alert-danger" style="margin-top:2em">
    <h2>حدث خطأ أثناء معالجة الطلب</h2>
    <p>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <span>@Model.ErrorMessage</span>
        }
        else
        {
            <span>يرجى المحاولة مرة أخرى أو التواصل مع الدعم الفني.</span>
        }
    </p>
</div>
