@{
 ViewData["Title"] = "لوحة العميل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
   /* Customer Dashboard Styles */
        .customer-dashboard {
         background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
   min-height: calc(100vh - 200px);
          padding: 2rem 0;
  }

        .dashboard-header {
 background: linear-gradient(135deg, #2c5aa0 0%, #1e3a5f 100%);
   color: white;
        padding: 2.5rem;
   border-radius: 16px;
            margin-bottom: 2rem;
          box-shadow: 0 8px 24px rgba(44, 90, 160, 0.2);
      position: relative;
overflow: hidden;
        }

  .dashboard-header::before {
  content: '';
         position: absolute;
top: -50%;
  right: -10%;
    width: 300px;
       height: 300px;
     background: rgba(255, 255, 255, 0.1);
border-radius: 50%;
        }

     .dashboard-header-content {
    position: relative;
 z-index: 1;
            display: flex;
       justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
   gap: 1.5rem;
 }

   .dashboard-title h1 {
     margin: 0 0 0.5rem 0;
font-size: 2.25rem;
  font-weight: 800;
        }

   .dashboard-title p {
            margin: 0;
 opacity: 0.95;
     font-size: 1.05rem;
 }

.welcome-stats {
     display: flex;
   gap: 2rem;
  }

  .welcome-stat {
       text-align: center;
        }

.welcome-stat-value {
            font-size: 2rem;
       font-weight: 800;
            display: block;
        }

        .welcome-stat-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        /* Stats Cards */
.stats-grid {
   display: grid;
grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
   gap: 1.5rem;
            margin-bottom: 2rem;
  }

   .stat-card {
       background: white;
   border-radius: 16px;
    padding: 1.5rem;
    border: 1px solid rgba(0,0,0,0.04);
     transition: all 0.3s;
  position: relative;
   overflow: hidden;
box-shadow: 0 4px 16px rgba(0,0,0,0.06);
        }

   .stat-card::before {
   content: '';
   position: absolute;
            top: -100px;
       right: -100px;
   width: 200px;
  height: 200px;
    background: radial-gradient(circle, rgba(102, 126, 234, 0.03) 0%, transparent 70%);
       border-radius: 50%;
 pointer-events: none;
   }

        .stat-card:hover {
    transform: translateY(-4px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
     }

 .stat-card-header {
  display: flex;
     align-items: center;
    justify-content: space-between;
       margin-bottom: 1rem;
       }

        .stat-icon {
     width: 48px;
height: 48px;
     border-radius: 12px;
            display: flex;
  align-items: center;
     justify-content: center;
font-size: 1.5rem;
  color: white;
        }

        .stat-icon.primary {
   background: linear-gradient(135deg, #2c5aa0 0%, #1e3a5f 100%);
        }

      .stat-icon.success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

.stat-icon.warning {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

        .stat-icon.info {
   background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

        .stat-value {
    font-size: 2rem;
  font-weight: 800;
  color: #212529;
       margin-bottom: 0.25rem;
  }

        .stat-label {
      color: #6b7280;
  font-size: 0.875rem;
        }

        /* Quick Actions */
        .quick-actions-card {
        background: white;
     border-radius: 16px;
      padding: 2rem;
   margin-bottom: 2rem;
  box-shadow: 0 4px 16px rgba(0,0,0,0.06);
 }

  .quick-actions-card h2 {
   font-size: 1.5rem;
     font-weight: 700;
    margin-bottom: 1.5rem;
            color: #212529;
  display: flex;
        align-items: center;
       gap: 0.75rem;
  }

     .quick-actions-grid {
 display: grid;
   grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
   gap: 1rem;
        }

   .action-btn {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
       border: 2px solid #e9ecef;
  border-radius: 12px;
      padding: 1.5rem;
    text-align: center;
            text-decoration: none;
     color: #212529;
     transition: all 0.3s;
  display: flex;
  flex-direction: column;
    align-items: center;
            gap: 0.75rem;
     }

 .action-btn:hover {
border-color: #2c5aa0;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
         transform: translateY(-4px);
       box-shadow: 0 6px 20px rgba(44, 90, 160, 0.15);
color: #2c5aa0;
 }

    .action-btn i {
 font-size: 2rem;
   color: #2c5aa0;
        }

        .action-btn span {
   font-weight: 600;
        font-size: 0.95rem;
 }

   /* Recent Orders */
  .orders-card {
        background: white;
   border-radius: 16px;
padding: 2rem;
       margin-bottom: 2rem;
  box-shadow: 0 4px 16px rgba(0,0,0,0.06);
 }

.orders-card h2 {
    font-size: 1.5rem;
font-weight: 700;
      margin-bottom: 1.5rem;
   color: #212529;
   display: flex;
      align-items: center;
            justify-content: space-between;
        }

    .orders-card h2 i {
 color: #2c5aa0;
     margin-left: 0.5rem;
      }

    .orders-table {
  width: 100%;
    border-collapse: separate;
  border-spacing: 0;
  }

   .orders-table thead {
 background: #f8f9fa;
 }

        .orders-table th {
            padding: 1rem 1.25rem;
       text-align: right;
 font-weight: 600;
      font-size: 0.875rem;
       text-transform: uppercase;
   letter-spacing: 0.5px;
       color: #6b7280;
border-bottom: 2px solid #e9ecef;
        }

        .orders-table td {
       padding: 1rem 1.25rem;
  border-bottom: 1px solid #f3f4f6;
 }

     .orders-table tbody tr {
   transition: all 0.2s;
  }

  .orders-table tbody tr:hover {
       background: #f8f9fa;
  }

  .status-badge {
       display: inline-flex;
       align-items: center;
  padding: 0.375rem 0.75rem;
   border-radius: 50px;
     font-size: 0.8125rem;
font-weight: 600;
   }

        .status-badge.pending {
  background: #fff3cd;
            color: #856404;
        }

        .status-badge.processing {
    background: #cfe2ff;
   color: #084298;
        }

  .status-badge.completed {
   background: #d1e7dd;
            color: #0f5132;
        }

        .empty-state {
            text-align: center;
   padding: 3rem 1rem;
        color: #6b7280;
        }

        .empty-state i {
            font-size: 3rem;
  margin-bottom: 1rem;
       color: #9ca3af;
            display: block;
 }

    .empty-state p {
       font-size: 1rem;
          margin: 0.5rem 0;
}

   .btn-browse-tailors {
    background: linear-gradient(135deg, #2c5aa0 0%, #1e3a5f 100%);
  color: white;
     padding: 0.75rem 2rem;
   border-radius: 50px;
            border: none;
  font-weight: 600;
       text-decoration: none;
display: inline-flex;
       align-items: center;
   gap: 0.5rem;
            transition: all 0.3s;
box-shadow: 0 4px 12px rgba(44, 90, 160, 0.3);
     margin-top: 1rem;
        }

   .btn-browse-tailors:hover {
     transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(44, 90, 160, 0.4);
        color: white;
 }

        /* Responsive */
      @@media (max-width: 768px) {
     .dashboard-header-content {
           flex-direction: column;
   text-align: center;
  }

            .welcome-stats {
                flex-direction: column;
         gap: 1rem;
      }

          .dashboard-title h1 {
     font-size: 1.75rem;
       }

   .quick-actions-grid {
       grid-template-columns: repeat(2, 1fr);
      }

            .orders-card {
        overflow-x: auto;
  }
        }
    </style>
}

<div class="container customer-dashboard">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
 <div class="dashboard-header-content">
   <div class="dashboard-title">
<h1><i class="fas fa-user-circle me-2"></i>مرحباً، @(User.Identity?.Name ?? "عميل عزيز")</h1>
   <p>إدارة طلباتك وتصفح الخياطين المميزين</p>
            </div>
            <div class="welcome-stats">
    <div class="welcome-stat">
  <span class="welcome-stat-value">0</span>
    <span class="welcome-stat-label">طلب نشط</span>
   </div>
     <div class="welcome-stat">
      <span class="welcome-stat-value">0</span>
    <span class="welcome-stat-label">طلب مكتمل</span>
   </div>
            </div>
     </div>
 </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
<div class="stat-card">
   <div class="stat-card-header">
    <div>
        <div class="stat-value">0</div>
            <div class="stat-label">الطلبات الجارية</div>
    </div>
      <div class="stat-icon primary">
         <i class="fas fa-shopping-cart"></i>
  </div>
      </div>
   </div>

        <div class="stat-card">
<div class="stat-card-header">
      <div>
       <div class="stat-value">0</div>
       <div class="stat-label">بانتظار الموافقة</div>
 </div>
     <div class="stat-icon warning">
     <i class="fas fa-clock"></i>
  </div>
  </div>
        </div>

        <div class="stat-card">
 <div class="stat-card-header">
         <div>
<div class="stat-value">0</div>
       <div class="stat-label">طلبات مكتملة</div>
                </div>
      <div class="stat-icon success">
    <i class="fas fa-check-circle"></i>
      </div>
   </div>
        </div>

        <div class="stat-card">
            <div class="stat-card-header">
      <div>
    <div class="stat-value">0</div>
        <div class="stat-label">خياطين مفضلين</div>
   </div>
      <div class="stat-icon info">
  <i class="fas fa-heart"></i>
       </div>
     </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions-card">
    <h2>
    <i class="fas fa-bolt"></i>
      <span>إجراءات سريعة</span>
        </h2>
        <div class="quick-actions-grid">
   <a href="#" class="action-btn">
       <i class="fas fa-search"></i>
       <span>تصفح الخياطين</span>
  </a>
       <a href="#" class="action-btn">
  <i class="fas fa-plus-circle"></i>
     <span>طلب جديد</span>
            </a>
   <a href="#" class="action-btn">
          <i class="fas fa-list"></i>
  <span>طلباتي</span>
     </a>
            <a href="@Url.Action("Edit", "UserSettings")" class="action-btn">
       <i class="fas fa-cog"></i>
      <span>الإعدادات</span>
    </a>
        </div>
    </div>

 <!-- Recent Orders -->
    <div class="orders-card">
   <h2>
            <span>
   <i class="fas fa-history"></i>
     آخر الطلبات
            </span>
   <a href="#" class="btn btn-sm btn-outline-primary">عرض الكل</a>
     </h2>

        <div class="empty-state">
 <i class="fas fa-inbox"></i>
        <p><strong>لا توجد طلبات بعد</strong></p>
      <p>ابدأ بتصفح الخياطين المميزين وأنشئ طلبك الأول!</p>
      <a href="#" class="btn-browse-tailors">
     <i class="fas fa-search"></i>
 <span>تصفح الخياطين</span>
            </a>
</div>

        @* Uncomment when orders are available
        <table class="orders-table">
      <thead>
     <tr>
    <th>رقم الطلب</th>
        <th>الخياط</th>
         <th>التاريخ</th>
    <th>الحالة</th>
       <th>المبلغ</th>
       <th>إجراءات</th>
  </tr>
   </thead>
     <tbody>
            <tr>
     <td>#12345</td>
<td>محمد الخياط</td>
         <td>2024-01-15</td>
        <td><span class="status-badge processing">قيد التنفيذ</span></td>
        <td>500 ج.م</td>
         <td>
         <a href="#" class="btn btn-sm btn-primary">عرض</a>
          </td>
</tr>
   </tbody>
        </table>
 *@
 </div>
</div>

