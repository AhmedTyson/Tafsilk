@model TafsilkPlatform.Web.Models.TailorProfile

@{
    ViewData["Title"] = $"Review Tailor: {Model.ShopName}";
}

<div class="container py-5">
 <div class="row">
   <div class="col-12">
            <!-- Header -->
   <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
   <h2><i class="fas fa-user-check me-2"></i>Review Tailor Application</h2>
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="TailorVerification">Tailor Verification</a></li>
   <li class="breadcrumb-item active">Review</li>
       </ol>
               </nav>
      </div>
   <div>
        <span class="badge @(Model.IsVerified ? "bg-success" : "bg-warning") fs-6">
       @(Model.IsVerified ? "Verified" : "Pending Verification")
   </span>
    </div>
 </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
     <div class="col-lg-8">
            <!-- Basic Information -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
        </div>
         <div class="card-body">
          <div class="row">
    <div class="col-md-6 mb-3">
  <strong>Shop Name:</strong>
      <p class="text-muted">@Model.ShopName</p>
         </div>
   
 @if (!string.IsNullOrEmpty(Model.FullName))
   {
 <div class="col-md-6 mb-3">
    <strong>Owner Name:</strong>
        <p class="text-muted">@Model.FullName</p>
 </div>
    }

    <div class="col-md-6 mb-3">
   <strong>Email:</strong>
 <p class="text-muted">@Model.User?.Email</p>
   </div>

         <div class="col-md-6 mb-3">
              <strong>Registration Date:</strong>
      <p class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
    </div>

      <div class="col-md-6 mb-3">
   <strong>Experience Years:</strong>
   <p class="text-muted">@(Model.ExperienceYears?.ToString() ?? "Not specified")</p>
  </div>

        <div class="col-md-6 mb-3">
          <strong>Pricing Range:</strong>
     <p class="text-muted">@(Model.PricingRange ?? "Not specified")</p>
        </div>

      <div class="col-12 mb-3">
          <strong>Address:</strong>
  <p class="text-muted">@Model.Address, @Model.City</p>
        </div>

          @if (!string.IsNullOrEmpty(Model.Bio))
  {
            <div class="col-12">
    <strong>Bio:</strong>
       <p class="text-muted">@Model.Bio</p>
             </div>
 }
        </div>
    </div>
 </div>

        @* âœ… NEW: Identity Verification Documents Section *@
            @if (Model.Verification != null)
     {
     <div class="card mb-4 border-warning">
            <div class="card-header bg-warning text-dark">
    <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Identity Verification Documents</h5>
   </div>
     <div class="card-body">
      <div class="row">
             <div class="col-md-6 mb-3">
     <strong>National ID Number:</strong>
     <p class="text-muted">@Model.Verification.NationalIdNumber</p>
    </div>
           <div class="col-md-6 mb-3">
     <strong>Full Legal Name:</strong>
      <p class="text-muted">@Model.Verification.FullLegalName</p>
    </div>
         
  @if (!string.IsNullOrEmpty(Model.Verification.Nationality))
     {
        <div class="col-md-6 mb-3">
   <strong>Nationality:</strong>
         <p class="text-muted">@Model.Verification.Nationality</p>
       </div>
      }

     @if (Model.Verification.DateOfBirth.HasValue)
      {
<div class="col-md-6 mb-3">
          <strong>Date of Birth:</strong>
   <p class="text-muted">@Model.Verification.DateOfBirth.Value.ToString("dd/MM/yyyy")</p>
     </div>
  }

           @if (!string.IsNullOrEmpty(Model.Verification.CommercialRegistrationNumber))
 {
         <div class="col-md-6 mb-3">
       <strong>Commercial Registration:</strong>
      <p class="text-muted">@Model.Verification.CommercialRegistrationNumber</p>
   </div>
  }

        @if (!string.IsNullOrEmpty(Model.Verification.ProfessionalLicenseNumber))
  {
     <div class="col-md-6 mb-3">
   <strong>Professional License:</strong>
      <p class="text-muted">@Model.Verification.ProfessionalLicenseNumber</p>
         </div>
   }

                <div class="col-12 mb-3">
 <strong>Submission Date:</strong>
         <p class="text-muted">@Model.Verification.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</p>
   </div>

      @if (!string.IsNullOrEmpty(Model.Verification.AdditionalNotes))
     {
   <div class="col-12 mb-3">
   <strong>Additional Notes:</strong>
            <p class="text-muted">@Model.Verification.AdditionalNotes</p>
     </div>
    }

 <div class="col-12">
     <h6 class="border-top pt-3 mb-3">Uploaded Documents:</h6>
   <div class="row g-2">
     @* ID Front *@
       @if (Model.Verification.IdDocumentFrontData != null)
     {
  <div class="col-md-6">
    <div class="card">
         <div class="card-body text-center">
 <i class="fas fa-id-card fa-3x text-primary mb-2"></i>
        <p class="mb-2"><strong>ID Card - Front</strong></p>
<a asp-action="ViewVerificationDocument" 
     asp-route-tailorId="@Model.Id" 
     asp-route-documentType="idfront" 
       class="btn btn-sm btn-outline-primary" 
             target="_blank">
 <i class="fas fa-eye me-1"></i>View Document
     </a>
      </div>
     </div>
    </div>
  }

    @* ID Back *@
      @if (Model.Verification.IdDocumentBackData != null)
            {
    <div class="col-md-6">
     <div class="card">
 <div class="card-body text-center">
            <i class="fas fa-id-card fa-3x text-info mb-2"></i>
         <p class="mb-2"><strong>ID Card - Back</strong></p>
    <a asp-action="ViewVerificationDocument" 
      asp-route-tailorId="@Model.Id" 
        asp-route-documentType="idback" 
 class="btn btn-sm btn-outline-info" 
  target="_blank">
        <i class="fas fa-eye me-1"></i>View Document
   </a>
       </div>
        </div>
        </div>
          }

    @* Commercial Registration *@
          @if (Model.Verification.CommercialRegistrationData != null)
          {
         <div class="col-md-6">
    <div class="card">
       <div class="card-body text-center">
        <i class="fas fa-file-contract fa-3x text-success mb-2"></i>
     <p class="mb-2"><strong>Commercial Registration</strong></p>
      <a asp-action="ViewVerificationDocument" 
     asp-route-tailorId="@Model.Id" 
        asp-route-documentType="commercial" 
      class="btn btn-sm btn-outline-success" 
        target="_blank">
     <i class="fas fa-eye me-1"></i>View Document
        </a>
        </div>
 </div>
  </div>
      }

       @* Professional License *@
   @if (Model.Verification.ProfessionalLicenseData != null)
      {
    <div class="col-md-6">
            <div class="card">
  <div class="card-body text-center">
           <i class="fas fa-certificate fa-3x text-warning mb-2"></i>
    <p class="mb-2"><strong>Professional License</strong></p>
         <a asp-action="ViewVerificationDocument" 
    asp-route-tailorId="@Model.Id" 
    asp-route-documentType="license" 
       class="btn btn-sm btn-outline-warning" 
     target="_blank">
    <i class="fas fa-eye me-1"></i>View Document
   </a>
      </div>
        </div>
           </div>
  }
              </div>
     </div>
      </div>
        </div>
 </div>
         }

   <!-- Services Offered -->
       @if (Model.TailorServices.Any())
      {
    <div class="card mb-4">
<div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-scissors me-2"></i>Services Offered (@Model.TailorServices.Count(s => !s.IsDeleted))</h5>
             </div>
             <div class="card-body">
               <div class="table-responsive">
           <table class="table table-hover">
               <thead>
          <tr>
     <th>Service Name</th>
      <th>Description</th>
      <th>Base Price</th>
         <th>Duration</th>
     </tr>
       </thead>
        <tbody>
     @foreach (var service in Model.TailorServices.Where(s => !s.IsDeleted))
        {
           <tr>
           <td><strong>@service.ServiceName</strong></td>
   <td>@service.Description</td>
       <td>@service.BasePrice.ToString("C")</td>
   <td>@service.EstimatedDuration days</td>
    </tr>
     }
              </tbody>
         </table>
       </div>
           </div>
     </div>
    }

   <!-- Portfolio Images -->
      @if (Model.PortfolioImages.Any())
            {
                <div class="card mb-4">
 <div class="card-header bg-info text-white">
             <h5 class="mb-0"><i class="fas fa-images me-2"></i>Portfolio (@Model.PortfolioImages.Count(p => !p.IsDeleted))</h5>
    </div>
              <div class="card-body">
         <div class="row g-3">
         @foreach (var image in Model.PortfolioImages.Where(p => !p.IsDeleted))
    {
        <div class="col-md-4">
         <div class="portfolio-image">
             <img src="@image.ImageUrl" alt="Portfolio" class="img-fluid rounded" />
      @if (image.IsBeforeAfter)
              {
            <span class="badge bg-warning position-absolute top-0 end-0 m-2">
      Before/After
   </span>
       }
      </div>
            </div>
       }
         </div>
      </div>
       </div>
            }

       <!-- Reviews (if any) -->
         @if (Model.Reviews.Any())
            {
  <div class="card mb-4">
          <div class="card-header bg-warning">
       <h5 class="mb-0"><i class="fas fa-star me-2"></i>Reviews (@Model.Reviews.Count)</h5>
           </div>
         <div class="card-body">
 @foreach (var review in Model.Reviews.Take(5))
   {
           <div class="mb-3 pb-3 border-bottom">
     <div class="d-flex justify-content-between">
      <div>
       <strong>Rating:</strong>
           @for (int i = 1; i <= 5; i++)
          {
              if (i <= review.Rating)
         {
      <i class="fas fa-star text-warning"></i>
     }
      else
               {
            <i class="far fa-star text-warning"></i>
     }
              }
      </div>
        <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
           </div>
<p class="mb-0 mt-2">@review.Comment</p>
     </div>
       }
 </div>
          </div>
            }
    </div>

        <!-- Sidebar -->
 <div class="col-lg-4">
     <!-- Actions Card -->
        <div class="card mb-4 sticky-top" style="top: 20px;">
      <div class="card-header bg-dark text-white">
          <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Actions</h5>
     </div>
    <div class="card-body">
           @if (!Model.IsVerified)
              {
    <!-- Approve Form -->
         <form asp-action="ApproveTailor" asp-route-id="@Model.Id" method="post" class="mb-3">
   @Html.AntiForgeryToken()
           <div class="mb-3">
      <label class="form-label">Approval Notes (Optional)</label>
            <textarea name="notes" class="form-control" rows="3" placeholder="Any notes for internal record..."></textarea>
            </div>
                <button type="submit" class="btn btn-success w-100" onclick="return confirm('Approve this tailor?')">
            <i class="fas fa-check-circle me-2"></i>Approve Tailor
     </button>
         </form>

             <!-- Reject Form -->
        <form asp-action="RejectTailor" asp-route-id="@Model.Id" method="post">
      @Html.AntiForgeryToken()
 <div class="mb-3">
       <label class="form-label">Rejection Reason *</label>
               <textarea name="reason" class="form-control" rows="3" required placeholder="Explain why this application is rejected..."></textarea>
    </div>
         <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Reject this tailor? This will notify them.')">
<i class="fas fa-times-circle me-2"></i>Reject Application
       </button>
         </form>
               }
     else
       {
         <div class="alert alert-success">
            <i class="fas fa-check-circle me-2"></i>
     This tailor has been verified.
      </div>
     }

 <hr />
