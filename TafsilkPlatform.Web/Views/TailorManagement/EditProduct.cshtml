@model TafsilkPlatform.Web.ViewModels.TailorManagement.EditProductViewModel
@{
    ViewData["Title"] = "تعديل المنتج";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var breadcrumbs = new List<(string Text, string Url)>
    {
        ("لوحة التحكم", Url.Action("Tailor", "Dashboards")),
        ("إدارة المنتجات", Url.Action("ManageProducts", "TailorManagement")),
        ("تعديل المنتج", "")
    };
}

@await Html.PartialAsync("_Breadcrumb", breadcrumbs)

<div class="container py-4" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="mb-4">
                <h1 class="h3 mb-2">
                    <i class="fas fa-edit"></i> تعديل المنتج
                </h1>
                <p class="text-muted">تحديث معلومات وصور المنتج</p>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> <strong>نجح:</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> <strong>خطأ:</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h5 class="alert-heading">
                        <i class="fas fa-exclamation-triangle"></i> يرجى إصلاح الأخطاء التالية:
                    </h5>
                    <ul class="mb-0">
                        @foreach (var state in ViewData.ModelState)
                        {
                            foreach (var error in state.Value.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="EditProduct" asp-route-id="@Model.ProductId" method="post" enctype="multipart/form-data" id="productForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="TailorId" />

                <!-- Basic Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle"></i> المعلومات الأساسية
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">اختر التصنيف</option>
                                    @foreach (var category in ViewBag.Categories as List<string>)
                                    {
                                        <option value="@category" selected="@(Model.Category == category)">@category</option>
                                    }
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pricing & Stock -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-tag"></i> السعر والمخزون
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                    <span class="input-group-text">ريال</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="DiscountedPrice" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="DiscountedPrice" type="number" step="0.01" class="form-control" />
                                    <span class="input-group-text">ريال</span>
                                </div>
                                <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="StockQuantity" class="form-label"></label>
                                <input asp-for="StockQuantity" type="number" class="form-control" />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsAvailable" class="form-check-label"></label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsFeatured" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Details -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-th-list"></i> تفاصيل المنتج
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="SubCategory" class="form-label"></label>
                                <select asp-for="SubCategory" class="form-select">
                                    <option value="">اختر (اختياري)</option>
                                    @foreach (var sub in ViewBag.SubCategories as List<string>)
                                    {
                                        <option value="@sub" selected="@(Model.SubCategory == sub)">@sub</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Size" class="form-label"></label>
                                <select asp-for="Size" class="form-select">
                                    <option value="">اختر (اختياري)</option>
                                    @foreach (var size in ViewBag.Sizes as List<string>)
                                    {
                                        <option value="@size" selected="@(Model.Size == size)">@size</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Color" class="form-label"></label>
                                <input asp-for="Color" class="form-control" />
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Material" class="form-label"></label>
                                <select asp-for="Material" class="form-select">
                                    <option value="">اختر (اختياري)</option>
                                    @foreach (var material in ViewBag.Materials as List<string>)
                                    {
                                        <option value="@material" selected="@(Model.Material == material)">@material</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Brand" class="form-label"></label>
                                <input asp-for="Brand" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Images -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-images"></i> صور المنتج
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label>الصورة الأساسية الحالية</label>
                                @if (Model.HasCurrentPrimaryImage)
                                {
                                    <div class="mb-3">
                                        <img src="@Url.Action("GetProductImage", new { id = Model.ProductId })" 
                                             class="img-fluid rounded" 
                                             style="max-height: 200px;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">لا توجد صورة حالية</div>
                                }
                                
                                <label asp-for="NewPrimaryImage" class="form-label"></label>
                                <input asp-for="NewPrimaryImage" type="file" class="form-control" accept="image/*" id="primaryImageInput" />
                                <small class="text-muted d-block mt-1">اختر صورة جديدة لتحديث الصورة الأساسية</small>
                                
                                <div id="primaryImagePreview" class="mt-3" style="display: none;">
                                    <p class="text-muted small">الصورة الجديدة:</p>
                                    <img id="primaryImagePreviewImg" src="" class="img-fluid rounded" style="max-height: 200px;" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label>الصور الإضافية</label>
                                <div class="alert alert-info small">
                                    <i class="fas fa-info-circle"></i>
                                    لديك حالياً @Model.CurrentAdditionalImagesCount صورة إضافية
                                </div>
                                
                                <label asp-for="NewAdditionalImages" class="form-label"></label>
                                <input asp-for="NewAdditionalImages" type="file" class="form-control" accept="image/*" multiple id="additionalImagesInput" />
                                <small class="text-muted d-block mt-1">إضافة صور جديدة (حتى 5 صور إجمالاً)</small>
                                
                                <div id="additionalImagesPreview" class="mt-3 row g-2"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- SEO -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-search"></i> تحسين محركات البحث (SEO)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="MetaTitle" class="form-label"></label>
                                <input asp-for="MetaTitle" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MetaDescription" class="form-label"></label>
                                <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ManageProducts")" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                <i class="fas fa-save"></i> حفظ التعديلات
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Configure Toastr for RTL
            if (typeof toastr !== 'undefined') {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-left",
                    "timeOut": "5000",
                    "extendedTimeOut": "2000",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut",
                    "rtl": true
                };
            }
            // Primary image preview
            $('#primaryImageInput').change(function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#primaryImagePreviewImg').attr('src', e.target.result);
                        $('#primaryImagePreview').show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Additional images preview
            $('#additionalImagesInput').change(function(e) {
                const files = e.target.files;
                $('#additionalImagesPreview').empty();
                
                const maxAllowed = 5 - @Model.CurrentAdditionalImagesCount;
                if (files.length > maxAllowed) {
                    toastr.warning(`يمكنك إضافة ${maxAllowed} صورة كحد أقصى (لديك ${@Model.CurrentAdditionalImagesCount} صورة حالياً)`);
                }
                
                Array.from(files).slice(0, maxAllowed).forEach(function(file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const col = $('<div class="col-4"></div>');
                        const img = $('<img>').attr('src', e.target.result)
                            .addClass('img-fluid rounded')
                            .css('max-height', '100px');
                        col.append(img);
                        $('#additionalImagesPreview').append(col);
                    };
                    reader.readAsDataURL(file);
                });
            });

            // Form submission
            $('#productForm').submit(function() {
                $('#submitBtn').prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm me-2"></span>جارٍ الحفظ...');
            });

            // Price validation
            $('#DiscountedPrice').change(function() {
                const price = parseFloat($('#Price').val());
                const discounted = parseFloat($(this).val());
                
                if (discounted && discounted >= price) {
                    toastr.warning('سعر الخصم يجب أن يكون أقل من السعر الأصلي');
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        .card {
            border: none;
        }

        .card-header {
            border-bottom: 2px solid rgba(255,255,255,0.2);
        }
    </style>
}
