@model TafsilkPlatform.Web.Models.TailorProfile

@{
    ViewData["Title"] = "الملف الشخصي";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>
    :root {
        --primary-color: #2c5aa0;
        --primary-hover: #1e3f73;
        --primary-light: #e3f2fd;
        --secondary-color: #f39c12;
        --success-color: #27ae60;
  --text-primary: #2c3e50;
        --text-secondary: #7f8c8d;
        --border-color: #e1e8ed;
--background-white: #ffffff;
        --background-gray: #f8f9fa;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
    }

    .profile-page {
        padding: 2rem 0;
    background: var(--background-gray);
 min-height: 100vh;
    }

    .profile-header {
    background: var(--background-white);
   border-radius: var(--radius-lg);
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-sm);
        display: flex;
        align-items: center;
        gap: 2rem;
    }

  .profile-avatar {
        width: 120px;
    height: 120px;
        border-radius: 50%;
    overflow: hidden;
        border: 4px solid var(--primary-color);
        flex-shrink: 0;
}

    .profile-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-avatar i {
  font-size: 4rem;
        color: var(--text-secondary);
    display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        background: var(--background-gray);
    }

 .profile-info h1 {
      font-size: 1.75rem;
      font-weight: 700;
color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .profile-meta {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
margin-top: 1rem;
    }

    .meta-item {
 display: flex;
    align-items: center;
        gap: 0.5rem;
    color: var(--text-secondary);
    }

    .meta-item i {
      color: var(--primary-color);
    }

  .verification-badge {
    display: inline-flex;
        align-items: center;
      gap: 0.5rem;
  padding: 0.5rem 1rem;
        border-radius: var(--radius-md);
   font-weight: 600;
        font-size: 0.875rem;
background: #d4edda;
        color: #155724;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
     background: var(--background-white);
      border-radius: var(--radius-lg);
        padding: 1.5rem;
        text-align: center;
     box-shadow: var(--shadow-sm);
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-color);
 margin-bottom: 0.5rem;
    }

  .stat-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
    margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        text-decoration: none;
   transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
    background: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
  background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-outline {
        background: transparent;
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
    }

  .btn-outline:hover {
    background: var(--primary-color);
      color: white;
    }

    .profile-section {
        background: var(--background-white);
        border-radius: var(--radius-lg);
     padding: 2rem;
    margin-bottom: 2rem;
     box-shadow: var(--shadow-sm);
    }

    .section-title {
     font-size: 1.25rem;
  font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
  display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-icon {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: var(--primary-color);
        color: white;
    display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-grid {
      display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
gap: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    .info-value {
        color: var(--text-primary);
      font-size: 1rem;
    }

    @@media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
 text-align: center;
        }

        .profile-avatar {
       width: 100px;
height: 100px;
     }

        .profile-meta {
            justify-content: center;
     }

        .action-buttons {
            justify-content: center;
        }
    }
</style>
}

<div class="profile-page">
    <div class="container">
   <!-- Profile Header -->
      <div class="profile-header">
         <div class="profile-avatar">
      @if (Model.ProfilePictureData != null)
 {
         <img src="@Url.Action("GetTailorProfilePicture", "Profiles", new { id = Model.Id })" 
        alt="@Model.FullName" />
          }
    else
   {
                    <i class="fas fa-user"></i>
         }
        </div>
  
            <div class="profile-info">
 <h1>@(Model.FullName ?? "خياط")</h1>
      <p class="text-muted">@Model.ShopName</p>
         
    @if (Model.IsVerified)
          {
       <div class="verification-badge">
     <i class="fas fa-check-circle"></i>
            <span>حساب موثق</span>
     </div>
  }

    <div class="profile-meta">
     @if (!string.IsNullOrEmpty(Model.City))
     {
            <div class="meta-item">
  <i class="fas fa-map-marker-alt"></i>
   <span>@Model.City</span>
    </div>
         }
        @if (Model.YearsOfExperience.HasValue)
        {
        <div class="meta-item">
                <i class="fas fa-briefcase"></i>
            <span>@Model.YearsOfExperience سنة خبرة</span>
             </div>
                    }
               @if (Model.AverageRating > 0)
      {
              <div class="meta-item">
           <i class="fas fa-star"></i>
           <span>@Model.AverageRating.ToString("F1")</span>
      </div>
   }
       </div>

       <div class="action-buttons">
         <a asp-action="EditTailorProfile" class="btn btn-primary">
          <i class="fas fa-edit"></i>
    <span>تعديل الملف الشخصي</span>
</a>
   <a asp-action="ManagePortfolio" class="btn btn-outline">
           <i class="fas fa-images"></i>
     <span>إدارة المعرض</span>
             </a>
  <a asp-action="ViewPublicTailorProfile" asp-controller="TailorPortfolio" asp-route-id="@Model.Id" class="btn btn-outline" target="_blank">
  <i class="fas fa-eye"></i>
    <span>عرض الملف العام</span>
           </a>
                </div>
    </div>
        </div>

<!-- Statistics -->
        <div class="stats-grid">
     <div class="stat-card">
   <div class="stat-value">@ViewBag.ServiceCount</div>
          <div class="stat-label">الخدمات</div>
       </div>
            <div class="stat-card">
         <div class="stat-value">@ViewBag.PortfolioCount</div>
      <div class="stat-label">صور المعرض</div>
     </div>
  <div class="stat-card">
    <div class="stat-value">@ViewBag.ReviewCount</div>
     <div class="stat-label">التقييمات</div>
            </div>
     <div class="stat-card">
            <div class="stat-value">@Model.AverageRating.ToString("F1")</div>
       <div class="stat-label">متوسط التقييم</div>
  </div>
   </div>

    <!-- Profile Information -->
        <div class="profile-section">
            <h2 class="section-title">
         <div class="section-icon">
      <i class="fas fa-info-circle"></i>
          </div>
 المعلومات الأساسية
       </h2>
          
       <div class="info-grid">
   <div class="info-item">
 <div class="info-label">الاسم الكامل</div>
   <div class="info-value">@(Model.FullName ?? "غير محدد")</div>
         </div>
      
     <div class="info-item">
                <div class="info-label">اسم الورشة</div>
        <div class="info-value">@Model.ShopName</div>
            </div>

     @if (!string.IsNullOrEmpty(Model.Specialization))
     {
     <div class="info-item">
           <div class="info-label">التخصص</div>
            <div class="info-value">@Model.Specialization</div>
     </div>
            }

       @if (Model.YearsOfExperience.HasValue)
      {
              <div class="info-item">
        <div class="info-label">سنوات الخبرة</div>
       <div class="info-value">@Model.YearsOfExperience سنة</div>
                </div>
           }

   <div class="info-item">
  <div class="info-label">رقم الهاتف</div>
           <div class="info-value">@(Model.User?.PhoneNumber ?? "غير محدد")</div>
                </div>

      <div class="info-item">
    <div class="info-label">البريد الإلكتروني</div>
          <div class="info-value">@(Model.User?.Email ?? "غير محدد")</div>
                </div>
      </div>
        </div>

        <!-- Location Information -->
    @if (!string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.Address))
      {
            <div class="profile-section">
        <h2 class="section-title">
    <div class="section-icon">
            <i class="fas fa-map-marker-alt"></i>
         </div>
     الموقع
  </h2>
        
       <div class="info-grid">
          @if (!string.IsNullOrEmpty(Model.City))
    {
         <div class="info-item">
      <div class="info-label">المدينة</div>
 <div class="info-value">@Model.City</div>
  </div>
   }

          @if (!string.IsNullOrEmpty(Model.District))
         {
            <div class="info-item">
     <div class="info-label">المنطقة</div>
   <div class="info-value">@Model.District</div>
        </div>
        }

        @if (!string.IsNullOrEmpty(Model.Address))
         {
       <div class="info-item" style="grid-column: 1 / -1;">
         <div class="info-label">العنوان</div>
     <div class="info-value">@Model.Address</div>
        </div>
        }
          </div>
      </div>
        }

        <!-- Bio -->
        @if (!string.IsNullOrEmpty(Model.Bio))
    {
      <div class="profile-section">
             <h2 class="section-title">
            <div class="section-icon">
               <i class="fas fa-align-left"></i>
       </div>
  نبذة تعريفية
                </h2>
      <p>@Model.Bio</p>
   </div>
        }

        <!-- Business Hours -->
        @if (!string.IsNullOrEmpty(Model.BusinessHours))
        {
       <div class="profile-section">
    <h2 class="section-title">
      <div class="section-icon">
<i class="fas fa-clock"></i>
         </div>
   ساعات العمل
        </h2>
       <p>@Model.BusinessHours</p>
            </div>
        }

        <!-- Social Media -->
        @if (!string.IsNullOrEmpty(Model.FacebookUrl) || !string.IsNullOrEmpty(Model.InstagramUrl) || 
 !string.IsNullOrEmpty(Model.TwitterUrl) || !string.IsNullOrEmpty(Model.WebsiteUrl))
        {
            <div class="profile-section">
                <h2 class="section-title">
        <div class="section-icon">
             <i class="fas fa-share-alt"></i>
     </div>
 وسائل التواصل الاجتماعي
                </h2>
              
     <div class="info-grid">
        @if (!string.IsNullOrEmpty(Model.FacebookUrl))
  {
            <div class="info-item">
   <div class="info-label">فيسبوك</div>
   <div class="info-value">
  <a href="@Model.FacebookUrl" target="_blank" class="text-primary">
       <i class="fab fa-facebook"></i> زيارة الصفحة
  </a>
       </div>
   </div>
            }

   @if (!string.IsNullOrEmpty(Model.InstagramUrl))
         {
   <div class="info-item">
      <div class="info-label">إنستغرام</div>
           <div class="info-value">
 <a href="@Model.InstagramUrl" target="_blank" class="text-primary">
      <i class="fab fa-instagram"></i> زيارة الحساب
        </a>
   </div>
  </div>
}

      @if (!string.IsNullOrEmpty(Model.TwitterUrl))
                    {
         <div class="info-item">
            <div class="info-label">تويتر</div>
 <div class="info-value">
          <a href="@Model.TwitterUrl" target="_blank" class="text-primary">
         <i class="fab fa-twitter"></i> زيارة الحساب
             </a>
       </div>
             </div>
    }

   @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
       {
            <div class="info-item">
         <div class="info-label">الموقع الإلكتروني</div>
        <div class="info-value">
       <a href="@Model.WebsiteUrl" target="_blank" class="text-primary">
             <i class="fas fa-globe"></i> زيارة الموقع
        </a>
            </div>
    </div>
  }
           </div>
   </div>
   }
</div>
</div>
