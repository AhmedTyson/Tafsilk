@* 
    Unified Footer - Two versions: Full and Minimal
    Use minimal footer for auth pages (Login/Register)
*@

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isAuthPage = (currentController == "Account" && (currentAction == "Login" || currentAction == "Register" || currentAction == "CompleteGoogleRegistration"));
    var isMinimal = ViewData["MinimalFooter"] as bool? ?? isAuthPage;
}

@if (isMinimal)
{
    <!-- Minimal Footer (for Auth pages) -->
    <footer class="minimal-footer">
        <div class="container">
        <div class="minimal-footer-content">
      <p>© @DateTime.Now.Year تفصيلك. جميع الحقوق محفوظة</p>
      <div class="minimal-footer-links">
       <a asp-controller="Home" asp-action="Privacy">سياسة الخصوصية</a>
     <a href="#">شروط الاستخدام</a>
     <a href="#">المساعدة</a>
  </div>
  </div>
    </div>
    </footer>
}
else
{
    <!-- Full Footer (for all other pages) -->
    <footer class="full-footer" id="contact">
<div class="container">
     <div class="footer-content">
                <!-- About Section -->
           <div class="footer-section">
       <h3 class="footer-title">
 <i class="fas fa-cut"></i>
       عن تفصيلك
             </h3>
        <p class="footer-description">
