       <li><a href="#"><i class="fas fa-chevron-left"></i> الأسعار</a></li>
     </ul>
   </div>

 <!-- Legal & Support -->
<div class="footer-section">
            <h3 class="footer-title">الدعم والمساعدة</h3>
         <ul class="footer-links">
  <li><a asp-controller="Home" asp-action="Privacy"><i class="fas fa-chevron-left"></i> سياسة الخصوصية</a></li>
