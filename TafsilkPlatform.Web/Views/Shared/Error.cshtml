@model ErrorViewModel
@{
    ViewData["Title"] = Model.StatusCodeMessage;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <h1 class="display-1 text-danger">@Model.StatusCode</h1>
                <h2 class="mb-4">@Model.StatusCodeMessage</h2>
                
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <p class="lead text-muted mb-4">@Model.Message</p>
                }
                else
                {
                    <p class="lead text-muted mb-4">
                        @if (Model.StatusCode == 404)
                        {
                            <text>الصفحة التي تبحث عنها غير موجودة.</text>
                        }
                        else if (Model.StatusCode == 403)
                        {
                            <text>ليس لديك صلاحية للوصول إلى هذه الصفحة.</text>
                        }
                        else
                        {
                            <text>حدث خطأ أثناء معالجة طلبك. يرجى المحاولة مرة أخرى.</text>
                        }
                    </p>
                }

                @if (Model.ShowRequestId)
                {
                    <p class="small text-muted">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }

                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="fas fa-home"></i> العودة للصفحة الرئيسية
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-right"></i> العودة للخلف
                    </a>
                </div>

                @if (Context.RequestServices.GetService<IWebHostEnvironment>()?.IsDevelopment() == true)
                {
                    <div class="mt-5">
                        <h3>Development Mode</h3>
                        <p class="small text-muted">
                            Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
