@model TafsilkPlatform.Web.ViewModels.TailorManagement.ManageProductsViewModel

@{
    ViewData["Title"] = "Manage Products";
    Layout = "_Layout";
}

<div class="container py-4">
    <!-- Header & Actions -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h3 mb-1 fw-bold text-dark">Manage Products</h1>
            <p class="text-muted mb-0">Overview of your inventory and product performance.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="AddProduct" class="btn btn-primary px-4 shadow-sm">
                <i class="fas fa-plus me-2"></i>Add Product
            </a>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-square bg-light text-primary rounded-3 me-3 p-2">
                            <i class="fas fa-box fa-lg"></i>
                        </div>
                        <span class="text-muted small text-uppercase fw-bold">Total</span>
                    </div>
                    <h3 class="mb-0 fw-bold">@Model.TotalProducts</h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-square bg-light text-success rounded-3 me-3 p-2">
                            <i class="fas fa-check-circle fa-lg"></i>
                        </div>
                        <span class="text-muted small text-uppercase fw-bold">Active</span>
                    </div>
                    <h3 class="mb-0 fw-bold text-success">@Model.AvailableProducts</h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-square bg-light text-danger rounded-3 me-3 p-2">
                            <i class="fas fa-exclamation-triangle fa-lg"></i>
                        </div>
                        <span class="text-muted small text-uppercase fw-bold">Out of Stock</span>
                    </div>
                    <h3 class="mb-0 fw-bold text-danger">@Model.OutOfStockProducts</h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm h-100 overflow-hidden">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-square bg-light text-info rounded-3 me-3 p-2">
                            <i class="fas fa-coins fa-lg"></i>
                        </div>
                        <span class="text-muted small text-uppercase fw-bold">Value</span>
                    </div>
                    <h4 class="mb-0 fw-bold text-dark">@Model.TotalInventoryValue.ToString("C0", new System.Globalization.CultureInfo("en-EG"))</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Table Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 border-bottom-0">
            <form method="get" asp-action="ManageProducts" class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" name="search" value="@Model.SearchTerm" class="form-control bg-light border-start-0 ps-0" placeholder="Search by name, category, or ID...">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a asp-action="ManageProducts" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-times me-1"></i>Clear Search
                        </a>
                    }
                </div>
            </form>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4" style="width: 300px;">Product</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Stats</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (Model.Products.Any())
                    {
                        foreach (var product in Model.Products)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="position-relative me-3">
                                            @if (product.HasImage)
                                            {
                                                <a href="@Url.Action("GetProductImage", new { id = product.ProductId })" target="_blank" title="View Full Image">
                                                    <img src="@Url.Action("GetProductImage", new { id = product.ProductId })" 
                                                         class="rounded-3 border shadow-sm" width="60" height="60" style="object-fit: cover; transition: transform 0.2s;" 
                                                         alt="@product.Name"
                                                         onmouseover="this.style.transform='scale(1.1)'" 
                                                         onmouseout="this.style.transform='scale(1)'">
                                                </a>
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded-3 border d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                    <i class="fas fa-camera text-muted fa-lg"></i>
                                                </div>
                                            }
                                            @if (product.IsFeatured)
                                            {
                                                <span class="position-absolute top-0 start-0 translate-middle badge rounded-pill bg-warning text-dark border border-white shadow-sm" title="Featured">
                                                    <i class="fas fa-star fa-xs"></i>
                                                </span>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark mb-1">@product.Name</div>
                                            <div class="small text-muted">
                                                <span class="badge bg-light text-secondary border me-1">@product.Category</span>
                                                <span class="text-muted" style="font-size: 0.8em;">ID: @product.ProductId.ToString().Substring(0, 6)</span>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (product.DiscountedPrice.HasValue)
                                    {
                                        <div class="fw-bold text-danger">@product.DiscountedPrice.Value.ToString("C0", new System.Globalization.CultureInfo("en-EG"))</div>
                                        <div class="small text-muted text-decoration-line-through">@product.Price.ToString("C0", new System.Globalization.CultureInfo("en-EG"))</div>
                                    }
                                    else
                                    {
                                        <div class="fw-bold text-dark">@product.Price.ToString("C0", new System.Globalization.CultureInfo("en-EG"))</div>
                                    }
                                </td>
                                <td>
                                    @if (product.StockQuantity == 0)
                                    {
                                        <span class="badge bg-danger-subtle text-danger rounded-pill px-3">Out of Stock</span>
                                    }
                                    else if (product.StockQuantity < 5)
                                    {
                                        <div class="d-flex flex-column">
                                            <span class="badge bg-warning-subtle text-warning rounded-pill px-3 mb-1">Low Stock</span>
                                            <small class="text-muted text-center">@product.StockQuantity left</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="fw-bold text-dark">@product.StockQuantity</span>
                                        <small class="text-muted ms-1">units</small>
                                    }
                                </td>
                                <td>
                                    @if (product.IsAvailable)
                                    {
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" checked disabled>
                                            <label class="form-check-label small text-success fw-bold">Active</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" disabled>
                                            <label class="form-check-label small text-muted">Hidden</label>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-3 small text-muted">
                                        <div title="Views">
                                            <i class="fas fa-eye me-1"></i> @product.ViewCount
                                        </div>
                                        <div title="Sales">
                                            <i class="fas fa-shopping-bag me-1"></i> @product.SalesCount
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="EditProduct" asp-route-id="@product.ProductId" 
                                           class="btn btn-outline-primary btn-sm rounded-circle shadow-sm d-flex align-items-center justify-content-center" 
                                           style="width: 32px; height: 32px;" data-bs-toggle="tooltip" title="Edit Product">
                                            <i class="fas fa-edit fa-sm"></i>
                                        </a>
                                        
                                        <button type="button" 
                                                class="btn btn-outline-danger btn-sm rounded-circle shadow-sm d-flex align-items-center justify-content-center" 
                                                style="width: 32px; height: 32px;"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@product.ProductId"
                                                title="Delete Product">
                                            <i class="fas fa-trash-alt fa-sm"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@product.ProductId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content border-0 shadow">
                                                <div class="modal-header border-bottom-0 pb-0">
                                                    <h5 class="modal-title fw-bold">Delete Product?</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body py-4 text-center">
                                                    <div class="mb-3 text-danger">
                                                        <i class="fas fa-exclamation-circle fa-3x"></i>
                                                    </div>
                                                    <p class="mb-1">Are you sure you want to delete <strong>@product.Name</strong>?</p>
                                                    <p class="text-muted small">This action cannot be undone.</p>
                                                </div>
                                                <div class="modal-footer border-top-0 pt-0 justify-content-center">
                                                    <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="DeleteProduct" asp-route-id="@product.ProductId" method="post">
                                                        <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="py-4">
                                    <div class="mb-3">
                                        <span class="bg-light rounded-circle p-4 d-inline-block">
                                            <i class="fas fa-tshirt fa-3x text-muted"></i>
                                        </span>
                                    </div>
                                    <h5 class="fw-bold text-dark">No Products Found</h5>
                                    <p class="text-muted mb-4">
                                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                        {
                                            <span>No results found for "@Model.SearchTerm".</span>
                                        }
                                        else
                                        {
                                            <span>Get started by adding your first product to the store.</span>
                                        }
                                    </p>
                                    <a asp-action="AddProduct" class="btn btn-primary px-4">
                                        <i class="fas fa-plus me-2"></i>Add Product
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white py-3 border-top-0">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Page @Model.CurrentPage of @Model.TotalPages</small>
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link border-0 bg-transparent" asp-action="ManageProducts" asp-route-page="@(Model.CurrentPage - 1)" asp-route-search="@Model.SearchTerm">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                    <a class="page-link border-0 rounded-circle" asp-action="ManageProducts" asp-route-page="@i" asp-route-search="@Model.SearchTerm">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link border-0 bg-transparent" asp-action="ManageProducts" asp-route-page="@(Model.CurrentPage + 1)" asp-route-search="@Model.SearchTerm">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        /* Premium Card Styling */
        .card {
            border: none;
            border-radius: 1rem;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.08) !important;
        }

        /* Icon Squares */
        .icon-square {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
        }

        /* Table Styling */
        .table thead th {
            font-weight: 600;
            letter-spacing: 0.5px;
            color: #6c757d;
            border-bottom: 2px solid #f8f9fa;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        .table tbody tr {
            transition: background-color 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .table td {
            vertical-align: middle;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        /* Badge Styling */
        .badge {
            font-weight: 500;
            padding: 0.5em 0.8em;
        }

        .bg-danger-subtle { background-color: rgba(220, 53, 69, 0.1) !important; color: #dc3545 !important; }
        .bg-warning-subtle { background-color: rgba(255, 193, 7, 0.1) !important; color: #ffc107 !important; }
        .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1) !important; color: #198754 !important; }
        .bg-info-subtle { background-color: rgba(13, 202, 240, 0.1) !important; color: #0dcaf0 !important; }

        /* Search Input */
        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }
        
        #productSearch {
            background-color: #f8f9fa;
            border-left: none;
        }
        
        #productSearch:focus {
            background-color: #fff;
            box-shadow: none;
            border-color: #dee2e6;
        }
        
        .input-group:focus-within .input-group-text {
            background-color: #fff;
            border-color: #dee2e6;
        }
    </style>

    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}
