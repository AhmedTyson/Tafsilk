@using TafsilkPlatform.Models.Models
@model List<Order>

@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentStatus = ViewData["CurrentStatus"] as string ?? "All";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="dashboard-title">Order Management</h1>
                <p class="text-muted">View and update order status</p>
            </div>
            <a asp-controller="Dashboards" asp-action="Tailor" asp-area="" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-right ms-2"></i> Back to Dashboard
            </a>
        </div>

        <!-- Filters -->
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body p-2">
                <ul class="nav nav-pills nav-fill">
                    <li class="nav-item">
                        <a class="nav-link @(currentStatus == "All" ? "active" : "")" asp-action="Index" asp-route-status="All">All</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentStatus == "Pending" ? "active" : "")" asp-action="Index" asp-route-status="Pending">
                            New / Pending Payment
                            @if(currentStatus == "Pending" && Model.Any()) { <span class="badge bg-white text-primary ms-1">@Model.Count</span> }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentStatus == "Active" ? "active" : "")" asp-action="Index" asp-route-status="Active">
                            Active (In Progress)
                            @if(currentStatus == "Active" && Model.Any()) { <span class="badge bg-white text-primary ms-1">@Model.Count</span> }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentStatus == "Completed" ? "active" : "")" asp-action="Index" asp-route-status="Completed">
                            Completed
                        </a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link @(currentStatus == "Cancelled" ? "active" : "")" asp-action="Index" asp-route-status="Cancelled">
                            Cancelled
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="p-3">Order Number</th>
                                    <th class="p-3">Customer</th>
                                    <th class="p-3">Products</th>
                                    <th class="p-3">Date</th>
                                    <th class="p-3">Current Status</th>
                                    <th class="p-3">Update Status</th>
                                    <th class="p-3">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td class="p-3 fw-bold">#@order.OrderId.ToString().Substring(0, 8).ToUpper()</td>
                                        <td class="p-3">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-light text-primary me-2">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@order.Customer?.User?.Email</div>
                                                    <small class="text-muted">@order.Customer?.FullName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="p-3">
                                            @if(order.Items != null && order.Items.Any())
                                            {
                                                <ul class="list-unstyled mb-0 small">
                                                    @foreach(var item in order.Items)
                                                    {
                                                        <li>@item.Quantity x @(item.Product?.Name ?? item.Description)</li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="p-3">@order.CreatedAt.ToString("yyyy/MM/dd")</td>
                                        <td class="p-3">
                                            @if (order.Status == OrderStatus.Pending)
                                            {
                                                <span class="badge bg-warning text-dark">Pending Confirmation</span>
                                            }
                                            else if (order.Status == OrderStatus.PendingPayment)
                                            {
                                                <span class="badge bg-info text-dark">Pending Payment</span>
                                            }
                                            else if (order.Status == OrderStatus.Confirmed)
                                            {
                                                <span class="badge bg-primary">Confirmed</span>
                                            }
                                            else if (order.Status == OrderStatus.Processing)
                                            {
                                                <span class="badge bg-info">In Progress</span>
                                            }
                                            else if (order.Status == OrderStatus.Shipped)
                                            {
                                                <span class="badge bg-primary">Shipped</span>
                                            }
                                            else if (order.Status == OrderStatus.Delivered)
                                            {
                                                <span class="badge bg-success">Delivered</span>
                                            }
                                            else if (order.Status == OrderStatus.Cancelled)
                                            {
                                                <span class="badge bg-danger">Cancelled</span>
                                            }
                                        </td>
                                        <td class="p-3">
                                            <form asp-action="UpdateStatus" method="post" class="d-flex gap-2">
                                                <input type="hidden" name="orderId" value="@order.OrderId" />
                                                <select name="newStatus" class="form-select form-select-sm" style="width: 140px;" onchange="this.form.submit()">
                                                    <option value="" selected disabled>Change Status...</option>
                                                    @if (order.Status == OrderStatus.Pending || order.Status == OrderStatus.PendingPayment)
                                                    {
                                                        <option value="@OrderStatus.Confirmed">Confirm Order</option>
                                                        <option value="@OrderStatus.Cancelled">Cancel Order</option>
                                                    }
                                                    else if (order.Status == OrderStatus.Confirmed)
                                                    {
                                                        <option value="@OrderStatus.Processing">Start Processing</option>
                                                        <option value="@OrderStatus.Cancelled">Cancel Order</option>
                                                    }
                                                    else if (order.Status == OrderStatus.Processing)
                                                    {
                                                        <option value="@OrderStatus.Shipped">Shipped/Ready</option>
                                                    }
                                                    else if (order.Status == OrderStatus.Shipped)
                                                    {
                                                        <option value="@OrderStatus.Delivered">Delivered</option>
                                                    }
                                                </select>
                                            </form>
                                        </td>
                                        <td class="p-3 fw-bold text-success">@order.TotalPrice.ToString("N0") EGP</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3 text-muted" style="font-size: 3rem;">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <h4>No Orders</h4>
                        <p class="text-muted">No orders in this list currently.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
</style>
