@using TafsilkPlatform.Models.Models
@model TafsilkPlatform.Models.ViewModels.Orders.OrderDetailsViewModel
@{
    ViewData["Title"] = $"Order #{Model.OrderNumber}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Status Color Logic
    var statusColor = Model.Status switch
    {
        OrderStatus.Pending => "warning",
        OrderStatus.PendingPayment => "warning",
        OrderStatus.Confirmed => "info",
        OrderStatus.Processing => "primary",
        OrderStatus.Shipped => "primary",
        OrderStatus.Delivered => "success",
        OrderStatus.Cancelled => "danger",
        _ => "secondary"
    };

    // Payment Logic Helpers
    var isOrderActive = Model.Status != OrderStatus.Cancelled;
    var isOrderConfirmedOrLater = Model.Status == OrderStatus.Confirmed || 
                                  Model.Status == OrderStatus.Processing || 
                                  Model.Status == OrderStatus.Shipped || 
                                  Model.Status == OrderStatus.Delivered ||
                                  Model.Status == OrderStatus.ReadyForPickup;
    
    var isCashOnDelivery = Model.PaymentMethod == "Cash on Delivery";
    var isPaymentVerified = Model.IsPaid || isOrderConfirmedOrLater || (isCashOnDelivery && isOrderActive);
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-5 gap-3">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-1">Order #@Model.OrderNumber</h1>
            <p class="text-muted mb-0">Placed on @Model.CreatedAt.ToString("dd MMMM yyyy")</p>
        </div>
        
        <div class="d-flex align-items-center gap-2">
            <!-- Payment Method Badge -->
            <span class="badge bg-light text-dark border rounded-pill px-3 py-2 d-flex align-items-center gap-2">
                <i class="fas @(isCashOnDelivery ? "fa-money-bill-wave text-success" : "fa-credit-card text-primary")"></i>
                @Model.PaymentMethod
            </span>

            <!-- Status Badge -->
            <span class="badge bg-@statusColor-subtle text-@statusColor border border-@statusColor-subtle rounded-pill px-3 py-2 d-flex align-items-center gap-2">
                <i class="fas fa-circle fs-6"></i>
                @Model.StatusDisplay
            </span>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Order Items -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-white border-0 p-4 pb-0">
                    <h5 class="fw-bold mb-0">Order Items</h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 rounded-start ps-3">Item</th>
                                        <th class="border-0 text-center">Qty</th>
                                        <th class="border-0 text-end pe-3 rounded-end">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="ps-3">
                                                <div class="fw-bold">@item.ServiceName</div>
                                                @if (!string.IsNullOrEmpty(item.Notes))
                                                {
                                                    <small class="text-muted">@item.Notes</small>
                                                }
                                            </td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end pe-3 fw-bold">@item.Price.ToString("N2") EGP</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <div class="mt-4 p-3 bg-light rounded-3">
                            <small class="text-muted d-block mb-1 text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">Description</small>
                            <p class="text-muted mb-0">@Model.Description</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Reference Images -->
            @if (Model.ReferenceImages.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-header bg-white border-0 p-4 pb-0">
                        <h5 class="fw-bold mb-0">Reference Images</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            @foreach (var image in Model.ReferenceImages)
                            {
                                <div class="col-6 col-md-3">
                                    <a href="@Url.Action("GetOrderImage", "Orders", new { imageId = image.ImageId })" target="_blank" class="d-block position-relative rounded-3 overflow-hidden shadow-sm hover-zoom" style="padding-top: 100%;">
                                        <img src="@Url.Action("GetOrderImage", "Orders", new { imageId = image.ImageId })" 
                                             class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover" 
                                             alt="Reference Image" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            
            <!-- Tailor Actions (Only for Tailors) -->
            @if (Model.IsTailor && isOrderActive && Model.Status != OrderStatus.Delivered)
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden border-start border-4 border-primary">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Update Status</h5>
                        <form asp-action="UpdateOrderStatus" asp-controller="Orders" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.OrderId" />
                            <div class="d-flex gap-3">
                                <select name="newStatus" class="form-select form-select-lg" required>
                                    <option value="">Select Status...</option>
                                    @if (Model.Status == OrderStatus.Pending || Model.Status == OrderStatus.PendingPayment)
                                    {
                                        <option value="@((int)OrderStatus.Confirmed)">Confirm Order</option>
                                        <option value="@((int)OrderStatus.Cancelled)">Reject Order</option>
                                    }
                                    else if (Model.Status == OrderStatus.Confirmed)
                                    {
                                        <option value="@((int)OrderStatus.Processing)">Start Processing</option>
                                    }
                                    else if (Model.Status == OrderStatus.Processing)
                                    {
                                        <option value="@((int)OrderStatus.Shipped)">Ready for Shipping</option>
                                        <option value="@((int)OrderStatus.Delivered)">Mark as Delivered</option>
                                    }
                                    else if (Model.Status == OrderStatus.Shipped)
                                    {
                                        <option value="@((int)OrderStatus.Delivered)">Mark as Delivered</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-dark btn-lg fw-bold px-4">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Payment Summary -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Payment Summary</h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span class="fw-bold">@Model.TotalPrice.ToString("N2") EGP</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="text-muted">Tax</span>
                        <span class="fw-bold">0.00 EGP</span>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top mb-4">
                        <span class="fw-bold fs-5">Total</span>
                        <span class="fw-bold fs-4 text-primary">@Model.TotalPrice.ToString("N2") EGP</span>
                    </div>


                    
                    <!-- Cancel Order -->
                    @if (Model.IsCustomer && (Model.Status == OrderStatus.Pending || Model.Status == OrderStatus.PendingPayment))
                    {
                         <form action="/orders/@Model.OrderId/cancel" method="post" class="mt-3" onsubmit="return confirm('Are you sure you want to cancel this order?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100 py-2 fw-bold rounded-pill">
                                Cancel Order
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- Contact Info -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">@(Model.IsTailor ? "Customer" : "Tailor") Info</h5>
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="fas fa-user fs-4 text-muted"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">@(Model.IsTailor ? Model.CustomerName : (Model.TailorShopName ?? Model.TailorName))</h6>
                            <p class="text-muted mb-0 small">@(Model.IsTailor ? "Customer" : "Tailor")</p>
                        </div>
                    </div>
                    
                    @{ var phone = Model.IsTailor ? Model.CustomerPhone : Model.TailorPhone; }
                    @if (!string.IsNullOrEmpty(phone))
                    {
                        <div class="d-grid gap-2">
                            <a href="tel:@phone" class="btn btn-outline-dark rounded-pill">
                                <i class="fas fa-phone me-2"></i> Call
                            </a>
                            <a href="https://wa.me/@phone.Replace("+", "")" target="_blank" class="btn btn-outline-success rounded-pill">
                                <i class="fab fa-whatsapp me-2"></i> WhatsApp
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-zoom:hover { transform: scale(1.02); }
    .hover-scale:hover { transform: scale(1.02); }
    .transition-all { transition: all 0.2s ease; }
    .object-fit-cover { object-fit: cover; }
    .bg-warning-subtle { background-color: rgba(212, 175, 55, 0.1) !important; }
    .text-warning { color: #d4af37 !important; }
    .border-warning-subtle { border-color: rgba(212, 175, 55, 0.2) !important; }
</style>
