@model TafsilkPlatform.Models.ViewModels.Orders.OrderDetailsViewModel
@using TafsilkPlatform.Models.Models
@{
    ViewData["Title"] = $"Order #{Model.OrderNumber}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home/Index" class="text-decoration-none text-muted">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("MyOrders", "Orders")" class="text-decoration-none text-muted">My Orders</a></li>
            <li class="breadcrumb-item active" aria-current="page">Order #@Model.OrderNumber</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Order Status Card -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h4 class="fw-bold mb-1">Order #@Model.OrderNumber</h4>
                            <p class="text-muted mb-0">Placed on @Model.CreatedAt.ToString("MMMM dd, yyyy at h:mm tt")</p>
                        </div>
                        @{
                            var statusColor = Model.Status switch
                            {
                                OrderStatus.Pending => "warning",
                                OrderStatus.PendingPayment => "warning",
                                OrderStatus.Confirmed => "info",
                                OrderStatus.Processing => "primary",
                                OrderStatus.Shipped => "primary",
                                OrderStatus.Delivered => "success",
                                OrderStatus.Cancelled => "danger",
                                _ => "secondary"
                            };
                        }
                        <span class="badge bg-@statusColor-subtle text-@statusColor border border-@statusColor-subtle rounded-pill px-3 py-2 fs-6">
                            @Model.StatusDisplay
                        </span>
                    </div>

                    <!-- Progress Bar (Simplified) -->
                    @if (Model.Status != OrderStatus.Cancelled)
                    {
                        <div class="position-relative mb-4 px-2">
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar bg-dark" role="progressbar" style="width: @(Model.Status == OrderStatus.Delivered ? "100%" : Model.Status == OrderStatus.Shipped ? "75%" : Model.Status == OrderStatus.Processing ? "50%" : Model.Status == OrderStatus.Confirmed ? "25%" : "5%")"></div>
                            </div>
                        </div>
                    }

                    @if (Model.Status == OrderStatus.Pending || Model.Status == OrderStatus.Confirmed || Model.Status == OrderStatus.Processing)
                    {
                        <form asp-action="CancelOrder" asp-route-id="@Model.OrderId" method="post" onsubmit="return confirm('Are you sure you want to cancel this order?');">
                            <button type="submit" class="btn btn-outline-danger rounded-pill btn-sm">
                                <i class="fas fa-times me-1"></i> Cancel Order
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- Order Items -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-white border-0 p-4 pb-0">
                    <h5 class="fw-bold mb-0">Items</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0 px-4 py-3 text-muted fw-semibold small">Item</th>
                                    <th class="border-0 px-4 py-3 text-muted fw-semibold small text-center">Qty</th>
                                    <th class="border-0 px-4 py-3 text-muted fw-semibold small text-end">Price</th>
                                    <th class="border-0 px-4 py-3 text-muted fw-semibold small text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded bg-light d-flex align-items-center justify-content-center me-3 overflow-hidden" style="width: 60px; height: 60px;">
                                                    @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                                    {
                                                        <img src="@item.ProductImageUrl" alt="@item.ServiceName" class="w-100 h-100 object-fit-cover" />
                                                    }
                                                    else if (item.ProductImageData != null)
                                                    {
                                                        <img src="data:@item.ProductImageContentType;base64,@Convert.ToBase64String(item.ProductImageData)" 
                                                             alt="@item.ServiceName" class="w-100 h-100 object-fit-cover" />
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-box text-muted fs-4"></i>
                                                    }
                                                </div>
                                                <div>
                                                    <h6 class="mb-1 fw-bold">@item.ServiceName</h6>
                                                    <div class="d-flex flex-wrap gap-2 text-muted small mb-1">
                                                        @if (!string.IsNullOrEmpty(item.SelectedSize))
                                                        {
                                                            <span class="badge bg-light text-dark border">Size: @item.SelectedSize</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.SelectedColor))
                                                        {
                                                            <span class="badge bg-light text-dark border">Color: @item.SelectedColor</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.Material))
                                                        {
                                                            <span class="badge bg-light text-dark border">@item.Material</span>
                                                        }
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(item.Notes))
                                                    {
                                                        <small class="text-muted d-block"><i class="fas fa-info-circle me-1"></i>@item.Notes</small>
                                                    }
                                                    
                                                    @if (Model.Status == OrderStatus.Delivered && item.ProductId.HasValue)
                                                    {
                                                        <div class="mt-2">
                                                            <button onclick="openReviewModal('@item.ProductId')" class="btn btn-sm btn-outline-warning rounded-pill" style="font-size: 0.75rem;">
                                                                <i class="fas fa-star me-1"></i> Write a Review
                                                            </button>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-4 py-3 text-center align-middle">@item.Quantity</td>
                                        <td class="px-4 py-3 text-end align-middle">@item.Price.ToString("N2")</td>
                                        <td class="px-4 py-3 text-end fw-bold align-middle">@((item.Price * item.Quantity).ToString("N2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light">
                                @{
                                    var itemsSubtotal = Model.Items.Sum(i => (decimal)i.Price * i.Quantity);
                                    var shippingFee = itemsSubtotal > 1000 ? 0 : 60;
                                }
                                <tr>
                                    <td colspan="3" class="px-4 py-2 text-end text-muted">Subtotal</td>
                                    <td class="px-4 py-2 text-end">@itemsSubtotal.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="px-4 py-2 text-end text-muted">Tax (14% VAT included)</td>
                                    <td class="px-4 py-2 text-end small text-muted">Included</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="px-4 py-2 text-end text-muted">Delivery Fees</td>
                                    <td class="px-4 py-2 text-end @(shippingFee == 0 ? "text-success" : "")">
                                        @(shippingFee == 0 ? "Free" : shippingFee.ToString("N2"))
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="px-4 py-3 text-end fw-bold border-top">Total</td>
                                    <td class="px-4 py-3 text-end fw-bold fs-5 border-top">@Model.TotalPrice.ToString("N2") EGP</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Tailor Info (Multiple) -->
            @if (Model.InvolvedTailors != null && Model.InvolvedTailors.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Tailors Involved</h5>
                        
                        @foreach (var tailor in Model.InvolvedTailors)
                        {
                            <div class="mb-4 pb-3 border-bottom last-no-border">
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    @if (!string.IsNullOrEmpty(tailor.ProfileImageUrl))
                                    {
                                        <img src="@tailor.ProfileImageUrl" 
                                             class="rounded-circle object-fit-cover" width="50" height="50" alt="@tailor.ShopName">
                                    }
                                    else if (tailor.ProfilePictureData != null)
                                    {
                                        <img src="data:@tailor.ProfilePictureContentType;base64,@Convert.ToBase64String(tailor.ProfilePictureData)" 
                                             class="rounded-circle object-fit-cover" width="50" height="50" alt="@tailor.ShopName">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-muted fs-5" style="width: 50px; height: 50px;">
                                            <i class="fas fa-user-tie"></i>
                                        </div>
                                    }
                                    <div>
                                        <h6 class="fw-bold mb-0">@tailor.ShopName</h6>
                                        <small class="text-muted">@tailor.Name</small>
                                        <div class="mt-1">
                                            <a href="@Url.Action("ViewPublicTailorProfile", "TailorPortfolio", new { area = "Tailor", id = tailor.TailorId })" class="text-decoration-none small">View Profile</a>
                                        </div>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(tailor.Phone))
                                {
                                    <div class="d-flex align-items-center gap-2 small text-muted">
                                        <i class="fas fa-phone text-success"></i>
                                        <span>@tailor.Phone</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- Fallback for legacy orders -->
                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Tailor Details</h5>
                        <div class="d-flex align-items-center gap-3 mb-4">
                            @if (Model.TailorProfilePictureData != null)
                            {
                                <img src="data:@Model.TailorProfilePictureContentType;base64,@Convert.ToBase64String(Model.TailorProfilePictureData)" 
                                     class="rounded-circle object-fit-cover" width="60" height="60" alt="@Model.TailorShopName">
                            }
                            else
                            {
                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-muted fs-4" style="width: 60px; height: 60px;">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                            }
                            <div>
                                <h6 class="fw-bold mb-1">@(Model.TailorShopName ?? Model.TailorName)</h6>
                                <a href="@Url.Action("ViewPublicTailorProfile", "TailorPortfolio", new { area = "Tailor", id = Model.TailorId })" class="text-decoration-none small">View Profile</a>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.TailorPhone))
                        {
                            <div class="d-flex align-items-center gap-3 p-3 rounded-3 bg-light mb-2">
                                <div class="rounded-circle bg-white d-flex align-items-center justify-content-center shadow-sm" style="width: 36px; height: 36px;">
                                    <i class="fas fa-phone text-success"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Phone</small>
                                    <span class="fw-semibold">@Model.TailorPhone</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Payment Info -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Payment</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Method</span>
                        <span class="fw-semibold">@Model.PaymentMethod</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Status</span>
                        @if (Model.IsPaid)
                        {
                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-warning-subtle text-warning border border-warning-subtle rounded-pill">Pending</span>
                        }
                    </div>

                    @if (!Model.IsPaid && Model.Status != OrderStatus.Cancelled && Model.PaymentMethod != "Cash on Delivery")
                    {
                        <a href="/payments/process?orderId=@Model.OrderId" class="btn btn-dark w-100 rounded-pill fw-bold py-2 shadow-sm">
                            Pay Now
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-warning-subtle { background-color: rgba(212, 175, 55, 0.1) !important; }
    .text-warning { color: #d4af37 !important; }
    .border-warning-subtle { border-color: rgba(212, 175, 55, 0.2) !important; }
    
    .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1) !important; }
    .text-success { color: #198754 !important; }
    .border-success-subtle { border-color: rgba(25, 135, 84, 0.2) !important; }

    .object-fit-cover { object-fit: cover; }

    /* Star Rating Styles */
    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: center;
        gap: 0.5rem;
    }
    .rating input {
        display: none;
    }
    .rating label {
        cursor: pointer;
        color: #ddd;
        font-size: 1.5rem;
        transition: color 0.2s;
    }
    .rating input:checked ~ label,
    .rating label:hover,
    .rating label:hover ~ label {
        color: #ffc107;
    }
</style>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="reviewModalLabel">Write a Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="SubmitReview" asp-controller="Store" asp-area="Customer" method="post">
                    <input type="hidden" id="reviewProductId" name="ProductId" />
                    
                    <div class="mb-4 text-center">
                        <label class="form-label d-block fw-semibold mb-2">Rate this product</label>
                        <div class="rating">
                            <input type="radio" name="Rating" value="5" id="star5" required><label for="star5"><i class="fas fa-star"></i></label>
                            <input type="radio" name="Rating" value="4" id="star4"><label for="star4"><i class="fas fa-star"></i></label>
                            <input type="radio" name="Rating" value="3" id="star3"><label for="star3"><i class="fas fa-star"></i></label>
                            <input type="radio" name="Rating" value="2" id="star2"><label for="star2"><i class="fas fa-star"></i></label>
                            <input type="radio" name="Rating" value="1" id="star1"><label for="star1"><i class="fas fa-star"></i></label>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="reviewComment" class="form-label fw-semibold">Your Review</label>
                        <textarea class="form-control bg-light border-0" id="reviewComment" name="Comment" rows="4" placeholder="Share your experience with this product..."></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-dark w-100 rounded-pill fw-bold py-2">Submit Review</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function openReviewModal(productId) {
        document.getElementById('reviewProductId').value = productId;
        // Reset form
        document.getElementById('reviewComment').value = '';
        var radios = document.getElementsByName('Rating');
        for(var i=0; i<radios.length; i++) radios[i].checked = false;
        
        var myModal = new bootstrap.Modal(document.getElementById('reviewModal'));
        myModal.show();
    }
</script>
