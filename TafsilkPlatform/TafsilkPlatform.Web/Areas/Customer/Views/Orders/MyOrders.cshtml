@model TafsilkPlatform.Models.ViewModels.Orders.CustomerOrdersViewModel
@using TafsilkPlatform.Models.Models
@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="display-6 fw-bold text-dark mb-0">Order History</h1>
        <a href="/Store" class="btn btn-dark rounded-pill px-4 py-2 fw-bold shadow-sm transition-all hover-scale">
            <i class="fas fa-shopping-bag me-2 text-warning"></i> Shop New
        </a>
    </div>

    @if (Model.Orders.Any())
    {
        <div class="row g-4">
            @foreach (var order in Model.Orders)
            {
                var statusColor = order.Status switch
                {
                    OrderStatus.Pending => "warning",
                    OrderStatus.PendingPayment => "warning",
                    OrderStatus.Confirmed => "info",
                    OrderStatus.Processing => "primary",
                    OrderStatus.Shipped => "primary",
                    OrderStatus.Delivered => "success",
                    OrderStatus.Cancelled => "danger",
                    _ => "secondary"
                };

                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden transition-all hover-lift bg-white">
                        <div class="card-body p-4">
                            <div class="row align-items-center g-4">
                                <!-- Order Info -->
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas @(order.ServiceType == "StoreOrder" ? "fa-shopping-bag" : "fa-cut") fs-5 text-dark"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-1">#@order.OrderId.ToString().Substring(0, 8).ToUpper()</h6>
                                            <small class="text-muted">@order.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Shop/Tailor -->
                                <div class="col-md-3">
                                    <small class="text-muted d-block mb-1">Shop / Tailor</small>
                                    <span class="fw-bold text-dark">@(order.TailorShopName ?? order.TailorName)</span>
                                </div>

                                <!-- Payment & Status -->
                                <div class="col-md-3">
                                    <div class="d-flex flex-column gap-1">
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="badge bg-@statusColor-subtle text-@statusColor border border-@statusColor-subtle rounded-pill">
                                                @order.StatusDisplay
                                            </span>
                                        </div>
                                        <small class="text-muted">
                                            @if (order.IsPaid)
                                            {
                                                <span class="text-success"><i class="fas fa-check-circle me-1"></i>Paid</span>
                                            }
                                            else
                                            {
                                                <span class="text-warning"><i class="fas fa-clock me-1"></i>Pending</span>
                                            }
                                            â€¢ @order.PaymentMethod
                                        </small>
                                    </div>
                                </div>

                                <!-- Total & Actions -->
                                <div class="col-md-3 text-md-end">
                                    <h5 class="fw-bold mb-3">@order.TotalPrice.ToString("N2") EGP</h5>
                                    <div class="d-flex gap-2 justify-content-md-end">
                                        <a href="/orders/@order.OrderId" class="btn btn-outline-dark btn-sm rounded-pill fw-bold px-3">
                                            Details
                                        </a>
                                        @if (!order.IsPaid && order.Status != OrderStatus.Cancelled && order.PaymentMethod != "Cash on Delivery")
                                        {
                                            <a href="/payments/process?orderId=@order.OrderId" class="btn btn-dark btn-sm rounded-pill fw-bold px-3">
                                                Pay Now
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-bag text-muted opacity-25" style="font-size: 4rem;"></i>
            </div>
            <h3 class="fw-bold text-dark mb-2">No orders yet</h3>
            <p class="text-muted mb-4">Your order history will appear here.</p>
            <a href="/Store" class="btn btn-dark rounded-pill px-5 py-3 fw-bold shadow-sm transition-all hover-scale">
                Start Shopping
            </a>
        </div>
    }
</div>

<style>
    .hover-lift:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.05) !important; }
    .hover-scale:hover { transform: scale(1.02); }
    .transition-all { transition: all 0.2s ease; }
    .bg-warning-subtle { background-color: rgba(212, 175, 55, 0.1) !important; }
    .text-warning { color: #d4af37 !important; }
    .border-warning-subtle { border-color: rgba(212, 175, 55, 0.2) !important; }
</style>
