@model TafsilkPlatform.Models.ViewModels.Store.CheckoutViewModel
@{
    ViewData["Title"] = "Complete Order";
    var selectedCity = Model.ShippingAddress.City ?? "";
}

@section Styles {
    <style>
        :root {
            --premium-gold: #D4AF37;
            --premium-black: #1a1a1a;
            --premium-dark-gray: #333;
            --premium-light-gray: #f8f9fa;
        }

        .premium-heading {
            font-family: 'Playfair Display', serif;
            color: var(--premium-black);
            position: relative;
            padding-bottom: 15px;
        }

        .premium-heading::after {
            content: '';
            position: absolute;
            bottom: 0;
            right: 0;
            width: 60px;
            height: 3px;
            background-color: var(--premium-gold);
        }

        .checkout-card {
            border: none;
            border-radius: 12px;
            background: #fff;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
            margin-bottom: 25px;
            overflow: hidden;
        }

        .checkout-header {
            background: var(--premium-black);
            color: #fff;
            padding: 15px 20px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .checkout-header i {
            color: var(--premium-gold);
        }

        .form-control, .form-select {
            border: 1px solid #e0e0e0;
            padding: 12px 15px;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--premium-gold);
            box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
        }

        .form-label {
            font-weight: 500;
            color: var(--premium-dark-gray);
            margin-bottom: 8px;
        }

        .summary-card {
            border: none;
            border-radius: 12px;
            background: var(--premium-black);
            color: #fff;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            font-size: 0.95rem;
        }

        .summary-divider {
            border-top: 1px solid rgba(255,255,255,0.1);
            margin: 15px 0;
        }

        .btn-premium {
            background-color: var(--premium-gold);
            color: #fff;
            border: none;
            padding: 15px 25px;
            border-radius: 30px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            text-transform: uppercase;
            width: 100%;
        }

        .btn-premium:hover {
            background-color: #c5a028;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212, 175, 55, 0.3);
        }

        .payment-option {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 15px;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
        }

        .payment-option:hover {
            border-color: var(--premium-gold);
            background-color: rgba(212, 175, 55, 0.02);
        }

        .payment-option.selected {
            border-color: var(--premium-gold);
            background-color: rgba(212, 175, 55, 0.05);
        }

        .payment-option input[type="radio"] {
            position: absolute;
            opacity: 0;
        }

        .payment-check {
            width: 20px;
            height: 20px;
            border: 2px solid #ccc;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .payment-option.selected .payment-check {
            border-color: var(--premium-gold);
            background-color: var(--premium-gold);
        }

        .payment-check::after {
            content: '';
            width: 8px;
            height: 8px;
            background: #fff;
            border-radius: 50%;
            opacity: 0;
            transform: scale(0);
            transition: all 0.2s;
        }

        .payment-option.selected .payment-check::after {
            opacity: 1;
            transform: scale(1);
        }

        /* Success Animation */
        .success-checkmark {
            width: 80px;
            height: 80px;
            margin: 0 auto;
            position: relative;
        }
        
        .check-icon {
            width: 80px;
            height: 80px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid var(--premium-gold);
        }
        
        .check-icon::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(45deg);
            width: 20px;
            height: 40px;
            border-bottom: 4px solid var(--premium-gold);
            border-right: 4px solid var(--premium-gold);
        }

        .fade-out {
            animation: fadeOut 0.5s forwards;
        }

        .fade-in {
            animation: fadeIn 0.5s forwards;
        }

        @@keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; display: none; }
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
}

<div class="container py-5" dir="rtl">
    <!-- SUCCESS SECTION (Hidden initially) -->
    <div id="successSection" class="d-none">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="success-checkmark mb-4">
                    <div class="check-icon"></div>
                </div>
                <h2 class="premium-heading mb-3 text-center" style="display: inline-block;">Order Confirmed Successfully</h2>
                <p class="text-muted mb-5">Thank you for trusting us. Your order will be prepared and shipped soon.</p>

                <div class="card border-0 shadow-sm rounded-4 p-4 mb-4 bg-light text-start">
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Order Number</span>
                        <span class="fw-bold font-monospace" id="successOrderNumber">#---</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Total</span>
                        <span class="fw-bold text-success" id="successTotalAmount">---</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Payment Method</span>
                        <span class="fw-bold" id="successPaymentMethod">Cash on Delivery</span>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <a href="/Orders/MyOrders" class="btn btn-premium">View My Orders</a>
                    <a href="/Store" class="btn btn-outline-dark rounded-pill py-3">Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>

    <!-- CHECKOUT FORM -->
    <div id="checkoutSection">
        <h1 class="premium-heading mb-5">Complete Order</h1>

        <form asp-action="ProcessCheckout" method="post" id="checkoutForm">
            @Html.AntiForgeryToken()
            
            <div class="row g-4">
                <!-- Form Fields -->
                <div class="col-lg-8">
                    <!-- Shipping Address -->
                    <div class="checkout-card">
                        <div class="checkout-header">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Shipping Address</span>
                        </div>
                        <div class="p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="ShippingAddress.FullName" value="@Model.ShippingAddress.FullName" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Mobile Number <span class="text-danger">*</span></label>
                                    <div class="input-group" dir="ltr">
                                        <input type="tel" class="form-control text-end" name="ShippingAddress.PhoneNumber" value="@Model.ShippingAddress.PhoneNumber" placeholder="1XXXXXXXXX" pattern="[0-9]{10}" required>
                                        <span class="input-group-text bg-light border-start-0">+20</span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Address <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="ShippingAddress.Street" value="@Model.ShippingAddress.Street" placeholder="Street name, building number" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">City <span class="text-danger">*</span></label>
                                    <select class="form-select" name="ShippingAddress.City" required>
                                        <option value="">Select City</option>
                                        <option value="Cairo" selected="@(selectedCity == "Cairo")">Cairo</option>
                                        <option value="Alexandria" selected="@(selectedCity == "Alexandria")">Alexandria</option>
                                        <option value="Giza" selected="@(selectedCity == "Giza")">Giza</option>
                                        <option value="Port Said" selected="@(selectedCity == "Port Said")">Port Said</option>
                                        <option value="Suez" selected="@(selectedCity == "Suez")">Suez</option>
                                        <option value="Mansoura" selected="@(selectedCity == "Mansoura")">Mansoura</option>
                                        <option value="Tanta" selected="@(selectedCity == "Tanta")">Tanta</option>
                                        <option value="Aswan" selected="@(selectedCity == "Aswan")">Aswan</option>
                                        <option value="Ismailia" selected="@(selectedCity == "Ismailia")">Ismailia</option>
                                        <option value="Other" selected="@(selectedCity == "Other")">Other</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">District</label>
                                    <input type="text" class="form-control" name="ShippingAddress.District" value="@Model.ShippingAddress.District">
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Additional Notes</label>
                                    <textarea class="form-control" name="ShippingAddress.AdditionalInfo" rows="2" placeholder="Nearby landmarks, special instructions...">@Model.ShippingAddress.AdditionalInfo</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Method -->
                    <div class="checkout-card">
                        <div class="checkout-header">
                            <i class="fas fa-wallet"></i>
                            <span>Payment Method</span>
                        </div>
                        <div class="p-4">
                            <div class="d-flex flex-column gap-3">
                                <!-- Cash on Delivery -->
                                <label class="payment-option selected" onclick="selectPayment('CashOnDelivery')">
                                    <input type="radio" name="PaymentMethod" value="CashOnDelivery" checked>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="payment-check"></div>
                                        <i class="fas fa-money-bill-wave fa-2x text-success"></i>
                                        <div>
                                            <h6 class="mb-1 fw-bold">Cash on Delivery</h6>
                                            <p class="mb-0 text-muted small">Pay cash when you receive your order</p>
                                        </div>
                                    </div>
                                </label>

                                <!-- Credit Card (Stripe) -->
                                <label class="payment-option" onclick="selectPayment('CreditCard')">
                                    <input type="radio" name="PaymentMethod" value="CreditCard">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="payment-check"></div>
                                        <i class="fab fa-cc-stripe fa-2x text-primary"></i>
                                        <div>
                                            <h6 class="mb-1 fw-bold">Credit/Debit Card</h6>
                                            <p class="mb-0 text-muted small">Secure payment via Stripe</p>
                                        </div>
                                        <div class="ms-auto d-flex gap-2">
                                            <i class="fab fa-cc-visa fa-lg text-muted"></i>
                                            <i class="fab fa-cc-mastercard fa-lg text-muted"></i>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary -->
                <div class="col-lg-4">
                    <div class="summary-card p-4 sticky-top" style="top: 100px;">
                        <h4 class="mb-4" style="color: var(--premium-gold);">Order Summary</h4>
                        
                        <div class="mb-4" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in Model.Cart.Items)
                            {
                                <div class="d-flex gap-3 mb-3">
                                    <div style="width: 50px; height: 50px; background: #fff; border-radius: 6px; overflow: hidden; flex-shrink: 0;">
                                        @if (!string.IsNullOrEmpty(item.ProductImageBase64))
                                        {
                                            <img src="data:image/jpeg;base64,@item.ProductImageBase64" class="w-100 h-100 object-fit-cover">
                                        }
                                        else
                                        {
                                            <div class="w-100 h-100 d-flex align-items-center justify-content-center text-muted"><i class="fas fa-image"></i></div>
                                        }
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="text-white small fw-bold">@item.ProductName</div>
                                        <div class="text-white-50 small">@item.Quantity Ã— @item.UnitPrice.ToString("N0")</div>
                                    </div>
                                    <div class="text-white small fw-bold">@item.TotalPrice.ToString("N0")</div>
                                </div>
                            }
                        </div>

                        <div class="summary-divider"></div>

                        <div class="summary-item">
                            <span class="text-white-50">Subtotal</span>
                            <span>@Model.Cart.SubTotal.ToString("N2") EGP</span>
                        </div>
                        <div class="summary-item">
                            <span class="text-white-50">Shipping</span>
                            <span>@(Model.Cart.ShippingCost == 0 ? "Free" : Model.Cart.ShippingCost.ToString("N2") + " EGP")</span>
                        </div>
                        <div class="summary-item">
                            <span class="text-white-50">VAT (14%)</span>
                            <span>@Model.Cart.Tax.ToString("N2") EGP</span>
                        </div>

                        <div class="summary-divider"></div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="h5 mb-0">Total</span>
                            <span class="h3 mb-0" style="color: var(--premium-gold);">@Model.Cart.Total.ToString("N2") <small class="fs-6 text-white-50">EGP</small></span>
                        </div>

                        <button type="submit" id="submitBtn" class="btn btn-premium">
                            Confirm Order
                        </button>

                        <div class="text-center mt-3">
                            <small class="text-white-50">
                                <i class="fas fa-lock me-1"></i> All data is encrypted and secure
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function selectPayment(method) {
            // Update visual selection
            document.querySelectorAll('.payment-option').forEach(el => el.classList.remove('selected'));
            const selectedOption = document.querySelector(`input[value="${method}"]`).closest('.payment-option');
            if (selectedOption) selectedOption.classList.add('selected');

            // Update button text
            const btn = document.getElementById('submitBtn');
            if (method === 'CreditCard') {
                btn.textContent = 'Proceed to Payment';
            } else {
                btn.textContent = 'Confirm Order';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('checkoutForm');
            const submitBtn = document.getElementById('submitBtn');
            const checkoutSection = document.getElementById('checkoutSection');
            const successSection = document.getElementById('successSection');

            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';

                const formData = new FormData(form);

                fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json();
                    }
                    // Handle non-JSON response (redirects)
                    return response.text().then(text => {
                         if (response.ok) return { success: true };
                         throw new Error('Unexpected response');
                    });
                })
                .then(data => {
                    if (data.success) {
                        if (data.redirectUrl) {
                            // Redirect to Stripe payment page
                            window.location.href = data.redirectUrl;
                        } else {
                            // Show success message (Cash on Delivery)
                            document.getElementById('successOrderNumber').textContent = '#' + (data.orderNumber || '---');
                            document.getElementById('successTotalAmount').textContent = (data.totalAmount ? data.totalAmount.toFixed(2) : '@Model.Cart.Total.ToString("N2")') + ' EGP';
                            document.getElementById('successPaymentMethod').textContent = data.paymentMethod || 'Cash on Delivery';
                            
                            checkoutSection.classList.add('fade-out');
                            setTimeout(() => {
                                checkoutSection.classList.add('d-none');
                                successSection.classList.remove('d-none');
                                successSection.classList.add('fade-in');
                                window.scrollTo({ top: 0, behavior: 'smooth' });
                            }, 500);
                        }
                    } else {
                        alert(data.message || 'An error occurred during processing');
                        submitBtn.disabled = false;
                        submitBtn.textContent = 'Confirm Order';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('A connection error occurred. Please try again.');
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Confirm Order';
                });
            });
        });
    </script>
}
