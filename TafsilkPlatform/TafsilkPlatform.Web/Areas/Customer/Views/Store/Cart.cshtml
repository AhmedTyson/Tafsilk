@model TafsilkPlatform.Models.ViewModels.Store.CartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

@section Styles {
    <style>
        :root {
            --premium-gold: #D4AF37;
            --premium-black: #1a1a1a;
            --premium-dark-gray: #333;
            --premium-light-gray: #f8f9fa;
        }

        .premium-heading {
            font-family: 'Playfair Display', serif;
            color: var(--premium-black);
            position: relative;
            padding-bottom: 15px;
        }

        .premium-heading::after {
            content: '';
            position: absolute;
            bottom: 0;
            right: 0;
            width: 60px;
            height: 3px;
            background-color: var(--premium-gold);
        }

        .cart-item-card {
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            overflow: hidden;
        }

        .cart-item-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .item-image-container {
            height: 120px;
            width: 120px;
            overflow: hidden;
            border-radius: 8px;
            background-color: #f8f9fa;
        }

        .item-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .cart-item-card:hover .item-image {
            transform: scale(1.05);
        }

        .qty-btn {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #e0e0e0;
            background: #fff;
            color: var(--premium-dark-gray);
            transition: all 0.2s;
        }

        .qty-btn:hover {
            background-color: var(--premium-gold);
            border-color: var(--premium-gold);
            color: #fff;
        }

        .qty-input {
            border: none;
            background: transparent;
            font-weight: 600;
            width: 40px;
            text-align: center;
        }

        .summary-card {
            border: none;
            border-radius: 12px;
            background: var(--premium-black);
            color: #fff;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .summary-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .btn-premium {
            background-color: var(--premium-gold);
            color: #fff;
            border: none;
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            text-transform: uppercase;
        }

        .btn-premium:hover {
            background-color: #c5a028;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212, 175, 55, 0.3);
        }

        .btn-outline-premium {
            border: 2px solid var(--premium-gold);
            color: var(--premium-gold);
            background: transparent;
            border-radius: 30px;
            padding: 10px 25px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-outline-premium:hover {
            background-color: var(--premium-gold);
            color: #fff;
        }

        .empty-cart-icon {
            font-size: 5rem;
            color: #e0e0e0;
            margin-bottom: 20px;
        }
    </style>
}

<div class="container py-5">
    <div class="row mb-5 align-items-end">
        <div class="col-md-8">
            <h1 class="premium-heading mb-2">Shopping Cart</h1>
            <p class="text-muted mb-0">You have @Model.TotalItems items in your cart</p>
        </div>
        <div class="col-md-4 text-md-end">
            @if (Model.Items.Any())
            {
                <form asp-action="ClearCart" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to clear the cart?')">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-danger text-decoration-none">
                        <i class="fas fa-trash-alt me-1"></i> Clear Cart
                    </button>
                </form>
            }
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row g-4">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.Items)
                    {
                        <div class="cart-item-card p-3">
                            <div class="row align-items-center">
                                <!-- Image -->
                                <div class="col-md-2 col-4">
                                    <div class="item-image-container">
                                        @if (!string.IsNullOrEmpty(item.ProductImageBase64))
                                        {
                                            <img src="data:image/jpeg;base64,@item.ProductImageBase64" class="item-image" alt="@item.ProductName">
                                        }
                                        else
                                        {
                                            <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light text-muted">
                                                <i class="fas fa-image fa-2x"></i>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Details -->
                                <div class="col-md-5 col-8">
                                    <h5 class="mb-2 fw-bold text-dark">@item.ProductName</h5>
                                    <div class="d-flex flex-wrap gap-3 text-muted small mb-2">
                                        @if (!string.IsNullOrEmpty(item.SelectedSize))
                                        {
                                            <span><i class="fas fa-ruler me-1"></i> @item.SelectedSize</span>
                                        }
                                        @if (!string.IsNullOrEmpty(item.SelectedColor))
                                        {
                                            <span><i class="fas fa-palette me-1"></i> @item.SelectedColor</span>
                                        }
                                    </div>
                                    
                                    @if (!item.IsAvailable)
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                    else if (item.Quantity > item.StockAvailable)
                                    {
                                        <span class="badge bg-warning text-dark">Only @item.StockAvailable available</span>
                                    }
                                </div>

                                <!-- Quantity -->
                                <div class="col-md-3 col-6 mt-3 mt-md-0">
                                    <form asp-action="UpdateCartItem" method="post" class="d-flex align-items-center justify-content-center justify-content-md-start">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="CartItemId" value="@item.CartItemId" />
                                        
                                        <button type="button" class="qty-btn" onclick="updateQuantity(this, -1, @item.StockAvailable)">
                                            <i class="fas fa-minus small"></i>
                                        </button>
                                        
                                        <input type="number" name="Quantity" class="qty-input mx-2" 
                                               value="@item.Quantity" min="1" max="@item.StockAvailable" 
                                               onchange="this.form.submit()">
                                        
                                        <button type="button" class="qty-btn" onclick="updateQuantity(this, 1, @item.StockAvailable)">
                                            <i class="fas fa-plus small"></i>
                                        </button>
                                    </form>
                                </div>

                                <!-- Price & Remove -->
                                <div class="col-md-2 col-6 mt-3 mt-md-0 text-end">
                                    <div class="fw-bold fs-5 text-dark mb-2">@item.TotalPrice.ToString("N0") EGP</div>
                                    <form asp-action="RemoveFromCart" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="btn btn-link text-muted p-0 text-decoration-none small" 
                                                onclick="return confirm('Remove this item?')">
                                            <i class="fas fa-times me-1"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-4">
                    <a href="/Store" class="btn btn-outline-dark rounded-pill px-4">
                        <i class="fas fa-arrow-right me-2"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="summary-card p-4 sticky-top" style="top: 100px;">
                    <h4 class="mb-4" style="color: var(--premium-gold);">Order Summary</h4>
                    
                    <div class="summary-row">
                        <span class="text-white-50">Subtotal</span>
                        <span class="fw-bold">@Model.SubTotal.ToString("N2") EGP</span>
                    </div>
                    
                    <div class="summary-row">
                        <span class="text-white-50">Shipping</span>
                        @if (Model.ShippingCost == 0)
                        {
                            <span class="text-success fw-bold">Free</span>
                        }
                        else
                        {
                            <span class="fw-bold">@Model.ShippingCost.ToString("N2") EGP</span>
                        }
                    </div>
                    
                    <div class="summary-row">
                        <span class="text-white-50">VAT (14%)</span>
                        <span class="fw-bold">@Model.Tax.ToString("N2") EGP</span>
                    </div>

                    <div class="pt-3 mt-2 border-top border-secondary">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="h5 mb-0">Total</span>
                            <span class="h3 mb-0" style="color: var(--premium-gold);">@Model.Total.ToString("N2") <small class="fs-6 text-white-50">EGP</small></span>
                        </div>
                    </div>

                    <a href="/Store/Checkout" class="btn btn-premium w-100 py-3 d-flex align-items-center justify-content-center gap-2">
                        <span>Checkout</span>
                        <i class="fas fa-lock small"></i>
                    </a>

                    <div class="text-center mt-3">
                        <small class="text-white-50">
                            <i class="fas fa-shield-alt me-1"></i> 100% Secure Payment
                        </small>
                    </div>
                </div>

                <!-- Trust Badges -->
                <div class="row g-2 mt-3 text-center">
                    <div class="col-4">
                        <div class="bg-white p-2 rounded shadow-sm h-100">
                            <i class="fas fa-truck text-dark mb-1"></i>
                            <div class="small text-muted" style="font-size: 0.7rem;">Fast Shipping</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="bg-white p-2 rounded shadow-sm h-100">
                            <i class="fas fa-undo text-dark mb-1"></i>
                            <div class="small text-muted" style="font-size: 0.7rem;">Free Returns</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="bg-white p-2 rounded shadow-sm h-100">
                            <i class="fas fa-headset text-dark mb-1"></i>
                            <div class="small text-muted" style="font-size: 0.7rem;">24/7 Support</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 my-5">
            <div class="empty-cart-icon">
                <i class="fas fa-shopping-bag"></i>
            </div>
            <h2 class="fw-bold mb-3">Your cart is empty</h2>
            <p class="text-muted mb-4 lead">You haven't added any items to your cart yet.</p>
            <a href="/Store" class="btn btn-premium px-5">
                Start Shopping Now
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(btn, change, max) {
            const input = btn.parentElement.querySelector('.qty-input');
            const currentValue = parseInt(input.value) || 0;
            const newValue = currentValue + change;
            
            if (newValue >= 1 && newValue <= max) {
                input.value = newValue;
                // Trigger change event to submit form
                input.dispatchEvent(new Event('change'));
                
                // Show loading state
                btn.disabled = true;
                btn.style.opacity = '0.5';
            }
        }
    </script>
}
