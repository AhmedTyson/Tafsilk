<header class="admin-header">
    <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu">
        <i class="fas fa-bars"></i>
    </button>
    
    <div class="header-search">
        <i class="fas fa-search"></i>
        <input type="text" placeholder="بحث سريع (Ctrl + K)..." aria-label="بحث">
    </div>

    <div class="header-actions d-flex align-items-center gap-3">
        <button class="btn btn-text text-secondary position-relative p-2">
            <i class="fas fa-bell fa-lg"></i>
            <span class="position-absolute top-0 start-0 translate-middle p-1 bg-danger border border-light rounded-circle">
                <span class="visually-hidden">New alerts</span>
            </span>
        </button>
        
        <div class="vr h-50 mx-2 text-secondary opacity-25"></div>

        <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-sm btn-outline">
            <i class="fas fa-external-link-alt"></i>
            <span>الموقع الرئيسي</span>
        </a>
    </div>
</header>
