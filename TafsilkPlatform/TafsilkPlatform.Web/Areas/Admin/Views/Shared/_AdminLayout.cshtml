<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Tafsilk Admin Dashboard">
    <title>@ViewData["Title"] - Tafsilk Admin</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --premium-gold: #D4AF37;
            --premium-black: #1a1a1a;
            --premium-dark-gray: #333;
        }

        body {
            font-family: 'Cairo', sans-serif;
        }
    </style>


    
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <!-- Bootstrap & Site Styles (from _Layout.cshtml) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TafsilkPlatform.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-dark.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-gray-900">

    <!-- Main Layout Wrapper (Standard Scrolling) -->
    <div class="d-flex flex-column min-vh-100">
        
        <!-- Standard Navbar -->
        <partial name="_Navbar" />

        <!-- Main Content Area -->
        <main class="flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <script src="https://buttons.github.io/buttons.js"></script>
    
    <!-- Chart.js for Analytics -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <!-- Scripts from _Layout.cshtml -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Active Navigation State -->
    <!-- Active Navigation State (Removed sidebar logic) -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
