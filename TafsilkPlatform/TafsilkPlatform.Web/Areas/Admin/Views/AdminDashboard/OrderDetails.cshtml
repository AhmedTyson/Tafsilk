@model TafsilkPlatform.Models.Models.Order
@using TafsilkPlatform.Models.Models
@{
    ViewData["Title"] = "Order Details";
}

<div class="glass-card p-4 my-4 container-fluid">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2 small">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminDashboard")" class="text-decoration-none text-muted">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Orders", "AdminDashboard")" class="text-decoration-none text-muted">Orders</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">#@Model.OrderId.ToString().Substring(0, 8)</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 text-white fw-bold text-uppercase" style="letter-spacing: 1px;">Order Details</h1>
                <p class="text-muted small mb-0">View and manage order #@Model.OrderId</p>
            </div>
            <div>
                 @{
                    var statusClass = Model.Status switch
                    {
                        OrderStatus.Delivered => "bg-success bg-opacity-25 text-success border-success",
                        OrderStatus.Cancelled => "bg-danger bg-opacity-25 text-danger border-danger",
                        OrderStatus.Pending => "bg-warning bg-opacity-25 text-warning border-warning",
                        OrderStatus.Processing => "bg-primary bg-opacity-25 text-primary border-primary",
                        OrderStatus.Shipped => "bg-info bg-opacity-25 text-info border-info",
                        _ => "bg-secondary text-light"
                    };
                }
                <span class="badge border @statusClass fs-6 px-3 py-2">@Model.Status</span>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Order Info & Items -->
        <div class="col-lg-8">
            <!-- Status Update Card -->
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header border-secondary text-white fw-bold">
                    <i class="fas fa-edit me-2 text-warning"></i> Manage Order Status
                </div>
                <div class="card-body">
                    <form asp-action="UpdateOrderStatus" method="post" class="row align-items-end g-3">
                        <input type="hidden" name="orderId" value="@Model.OrderId" />
                        <div class="col-md-8">
                            <label for="status" class="form-label text-muted small">Update Status</label>
                            <select id="status" name="status" class="form-select bg-dark text-white border-secondary" style="background-color: #2c2c2c; color: #fff;">
                                @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
                                {
                                    if (Model.Status.ToString() == status.ToString())
                                    {
                                        <option value="@status" selected>@status</option>
                                    }
                                    else
                                    {
                                        <option value="@status">@status</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-save me-1"></i> Update Status
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Items Table -->
            <div class="card bg-transparent border-0">
                <div class="card-header bg-transparent border-0 px-0 pb-2">
                    <h5 class="text-white fw-bold"><i class="fas fa-box me-2 text-primary"></i>Order Items</h5>
                </div>
                <div class="table-responsive rounded border border-secondary">
                    <table class="table table-hover glass-table mb-0 align-middle">
                        <thead class="bg-dark text-uppercase text-muted small">
                            <tr>
                                <th class="py-3 ps-4">Product</th>
                                <th class="py-3">Price</th>
                                <th class="py-3">Quantity</th>
                                <th class="py-3 text-end pe-4">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-white">
                                        @item.Product?.Name
                                    </td>
                                    <td class="text-muted">
                                        EGP @item.UnitPrice.ToString("N2")
                                    </td>
                                    <td class="text-white">
                                        x @item.Quantity
                                    </td>
                                    <td class="text-end pe-4 fw-bold text-success font-monospace">
                                        EGP @((item.UnitPrice * item.Quantity).ToString("N2"))
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-dark border-top border-secondary">
                            @{
                                var subtotal = Model.Items.Sum(i => (decimal)i.UnitPrice * i.Quantity);
                                var deliveryFee = subtotal > 1000 ? 0 : 60;
                            }
                            <tr>
                                <td colspan="3" class="ps-4 py-2 text-end text-muted small">Subtotal</td>
                                <td class="text-end pe-4 text-white">EGP @subtotal.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="ps-4 py-2 text-end text-muted small">Tax (VAT Included)</td>
                                <td class="text-end pe-4 text-muted fst-italic">Included</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="ps-4 py-2 text-end text-muted small">Delivery</td>
                                <td class="text-end pe-4 @(deliveryFee == 0 ? "text-success" : "text-white")">
                                    @(deliveryFee == 0 ? "Free" : "EGP " + deliveryFee.ToString("N2"))
                                </td>
                            </tr>
                            <tr class="border-top border-secondary">
                                <td colspan="3" class="ps-4 py-3 text-end text-white fw-bold">Total Amount</td>
                                <td class="text-end pe-4 fw-bold text-success fs-5">EGP @Model.TotalPrice.ToString("N2")</td>
                            </tr>
                            <tr class="bg-dark bg-opacity-50">
                                <td colspan="3" class="ps-4 py-2 text-end text-warning text-uppercase small">Platform Commission (10%)</td>
                                <td class="text-end pe-4 font-monospace text-warning">EGP @((Model.TotalPrice * 0.10).ToString("N2"))</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Column: Details -->
        <div class="col-lg-4">
            <!-- Customer Info -->
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header border-secondary text-white fw-bold">
                    <i class="fas fa-user me-2 text-info"></i> Customer Details
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small d-block">Name</label>
                        <span class="text-white fw-bold">@Model.Customer?.FullName</span>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small d-block">Email</label>
                        <span class="text-white">@Model.Customer?.User?.Email</span>
                    </div>
                    <div>
                        <label class="text-muted small d-block">Phone</label>
                        <span class="text-white">@(Model.Customer?.User?.PhoneNumber ?? "N/A")</span>
                    </div>
                </div>
            </div>

            <!-- Tailor Info -->
            <div class="card bg-dark border-secondary">
                <div class="card-header border-secondary text-white fw-bold">
                    <i class="fas fa-cut me-2 text-purple-400" style="color: #bf94e4;"></i> Tailor Details
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small d-block">Shop Name</label>
                        <span class="text-white fw-bold">
                            @if (Model.Tailor != null)
                            {
                                @Model.Tailor.ShopName
                            }
                            else
                            {
                                <span class="fst-italic text-muted">Unassigned</span>
                            }
                        </span>
                    </div>
                    @if (Model.Tailor != null)
                    {
                        <div>
                            <label class="text-muted small d-block">Email</label>
                            <span class="text-white">@Model.Tailor.User?.Email</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
