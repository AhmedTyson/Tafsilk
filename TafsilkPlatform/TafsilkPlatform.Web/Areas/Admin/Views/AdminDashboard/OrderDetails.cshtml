@model TafsilkPlatform.Models.Models.Order
@using TafsilkPlatform.Models.Models
@{
    ViewData["Title"] = "Order Details";
}

<div class="glass-card shadow-4 rounded-lg p-4 sm:p-6 xl:p-8 my-6 mx-4">
    <div class="mb-1 w-full">
        <div class="mb-4">
            <nav class="flex mb-5" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2">
                    <li class="inline-flex items-center">
                        <a href="@Url.Action("Index", "AdminDashboard")" class="text-gray-400 hover:text-white inline-flex items-center">
                            <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
                            Home
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                            <a href="@Url.Action("Orders", "AdminDashboard")" class="text-gray-400 hover:text-white ml-1 md:ml-2 text-sm font-medium">Orders</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                            <span class="text-gray-500 ml-1 md:ml-2 text-sm font-medium" aria-current="page">#@Model.OrderId.ToString().Substring(0, 8)</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h1 class="text-xl sm:text-2xl font-semibold text-white">Order Details</h1>
        </div>
    </div>
</div>

<div class="flex flex-col md:flex-row gap-6 p-4">
    <!-- Order Info & Items -->
    <div class="w-full md:w-2/3 space-y-6">
        <!-- Status Card -->
        <div class="glass-card shadow rounded-lg p-4 sm:p-6 xl:p-8">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-white">Order Status</h3>
                @{
                    var statusColor = Model.Status.ToString() switch
                    {
                        "Delivered" => "bg-green-100 text-green-800",
                        "Cancelled" => "bg-red-100 text-red-800",
                        "Pending" => "bg-yellow-100 text-yellow-800",
                        "Processing" => "bg-blue-100 text-blue-800",
                        _ => "bg-gray-100 text-gray-800"
                    };
                }
                <span class="@statusColor text-sm font-medium px-2.5 py-0.5 rounded">
                    @Model.Status
                </span>
            </div>
            
            <form asp-action="UpdateOrderStatus" method="post" class="flex items-end gap-4">
                <input type="hidden" name="orderId" value="@Model.OrderId" />
                <div class="w-full">
                    <label for="status" class="block mb-2 text-sm font-medium text-white">Update Status</label>
                    <select id="status" name="status" class="bg-gray-800 border border-gray-600 text-white text-sm rounded-lg focus:ring-cyan-500 focus:border-cyan-500 block w-full p-2.5">
                        @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
                        {
                            if (Model.Status.ToString() == status.ToString())
                            {
                                <option value="@status" selected>@status</option>
                            }
                            else
                            {
                                <option value="@status">@status</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Update</button>
            </form>
        </div>

        <!-- Items Card -->
        <div class="glass-card shadow rounded-lg p-4 sm:p-6 xl:p-8">
            <h3 class="text-xl font-bold text-white mb-4">Order Items</h3>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-700 glass-table">
                    <thead class="bg-gray-800">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Product</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Price</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Quantity</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Total</th>
                        </tr>
                    </thead>
                    <tbody class="bg-transparent divide-y divide-gray-700">
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                                    @item.Product?.Name
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                                    @item.UnitPrice.ToString("C")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                                    @item.Quantity
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-white font-medium">
                                    @((item.UnitPrice * item.Quantity).ToString("C"))
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-gray-800">
                        <tr>
                            <td colspan="3" class="px-6 py-3 text-right text-sm font-medium text-white">Total Amount:</td>
                            <td class="px-6 py-3 text-sm font-bold text-white">@Model.TotalPrice.ToString("C")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <!-- Sidebar Info -->
    <div class="w-full md:w-1/3 space-y-6">
        <!-- Customer Info -->
        <div class="glass-card shadow rounded-lg p-4 sm:p-6 xl:p-8">
            <h3 class="text-xl font-bold text-white mb-4">Customer Details</h3>
            <div class="space-y-4">
                <div>
                    <label class="text-sm font-medium text-gray-400">Name</label>
                    <div class="text-base font-semibold text-white">@Model.Customer?.FullName</div>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-400">Email</label>
                    <div class="text-sm text-white">@Model.Customer?.User?.Email</div>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-400">Phone</label>
                    <div class="text-sm text-white">@Model.Customer?.User?.PhoneNumber ?? "N/A"</div>
                </div>
            </div>
        </div>

        <!-- Tailor Info -->
        <div class="glass-card shadow rounded-lg p-4 sm:p-6 xl:p-8">
            <h3 class="text-xl font-bold text-white mb-4">Tailor Details</h3>
            <div class="space-y-4">
                <div>
                    <label class="text-sm font-medium text-gray-400">Shop Name</label>
                    <div class="text-base font-semibold text-white">
                        @if (Model.Tailor != null)
                        {
                            @Model.Tailor.ShopName
                        }
                        else
                        {
                            <span class="italic text-gray-500">Unassigned</span>
                        }
                    </div>
                </div>
                @if (Model.Tailor != null)
                {
                    <div>
                        <label class="text-sm font-medium text-gray-400">Email</label>
                        <div class="text-sm text-white">@Model.Tailor.User?.Email</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
