@model TafsilkPlatform.Models.ViewModels.Admin.DashboardHomeViewModel
@{
    ViewData["Title"] = "Dashboard";
    // Layout is handled by _ViewStart.cshtml
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-theme.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="dashboard-title">Dashboard Overview</h1>
            <p class="dashboard-subtitle">Welcome back, Admin</p>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="row g-4 mb-4">
        <!-- Total Sales -->
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="stat-value">@Model.TotalSales.ToString("C0")</div>
                <div class="stat-label">Total Sales</div>
                <div class="mt-2 text-success small">
                    <i class="fas fa-arrow-up me-1"></i> 12.5% vs last month
                </div>
            </div>
        </div>

        <!-- Total Users -->
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon info">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-value">@Model.TotalUsers.ToString("N0")</div>
                <div class="stat-label">Total Users</div>
                <div class="mt-2 text-success small">
                    <i class="fas fa-arrow-up me-1"></i> 32.9% vs last month
                </div>
            </div>
        </div>

        <!-- Net Revenue (Commission) -->
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon success">
                    <i class="fas fa-wallet"></i>
                </div>
                <div class="stat-value">@Model.TotalRevenue.ToString("C0")</div>
                <div class="stat-label">Net Revenue (Commission)</div>
                <div class="mt-2 text-success small">
                    <i class="fas fa-arrow-up me-1"></i> 2.7% vs last month
                </div>
            </div>
        </div>

        <!-- Net Payout (Tailor Earnings) -->
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon info">
                    <i class="fas fa-hand-holding-usd"></i>
                </div>
                <div class="stat-value">@Model.TotalNetPayout.ToString("C0")</div>
                <div class="stat-label">Net Payout (Tailors)</div>
                <div class="mt-2 text-success small">
                    <i class="fas fa-check-circle me-1"></i> Paid to Tailors
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Activity -->
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Activity</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Activity</th>
                                    <th>Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentActivity != null && Model.RecentActivity.Any())
                                {
                                    foreach (var item in Model.RecentActivity.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-bold text-white">@item.ActivityType</div>
                                                <div class="small text-muted">@item.Description</div>
                                            </td>
                                            <td class="text-muted small">
                                                @item.Timestamp.ToString("MMM dd, HH:mm")
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center py-4 text-muted">No recent activity.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Orders & Quick Stats -->
        <div class="col-lg-4">
            <div class="stat-card mb-4">
                <div class="stat-icon warning">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <div class="stat-value">@Model.ActiveOrders.ToString("N0")</div>
                <div class="stat-label">Active Orders</div>
                <div class="mt-2 text-success small">
                    <i class="fas fa-arrow-up me-1"></i> 14.6% vs last month
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">System Status</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stat-icon success me-3" style="width: 40px; height: 40px; font-size: 1rem; margin-bottom: 0;">
                            <i class="fas fa-check"></i>
                        </div>
                        <div>
                            <div class="fw-bold text-white">All Systems Operational</div>
                            <div class="small text-muted">Last check: Just now</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="stat-icon info me-3" style="width: 40px; height: 40px; font-size: 1rem; margin-bottom: 0;">
                            <i class="fas fa-database"></i>
                        </div>
                        <div>
                            <div class="fw-bold text-white">Database Healthy</div>
                            <div class="small text-muted">Response time: 24ms</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

