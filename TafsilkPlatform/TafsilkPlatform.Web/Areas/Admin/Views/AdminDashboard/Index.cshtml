@model TafsilkPlatform.Models.ViewModels.Admin.DashboardHomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <style>
        :root {
            --premium-gold: #D4AF37;
            --premium-black: #1a1a1a;
            --premium-dark-gray: #2c2c2c;
            --premium-light-gray: #f8f9fa;
        }

        /* .dashboard-main handled by Bootstrap classes (h-100 d-flex flex-column) */

        .dashboard-scroll-area {
            flex: 1;
            overflow-y: auto; /* Internal scroll */
            padding-bottom: 20px;
            padding-right: 5px; /* Prevent scrollbar overlapping content */
        }

        /* Balanced Layout Overrides */
        .dashboard-title {
            font-family: 'Playfair Display', serif;
            color: #fff;
            font-weight: 700;
            font-size: 1.75rem; /* Balanced size */
        }

        .dashboard-subtitle {
            color: rgba(255,255,255,0.6);
            font-size: 0.95rem;
        }

        /* Stat Cards Balanced */
        .stat-card {
            background: var(--premium-dark-gray);
            border: 1px solid rgba(255,255,255,0.05);
            border-radius: 14px;
            padding: 20px; /* Balanced padding */
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            border-color: var(--premium-gold);
        }

        .stat-icon {
            width: 48px; /* Balanced size */
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            margin-bottom: 0;
            flex-shrink: 0;
        }

        .stat-content {
            flex-grow: 1;
        }

        .stat-icon.primary { background: rgba(212, 175, 55, 0.15); color: var(--premium-gold); }
        .stat-icon.info { background: rgba(52, 152, 219, 0.15); color: #3498db; }
        .stat-icon.success { background: rgba(46, 204, 113, 0.15); color: #2ecc71; }
        .stat-icon.warning { background: rgba(243, 156, 18, 0.15); color: #f39c12; }

        .stat-value {
            font-size: 1.75rem; /* Balanced */
            font-weight: 700;
            color: #fff;
            line-height: 1.2;
            font-family: 'Cairo', sans-serif;
        }

        .stat-label {
            color: rgba(255,255,255,0.6);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 2px;
        }
        
        /* Balanced Cards */
        .card {
            background: var(--premium-dark-gray);
            border: 1px solid rgba(255,255,255,0.05);
            border-radius: 14px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            margin-bottom: 0;
        }

        .card-header {
            background: transparent;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            padding: 15px 20px;
        }

        .card-title {
            color: #fff;
            font-weight: 600;
            font-family: 'Playfair Display', serif;
            font-size: 1.1rem;
        }

        .card-body {
            padding: 15px 20px;
        }

        /* Table */
        .table th {
            font-size: 0.8rem;
            padding: 10px 8px;
            font-weight: 600;
            color: var(--premium-gold);
            text-transform: uppercase;
        }
        .table td {
            font-size: 0.9rem;
            padding: 10px 8px;
            vertical-align: middle;
            color: rgba(255,255,255,0.8);
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(255,255,255,0.03);
        }

        /* Buttons */
        .btn-sm-custom {
            padding: 5px 15px;
            font-size: 0.85rem;
        }
        
        /* Custom Scrollbar for the dashboard area */
        .custom-scroll::-webkit-scrollbar {
            width: 6px;
        }
        .custom-scroll::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.02);
        }
        .custom-scroll::-webkit-scrollbar-thumb {
            background: rgba(212, 175, 55, 0.3);
            border-radius: 3px;
        }
        .custom-scroll::-webkit-scrollbar-thumb:hover {
            background: rgba(212, 175, 55, 0.5);
        }
    </style>
}

<div class="container-fluid px-4 py-4">

    <!-- Content flows naturally -->
    <div>
        
        <!-- Header (Moved Inside) -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="dashboard-title mb-0 h3">Dashboard Overview</h1>
                <p class="dashboard-subtitle mb-0">Welcome back, @User.Identity?.Name</p>
            </div>
            <div class="text-end text-muted">
                <i class="fas fa-calendar-alt me-2"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="row g-4 mb-4">
            <!-- Total Sales -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card py-4 px-4 h-100">
                    <div class="stat-icon primary mb-3">
                        <i class="fas fa-chart-line fa-lg"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label mb-1">Total Sales</div>
                        <div class="stat-value h2 mb-0">@Model.TotalSales.ToString("N2") <span class="fs-5 opacity-50">EGP</span></div>
                        <div class="small text-success mt-2"><i class="fas fa-arrow-up"></i> Revenue</div>
                    </div>
                </div>
            </div>

            <!-- Total Users -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card py-4 px-4 h-100">
                    <div class="stat-icon info mb-3">
                        <i class="fas fa-users fa-lg"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label mb-1">Total Users</div>
                        <div class="stat-value h2 mb-0">@Model.TotalUsers.ToString("N0")</div>
                        <div class="small text-info mt-2"><i class="fas fa-check-circle"></i> Active</div>
                    </div>
                </div>
            </div>

            <!-- Net Revenue -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card py-4 px-4 h-100">
                    <div class="stat-icon success mb-3">
                        <i class="fas fa-wallet fa-lg"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label mb-1">Net Revenue</div>
                        <div class="stat-value h2 mb-0">@Model.TotalRevenue.ToString("N2") <span class="fs-5 opacity-50">EGP</span></div>
                        <div class="small text-success mt-2"><i class="fas fa-coins"></i> Commission</div>
                    </div>
                </div>
            </div>

            <!-- Active Orders -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card py-4 px-4 h-100">
                    <div class="stat-icon warning mb-3">
                        <i class="fas fa-shopping-bag fa-lg"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label mb-1">Active Orders</div>
                        <div class="stat-value h2 mb-0">@Model.ActiveOrders.ToString("N0")</div>
                        <div class="small text-warning mt-2"><i class="fas fa-clock"></i> In Progress</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts and Content -->
        <div class="row g-4 pb-4">
            <!-- Left Col: Charts -->
            <div class="col-lg-8 d-flex flex-column gap-4">
                <!-- Sales Trend -->
                <div class="card">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Sales Trend</h5>
                        <span class="badge bg-dark border border-secondary text-white-50 p-2">Last 7 Days</span>
                    </div>
                    <div class="card-body p-3" style="position: relative; height: 320px;">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="card">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Recent Activity</h5>
                        <a href="@Url.Action("Orders", "AdminDashboard")" class="btn btn-sm btn-outline-warning rounded-pill px-3">View All</a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 w-100 align-middle">
                                <thead style="background-color: rgba(255,255,255,0.02)">
                                    <tr>
                                        <th class="ps-4 py-3">Activity Type</th>
                                        <th class="py-3">Description</th>
                                        <th class="text-end pe-4 py-3">Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.RecentActivity != null && Model.RecentActivity.Any())
                                    {
                                        foreach (var item in Model.RecentActivity.Take(5))
                                        {
                                            <tr>
                                                <td class="ps-4 fw-bold text-white">@item.ActivityType</td>
                                                <td class="text-muted small text-truncate" style="max-width: 250px;">@item.Description</td>
                                                <td class="text-end pe-4 text-white-50 small">@item.Timestamp.ToString("MMM dd, HH:mm")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="3" class="text-center py-5 text-muted">No recent activity.</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Col: Status & Actions -->
            <div class="col-lg-4 d-flex flex-column gap-4">
                <!-- Order Status Chart -->
                <div class="card">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0">Order Status Distribution</h5>
                    </div>
                    <div class="card-body p-3 d-flex align-items-center justify-content-center" style="position: relative; height: 300px;">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-grid gap-3">
                            <a href="@Url.Action("Users", "AdminDashboard")" class="btn btn-primary py-2 d-flex align-items-center justify-content-center gap-2">
                                <i class="fas fa-users"></i> Manage Users
                            </a>
                            <a href="@Url.Action("Orders", "AdminDashboard")" class="btn btn-outline-light py-2 d-flex align-items-center justify-content-center gap-2">
                                <i class="fas fa-shopping-cart"></i> View All Orders
                            </a>
                            <a href="@Url.Action("Products", "AdminDashboard")" class="btn btn-outline-light py-2 d-flex align-items-center justify-content-center gap-2">
                                <i class="fas fa-box"></i> Manage Products
                            </a>
                            <a href="@Url.Action("ExportIncomeStatement", "AdminDashboard")" class="btn btn-outline-success py-2 d-flex align-items-center justify-content-center gap-2">
                                <i class="fas fa-file-csv"></i> Export Income Statement
                            </a>
                            <button type="button" class="btn btn-outline-danger py-2 d-flex align-items-center justify-content-center gap-2" data-bs-toggle="modal" data-bs-target="#resetMetricsModal">
                                <i class="fas fa-trash-alt"></i> Reset Dashboard Data
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- System Status Small -->
                <div class="card">
                   <div class="card-body py-3 px-4 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-success rounded-circle" style="width: 12px; height: 12px; box-shadow: 0 0 10px #2ecc71;"></div>
                            <span class="fw-bold text-white">All Systems Operational</span>
                        </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>

<!-- Reset Confirmation Modal -->
<div class="modal fade" id="resetMetricsModal" tabindex="-1" aria-labelledby="resetMetricsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-card border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-white" id="resetMetricsModalLabel">Reset Dashboard Data</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <div class="mb-3 text-danger">
                    <i class="fas fa-exclamation-triangle fa-3x"></i>
                </div>
                <h4 class="text-white mb-3">Are you absolutely sure?</h4>
                <p class="text-muted mb-4">
                    This action will <strong>permanently delete all orders</strong> from the database.
                    <br />
                    Sales, Revenue, and Activity logs will be reset to zero.
                    <br />
                    <span class="text-danger fw-bold">This action cannot be undone.</span>
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="ResetMetrics" method="post">
                         <button type="submit" class="btn btn-danger">Yes, Reset Everything</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Chart Defaults
        Chart.defaults.font.size = 11; // Restore readable font size
        Chart.defaults.color = '#adb5bd';
        Chart.defaults.borderColor = 'rgba(255, 255, 255, 0.05)';

        if (window.salesChartInstance) window.salesChartInstance.destroy();
        if (window.statusChartInstance) window.statusChartInstance.destroy();

        // Sales Trend Chart
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        window.salesChartInstance = new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.SalesDates ?? new string[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" })),
                datasets: [{
                    label: 'Sales',
                    data: @Html.Raw(Json.Serialize(ViewBag.SalesValues ?? new decimal[] { 0, 0, 0, 0, 0, 0, 0 })),
                    borderColor: '#D4AF37',
                    backgroundColor: 'rgba(212, 175, 55, 0.1)',
                    tension: 0.4,
                    fill: true,
                    borderWidth: 2,
                    pointRadius: 3,
                    pointHoverRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { display: true, maxTicksLimit: 6 },
                        grid: { display: true, color: 'rgba(255,255,255,0.05)' }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Order Status Chart
        const statusCtx = document.getElementById('statusChart').getContext('2d');
        window.statusChartInstance = new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.StatusLabels ?? new string[] { "Pending", "Processing", "Shipped", "Delivered", "Cancelled" })),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.StatusValues ?? new int[] { 5, 3, 2, 8, 1 })),
                    backgroundColor: [
                        'rgba(243, 156, 18, 0.8)',
                        'rgba(52, 152, 219, 0.8)',
                        'rgba(155, 89, 182, 0.8)',
                        'rgba(46, 204, 113, 0.8)',
                        'rgba(231, 76, 60, 0.8)'
                    ],
                    borderWidth: 0,
                    cutout: '75%'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: { boxWidth: 12, padding: 15, font: { size: 11 } }
                    }
                }
            }
        });
    </script>
}
