@model IEnumerable<TafsilkPlatform.Models.Models.User>
@{
    ViewData["Title"] = "Users";
    var currentStatus = ViewBag.CurrentStatus as string ?? "all";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";
}

<div class="glass-card p-4 my-4 container-fluid">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2 small">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminDashboard")" class="text-decoration-none text-muted">Home</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">Users</li>
            </ol>
        </nav>
        <h1 class="h3 text-white fw-bold text-uppercase" style="letter-spacing: 1px;">All Users</h1>
    </div>

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <form class="d-flex gap-2 flex-grow-1" style="max-width: 400px;" action="@Url.Action("Users")" method="GET">
            <input type="hidden" name="status" value="@currentStatus" />
            <input type="text" name="search" value="@currentSearch" class="form-control bg-dark text-white border-secondary" placeholder="Search for users...">
        </form>
        
        <div class="btn-group" role="group">
            <a href="@Url.Action("Users", new { status = "all" })" class="btn btn-outline-secondary @(currentStatus == "all" ? "active text-white" : "")">All</a>
            <a href="@Url.Action("Users", new { status = "active" })" class="btn btn-outline-secondary @(currentStatus == "active" ? "active text-white" : "")">Active</a>
            <a href="@Url.Action("Users", new { status = "banned" })" class="btn btn-outline-secondary @(currentStatus == "banned" ? "active text-white text-danger" : "")">Banned</a>
        </div>
    </div>

    <div class="table-responsive rounded">
        <table class="table table-hover glass-table mb-0 align-middle">
            <thead class="bg-dark text-uppercase text-muted small">
                <tr>
                    <th class="py-3 ps-4">Name/Email</th>
                    <th class="py-3">Role</th>
                    <th class="py-3">Status</th>
                    <th class="py-3">Joined</th>
                    <th class="py-3 text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ps-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 40px; height: 40px;">
                                @(item.Email?.Substring(0, 1).ToUpper() ?? "U")
                            </div>
                            <div class="ms-3">
                                <div class="fw-bold text-white">
                                    @if (item.CustomerProfile != null)
                                    {
                                        @item.CustomerProfile.FullName
                                    }
                                    else if (item.TailorProfile != null)
                                    {
                                        @item.TailorProfile.ShopName
                                    }
                                    else
                                    {
                                        <span class="fst-italic text-muted">No Profile</span>
                                    }
                                </div>
                                <div class="small text-muted">@item.Email</div>
                            </div>
                        </div>
                    </td>
                    <td><span class="badge bg-dark border border-secondary text-light">@item.Role?.Name</span></td>
                    <td>
                        @if (item.IsBanned)
                        {
                            <span class="badge bg-danger bg-opacity-25 text-danger border border-danger">Banned</span>
                        }
                        else if (!item.IsActive)
                        {
                            <span class="badge bg-secondary text-light">Inactive</span>
                        }
                        else if (!item.EmailVerified)
                        {
                            <span class="badge bg-warning bg-opacity-25 text-warning border border-warning">Pending</span>
                        }
                        else
                        {
                            <span class="badge bg-success bg-opacity-25 text-success border border-success">Active</span>
                        }
                    </td>
                    <td class="text-muted small">@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td class="text-end pe-4">
                        <div class="d-flex justify-content-end gap-2">
                            @if (!item.IsBanned)
                            {
                                <button type="button" onclick="openBanModal('@item.Id', '@item.Email')" class="btn btn-sm btn-outline-warning">
                                    <i class="fas fa-ban me-1"></i> Ban
                                </button>
                            }
                            else
                            {
                                <form asp-action="UnbanUser" method="post" class="d-inline">
                                    <input type="hidden" name="userId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-undo me-1"></i> Unban
                                    </button>
                                </form>
                            }
                            
                            <button type="button" onclick="openDeleteModal('@item.Id', '@item.Email')" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<!-- Ban Modal -->
<div class="modal fade" id="banUserModal" tabindex="-1" aria-labelledby="banUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-card border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-white" id="banUserModalLabel">Ban User</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <i class="fas fa-ban text-warning fa-3x mb-3"></i>
                <h4 class="text-white">Ban Access</h4>
                <p class="text-muted">Are you sure you want to ban <strong id="ban-user-email" class="text-warning"></strong>?</p>
                
                <form asp-action="BanUser" method="post" class="text-start mt-4">
                    <input type="hidden" name="userId" id="ban-user-id" />
                    
                    <div class="mb-3">
                        <label for="ban-reason" class="form-label text-white text-sm">Reason for Ban</label>
                        <input type="text" name="reason" id="ban-reason" class="form-control bg-dark text-white border-secondary" placeholder="e.g. Violation of terms" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="ban-days" class="form-label text-white text-sm">Duration (Days)</label>
                        <input type="number" name="days" id="ban-days" class="form-control bg-dark text-white border-secondary" placeholder="Leave empty for permanent">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning fw-bold">Confirm Ban</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content glass-card border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-white" id="deleteUserModalLabel">Delete User</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <i class="fas fa-exclamation-triangle text-danger fa-3x mb-3"></i>
                <h4 class="text-white">Delete Account</h4>
                <p class="text-muted">Do you really want to delete <strong id="delete-user-email" class="text-danger"></strong>? <br>This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-secondary justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteUser" method="post" class="d-inline">
                    <input type="hidden" name="userId" id="delete-user-id" />
                    <button type="submit" class="btn btn-danger">Delete User</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openBanModal(userId, email) {
            document.getElementById('ban-user-id').value = userId;
            document.getElementById('ban-user-email').textContent = email;
            new bootstrap.Modal(document.getElementById('banUserModal')).show();
        }

        function openDeleteModal(userId, email) {
            document.getElementById('delete-user-id').value = userId;
            document.getElementById('delete-user-email').textContent = email;
            new bootstrap.Modal(document.getElementById('deleteUserModal')).show();
        }
    </script>
}
