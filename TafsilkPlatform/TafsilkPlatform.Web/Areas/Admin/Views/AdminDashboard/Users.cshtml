@model IEnumerable<TafsilkPlatform.Models.Models.User>
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout_v2.cshtml";
}

<div class="page-header">
    <h1 class="page-title">User Management</h1>
    <div class="page-actions">
        <button class="btn btn-outline">
            <i class="fas fa-filter"></i>
            <span>Filter</span>
        </button>
        <button class="btn btn-primary">
            <i class="fas fa-plus"></i>
            <span>Add User</span>
        </button>
    </div>
</div>

<div class="card">
    <table class="datagrid">
        <thead>
            <tr>
                <th>User</th>
                <th>Role</th>
                <th>Status</th>
                <th>Email Verified</th>
                <th>Registration Date</th>
                <th>Last Login</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center py-5 text-secondary">
                        <i class="fas fa-users-slash fa-2x mb-2 opacity-25"></i>
                        <p>No users found</p>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var user in Model)
                {
                    var isOnline = user.LastLoginAt.HasValue && 
                                 (DateTime.UtcNow - user.LastLoginAt.Value).TotalMinutes < 30;
                    var isBanned = !user.IsActive;

                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <div class="avatar bg-brand-light text-brand-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; font-size: 0.75rem;">
                                    @if (user.TailorProfile?.ProfilePictureData != null)
                                    {
                                        <img src="@Url.Action("ProfilePicture", "Account", new { id = user.Id })" 
                                             alt="@user.Email" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        @(user.Email?.Substring(0, 1).ToUpper())
                                    }
                                </div>
                                <div class="d-flex flex-column">
                                    <span class="font-medium text-primary">
                                        @(user.CustomerProfile?.FullName ?? user.TailorProfile?.FullName ?? "User")
                                    </span>
                                    <span class="text-xs text-secondary">@user.Email</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            @{
                                var roleBadgeClass = user.Role?.Name switch {
                                    "Admin" => "badge-danger",
                                    "Tailor" => "badge-warning",
                                    _ => "badge-success"
                                };
                                var roleText = user.Role?.Name switch
                                {
                                    "Customer" => "Customer",
                                    "Tailor" => "Tailor",
                                    "Admin" => "Admin",
                                    _ => "Unknown"
                                };
                            }
                            <span class="badge @roleBadgeClass">@roleText</span>
                        </td>
                        <td>
                            @if (isBanned)
                            {
                                <span class="badge badge-danger">Banned</span>
                            }
                            else if (isOnline)
                            {
                                <span class="badge badge-success">Online</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary" style="background: var(--surface-3); color: var(--text-secondary);">Offline</span>
                            }
                        </td>
                        <td>
                            @if (user.EmailVerified)
                            {
                                <i class="fas fa-check-circle text-success" title="Verified"></i>
                            }
                            else
                            {
                                <i class="fas fa-times-circle text-danger" title="Unverified"></i>
                            }
                        </td>
                        <td class="text-sm">@user.CreatedAt.ToString("yyyy/MM/dd")</td>
                        <td class="text-sm">
                            @(user.LastLoginAt.HasValue ? user.LastLoginAt.Value.ToString("yyyy/MM/dd HH:mm") : "-")
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-outline text-primary border-primary" 
                                        onclick="viewUserDetails('@user.Id')" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </button>

                                @if (user.Role?.Name != "Admin")
                                {
                                    if (isBanned)
                                    {
                                        <form method="post" asp-action="UnbanUser" asp-route-userId="@user.Id" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline text-success border-success" title="Unban User">
                                                <i class="fas fa-user-check"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline text-danger border-danger" 
                                                onclick="confirmBan('@user.Id', '@(user.Email)')" title="Ban User">
                                            <i class="fas fa-ban"></i>
                                        </button>
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    
    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="p-3 border-top border-subtle d-flex justify-content-center gap-2">
            <button class="btn btn-sm btn-outline" 
                    disabled="@(ViewBag.CurrentPage == 1)"
                    onclick="location.href='?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter&status=@ViewBag.StatusFilter'">
                <i class="fas fa-chevron-right"></i>
            </button>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <button class="btn btn-sm @(i == ViewBag.CurrentPage ? "btn-primary" : "btn-outline")"
                        onclick="location.href='?page=@i&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter&status=@ViewBag.StatusFilter'">
                    @i
                </button>
            }

            <button class="btn btn-sm btn-outline" 
                    disabled="@(ViewBag.CurrentPage == ViewBag.TotalPages)"
                    onclick="location.href='?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter&status=@ViewBag.StatusFilter'">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>
    }
</div>

<!-- Ban Confirmation Modal -->
<div class="modal fade" id="banModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius: var(--radius-lg); border: none; box-shadow: var(--shadow-lg);">
            <div class="modal-header border-bottom border-subtle">
                <h5 class="modal-title font-bold">Confirm Ban</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to ban user <span id="banUserEmail" class="font-bold text-primary"></span>?</p>
                <form id="banForm" method="post" asp-action="BanUser">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="banUserId" name="userId" />
                    <div class="mb-3">
                        <label class="form-label text-sm font-medium">Ban Reason</label>
                        <textarea name="reason" class="form-control" rows="3" required 
                                  style="background: var(--surface-2); border: 1px solid var(--border-subtle);"></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" style="background: var(--danger-bg); color: var(--danger-text); border: none;">Confirm Ban</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmBan(userId, email) {
            document.getElementById('banUserId').value = userId;
            document.getElementById('banUserEmail').textContent = email;
            new bootstrap.Modal(document.getElementById('banModal')).show();
        }

        function viewUserDetails(userId) {
            window.location.href = '@Url.Action("UserDetails", "AdminDashboard")?id=' + userId;
        }
    </script>
}
