                            </div>
                            
                            <div class="search-options">
                                <label class="search-chip">
                                    <input type="checkbox" name="category" value="men">
                                    <i class="fas fa-male"></i> Men
                                </label>
                                <label class="search-chip">
                                    <input type="checkbox" name="category" value="women">
                                    <i class="fas fa-female"></i> Women
                                </label>
                                <label class="search-chip">
                                    <input type="checkbox" name="category" value="kids">
                                    <i class="fas fa-child"></i> Kids
                                </label>
                                <label class="search-chip">
                                    <input type="checkbox" name="category" value="uniforms">
                                    <i class="fas fa-user-tie"></i> Uniforms
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trust Indicators -->
<div class="trust-bar">
    <div class="container">
        <div class="trust-indicators">
            <div class="trust-item">
                <span class="trust-number" data-count="300">300+</span>
                <span class="trust-label">Trusted Tailors</span>
            </div>
            <div class="trust-item">
                <span class="trust-number" data-count="15000">15k+</span>
                <span class="trust-label">Completed Orders</span>
            </div>
            <div class="trust-item">
                <span class="trust-number">4.9</span>
                <span class="trust-label">Average Rating</span>
            </div>
            <div class="trust-item">
                <span class="trust-number">24/7</span>
                <span class="trust-label">Customer Support</span>
            </div>
        </div>
    </div>
</div>

<!-- Value Propositions -->
<section class="value-props">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Why Choose Tafsilk?</h2>
            <p class="section-subtitle">We provide a seamless and reliable experience for all your tailoring needs</p>
        </div>
        
        <div class="props-grid">
