@{
    ViewData["Title"] = "Contact Us | Tafsilk";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <style>
        /* Specific adjustments for Contact page if needed */
        .textarea-icon {
            top: 20px !important;
            transform: none !important;
        }
        .contact-info-item {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
            color: rgba(255, 255, 255, 0.7);
        }
        .contact-info-item i {
            width: 24px;
            text-align: center;
            margin-right: 1rem;
            color: #c9a227; /* Gold accent */
        }
        .contact-info-item h6 {
            color: #fff;
            margin: 0;
            font-size: 0.9rem;
            font-weight: 600;
        }
        .contact-info-item p {
            margin: 0;
            font-size: 0.85rem;
        }
        .social-links a {
            color: rgba(255, 255, 255, 0.6);
            transition: color 0.2s;
        }
        .social-links a:hover {
            color: #fff;
        }
    </style>
}

<!-- Background Blobs -->
<div class="auth-background">
    <div class="auth-blob blob-1"></div>
    <div class="auth-blob blob-2"></div>
</div>

<div class="auth-container">
    <!-- Left Side: Visual -->
    <div class="auth-visual">
        <div class="visual-content">
            <a href="/Home/Index" class="brand-logo text-decoration-none">
                <i class="fas fa-cut"></i> Tafsilk
            </a>
            <h1 class="visual-heading">Get in<br>Touch.</h1>
            <p class="visual-text">
                Have a question or want to work together? We'd love to hear from you.
            </p>

            <div class="mt-5">
                <div class="contact-info-item">
                    <i class="fas fa-phone-alt fa-lg"></i>
                    <div>
                        <h6>Phone</h6>
                        <p>+20 123 456 7890</p>
                    </div>
                </div>

                <div class="contact-info-item">
                    <i class="fas fa-envelope fa-lg"></i>
                    <div>
                        <h6>Email</h6>
                        <p>support@tafsilk.com</p>
                    </div>
                </div>

                <div class="contact-info-item">
                    <i class="fas fa-map-marker-alt fa-lg"></i>
                    <div>
                        <h6>Location</h6>
                        <p>Cairo, Egypt</p>
                    </div>
                </div>
            </div>

            <div class="mt-5 social-links d-flex gap-4">
                <a href="#"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="#"><i class="fab fa-instagram fa-lg"></i></a>
                <a href="#"><i class="fab fa-linkedin-in fa-lg"></i></a>
            </div>
        </div>
    </div>

    <!-- Right Side: Form -->
    <div class="auth-form-container">
        <div class="auth-header">
            <h2 class="auth-title">Send Message</h2>
            <p class="auth-subtitle">We'll get back to you soon</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Contact" asp-controller="Home" method="post" id="contactForm">
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <i class="fas fa-user input-icon"></i>
                <input type="text" id="name" name="name" class="form-control" placeholder="Your Name" required />
            </div>

            <div class="form-group">
                <i class="fas fa-envelope input-icon"></i>
                <input type="email" id="email" name="email" class="form-control" placeholder="Email Address" required />
            </div>

            <div class="form-group">
                <i class="fas fa-tag input-icon"></i>
                <input type="text" id="subject" name="subject" class="form-control" placeholder="Subject" />
            </div>

            <div class="form-group">
                <i class="fas fa-comment-alt input-icon textarea-icon"></i>
                <textarea id="message" name="message" class="form-control" placeholder="Your Message..." rows="4" style="padding-top: 15px; min-height: 120px;" required></textarea>
            </div>

            <button type="submit" class="btn-premium">
                <span>Send Message</span>
                <i class="fas fa-paper-plane"></i>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Add any specific JS interactions here
    </script>
}
