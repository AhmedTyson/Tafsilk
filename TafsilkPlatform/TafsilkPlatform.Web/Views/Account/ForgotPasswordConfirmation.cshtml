@{
    ViewBag.Title = "Check Your Email | Tafsilk";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Background Blobs -->
<div class="auth-background">
    <div class="auth-blob blob-1"></div>
    <div class="auth-blob blob-2"></div>
</div>

<div class="auth-container">
    <!-- Left Side: Visual -->
    <div class="auth-visual">
        <div class="visual-content">
            <a href="/Home/Index" class="brand-logo text-decoration-none">
                <i class="fas fa-cut"></i> Tafsilk
            </a>
            <h1 class="visual-heading">Check<br>Inbox.</h1>
            <p class="visual-text">
                We've sent you instructions on how to reset your password.
            </p>
        </div>
    </div>

    <!-- Right Side: Content -->
    <div class="auth-form-container">
        <div class="auth-header">
            <h2 class="auth-title">Email Sent</h2>
            <p class="auth-subtitle">Please check your email inbox</p>
        </div>

        <div class="text-center mb-4">
            <div class="mb-4">
                <i class="fas fa-envelope-open-text fa-4x text-primary"></i>
            </div>
            <p class="text-muted">
                If an account exists for that email, we have sent a password reset link. Please check your spam folder if you don't see it.
            </p>
        </div>

        <a href="@Url.Action("Login", "Account")" class="btn-premium">
            <span>Back to Login</span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>
