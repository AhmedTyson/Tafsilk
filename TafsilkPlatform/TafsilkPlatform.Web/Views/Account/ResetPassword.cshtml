@model TafsilkPlatform.Models.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password | Tafsilk";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Background Blobs -->
<div class="auth-background">
    <div class="auth-blob blob-1"></div>
    <div class="auth-blob blob-2"></div>
</div>

<div class="auth-container">
    <!-- Left Side: Visual -->
    <div class="auth-visual">
        <div class="visual-content">
            <a href="/Home/Index" class="brand-logo text-decoration-none">
                <i class="fas fa-cut"></i> Tafsilk
            </a>
            <h1 class="visual-heading">New<br>Start.</h1>
            <p class="visual-text">
                Create a new strong password to secure your account.
            </p>
        </div>
    </div>

    <!-- Right Side: Form -->
    <div class="auth-form-container">
        <div class="auth-header">
            <h2 class="auth-title">Reset Password</h2>
            <p class="auth-subtitle">Enter your new password below</p>
        </div>

        <form asp-action="ResetPassword" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mb-4" role="alert">
                    @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                </div>
            }

            <div class="form-group">
                <i class="fas fa-lock input-icon"></i>
                <input asp-for="NewPassword" class="form-control" placeholder="New Password" required />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-lock input-icon"></i>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-premium">
                <span>Reset Password</span>
                <i class="fas fa-check-circle"></i>
            </button>
        </form>
    </div>
</div>
