@{
    ViewBag.Title = "Password Reset | Tafsilk";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Background Blobs -->
<div class="auth-background">
    <div class="auth-blob blob-1"></div>
    <div class="auth-blob blob-2"></div>
</div>

<div class="auth-container">
    <!-- Left Side: Visual -->
    <div class="auth-visual">
        <div class="visual-content">
            <a href="/Home/Index" class="brand-logo text-decoration-none">
                <i class="fas fa-cut"></i> Tafsilk
            </a>
            <h1 class="visual-heading">All<br>Set.</h1>
            <p class="visual-text">
                Your password has been successfully reset. You can now log in with your new credentials.
            </p>
        </div>
    </div>

    <!-- Right Side: Content -->
    <div class="auth-form-container">
        <div class="auth-header">
            <h2 class="auth-title">Success!</h2>
            <p class="auth-subtitle">Your password has been reset</p>
        </div>

        <div class="text-center mb-4">
            <div class="mb-4">
                <i class="fas fa-check-circle fa-4x text-success"></i>
            </div>
            <p class="text-muted">
                Your account is secure and ready to use.
            </p>
        </div>

        <a href="@Url.Action("Login", "Account")" class="btn-premium">
            <span>Sign In Now</span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>
