@model TafsilkPlatform.Models.Models.CustomerProfile
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .settings-page { background: #f8f9fa; min-height: 100vh; padding: 2rem 0; }
        .settings-card { background: #fff; border-radius: 1rem; box-shadow: 0 2px 8px rgba(0,0,0,0.05); padding: 2rem; max-width: 600px; margin: 0 auto; }
        .settings-title { font-size: 1.5rem; font-weight: 700; color: #2c5aa0; margin-bottom: 1.5rem; }
        .form-group { margin-bottom: 1.25rem; }
        .form-label { font-weight: 600; color: #2c3e50; margin-bottom: 0.5rem; display: block; }
        .form-control { width: 100%; padding: 0.75rem 1rem; border-radius: 0.5rem; border: 1px solid #e1e8ed; font-size: 1rem; }
        .btn-primary { background: #2c5aa0; color: #fff; border: none; border-radius: 0.5rem; padding: 0.75rem 1.5rem; font-weight: 600; }
        .btn-primary:hover { background: #1e3f73; }
        .divider { border-top: 1px solid #e1e8ed; margin: 2rem 0; }
    </style>
}
<div class="settings-page">
    <div class="settings-card">
        <div class="settings-title"><i class="fas fa-cog"></i> Account Settings</div>
        <form asp-action="UpdateCustomerInfo" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="form-label">Full Name</label>
                <input type="text" name="FullName" class="form-control" value="@Model.FullName" />
            </div>
            <div class="form-group">
                <label class="form-label">Phone Number</label>
                <input type="text" name="PhoneNumber" class="form-control" value="@Model.User?.PhoneNumber" />
            </div>
            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" value="@Model.User?.Email" readonly />
            </div>
            <button type="submit" class="btn-primary"><i class="fas fa-save"></i> Save Changes</button>
        </form>
        <div class="divider"></div>
        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()
            <div class="settings-title" style="font-size:1.1rem;"><i class="fas fa-key"></i> Change Password</div>
            <div class="form-group">
                <label class="form-label">Current Password</label>
                <input type="password" name="CurrentPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">New Password</label>
                <input type="password" name="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Confirm New Password</label>
                <input type="password" name="ConfirmPassword" class="form-control" />
            </div>
            <button type="submit" class="btn-primary"><i class="fas fa-save"></i> Change Password</button>
        </form>
    </div>
</div>
