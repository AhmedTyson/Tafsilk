@{
    ViewBag.Title = "Forgot Password | Tafsilk";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Background Blobs -->
<div class="auth-background">
    <div class="auth-blob blob-1"></div>
    <div class="auth-blob blob-2"></div>
</div>

<div class="auth-container">
    <!-- Left Side: Visual -->
    <div class="auth-visual">
        <div class="visual-content">
            <a href="/Home/Index" class="brand-logo text-decoration-none">
                <i class="fas fa-cut"></i> Tafsilk
            </a>
            <h1 class="visual-heading">Recover<br>Access.</h1>
            <p class="visual-text">
                Don't worry, it happens. We'll help you get back to your account in no time.
            </p>
        </div>
    </div>

    <!-- Right Side: Form -->
    <div class="auth-form-container">
        <div class="auth-header">
            <h2 class="auth-title">Forgot Password?</h2>
            <p class="auth-subtitle">Enter your email to reset it</p>
        </div>

        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mb-4" role="alert">
                    @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                </div>
            }

            <div class="form-group">
                <i class="fas fa-envelope input-icon"></i>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Email Address" required />
            </div>

            <button type="submit" class="btn-premium">
                <span>Send Reset Link</span>
                <i class="fas fa-paper-plane"></i>
            </button>

            <div class="text-center mt-4">
                <p class="text-muted small">
                    Remember your password? 
                    <a href="@Url.Action("Login", "Account")" class="auth-link fw-bold">Sign In</a>
                </p>
            </div>
        </form>
    </div>
</div>
