@model TafsilkPlatform.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 pt-5 pb-3 text-center">
                    <div class="mb-3">
                        <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center text-primary shadow-sm" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                    </div>
                    <h4 class="fw-bold mb-1">Change Password</h4>
                    <p class="text-muted small">Ensure your account stays secure</p>
                </div>
                <div class="card-body px-4 px-md-5 pb-5">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="CurrentPassword" class="form-control bg-light border-0" placeholder="Current Password" />
                            <label asp-for="CurrentPassword" class="text-muted">Current Password</label>
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="NewPassword" class="form-control bg-light border-0" placeholder="New Password" />
                            <label asp-for="NewPassword" class="text-muted">New Password</label>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="ConfirmPassword" class="form-control bg-light border-0" placeholder="Confirm Password" />
                            <label asp-for="ConfirmPassword" class="text-muted">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary py-3 rounded-pill fw-bold shadow-sm transition-all">
                                Update Password
                            </button>
                            <a href="@Url.Action("CustomerProfile", "Profiles")" class="btn btn-light py-3 rounded-pill fw-medium text-muted transition-all">
                                Back to Profile
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-control:focus {
        background-color: #fff;
        box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.15);
        border-color: rgba(var(--bs-primary-rgb), 0.3);
    }

    .btn-primary {
        background: linear-gradient(45deg, var(--bs-primary), #4a90e2);
        border: none;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(var(--bs-primary-rgb), 0.3) !important;
    }

    .btn-light:hover {
        background-color: #e9ecef;
        transform: translateY(-2px);
    }
</style>
