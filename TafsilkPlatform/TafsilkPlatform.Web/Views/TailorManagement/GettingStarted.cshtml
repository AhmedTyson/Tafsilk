@{
    ViewData["Title"] = "Quick Start Guide";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var breadcrumbs = new List<(string Text, string? Url)>
    {
        ("Dashboard", Url.Action("Tailor", "Dashboards")),
        ("Start Guide", "")
    };
}

@await Html.PartialAsync("_Breadcrumb", breadcrumbs)

<div class="container tailor-management-container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Hero Header -->
            <div class="text-center mb-5">
                <div class="mb-4">
                    <i class="fas fa-graduation-cap" style="font-size: 5rem; color: var(--primary-color);"></i>
                </div>
                <h1 style="font-size: 2.5rem; font-weight: 700; color: var(--text-primary);">
                    Welcome to Tafsilk! ðŸŽ‰
                </h1>
                <p class="page-description" style="font-size: 1.25rem; max-width: 600px; margin: 1rem auto;">
                    Your comprehensive guide to setting up your account and receiving orders
                </p>
            </div>

            <!-- Getting Started Steps -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-list-check text-success"></i>
                        Quick Start Steps
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Step 1 -->
                    <div class="d-flex align-items-start gap-4 mb-4 pb-4" style="border-bottom: 2px dashed var(--border-color);">
                        <div class="stat-icon primary" style="width: 60px; height: 60px; font-size: 1.5rem;">
                            1
                        </div>
                        <div class="flex-grow-1">
                            <h4 style="font-weight: 700; margin-bottom: 0.5rem;">Complete Your Profile</h4>
                            <p class="text-muted mb-3">
                                Add your personal info, workshop location, working hours, and profile picture
                            </p>
                            <a href="@Url.Action("EditTailorProfile", "Profiles")" class="btn btn-primary">
                                <i class="fas fa-user-edit"></i>
                                Complete Profile
                            </a>
                        </div>
                    </div>

                    <!-- Step 2 -->
                    <div class="d-flex align-items-start gap-4 mb-4 pb-4" style="border-bottom: 2px dashed var(--border-color);">
                        <div class="stat-icon success" style="width: 60px; height: 60px; font-size: 1.5rem;">
                            2
                        </div>
                        <div class="flex-grow-1">
                            <h4 style="font-weight: 700; margin-bottom: 0.5rem;">Add Your Services</h4>
                            <p class="text-muted mb-3">
                                Define services you offer with prices and estimated duration
                            </p>
                            <a href="@Url.Action("ManageServices", "TailorManagement")" class="btn btn-success">
                                <i class="fas fa-concierge-bell"></i>
                                Add Services
                            </a>
                        </div>
                    </div>

                    <!-- Step 3 -->
                    <div class="d-flex align-items-start gap-4 mb-4 pb-4" style="border-bottom: 2px dashed var(--border-color);">
                        <div class="stat-icon info" style="width: 60px; height: 60px; font-size: 1.5rem;">
                            3
                        </div>
                        <div class="flex-grow-1">
                            <h4 style="font-weight: 700; margin-bottom: 0.5rem;">Showcase Previous Work</h4>
                            <p class="text-muted mb-3">
                                Add photos of your previous work to attract more customers and increase credibility
                            </p>
                            <a href="@Url.Action("ManagePortfolio", "TailorManagement")" class="btn btn-warning">
                                <i class="fas fa-images"></i>
                                Add Portfolio Images
                            </a>
                        </div>
                    </div>

                    <!-- Step 4 -->
                    <div class="d-flex align-items-start gap-4">
                        <div class="stat-icon warning" style="width: 60px; height: 60px; font-size: 1.5rem;">
                            4
                        </div>
                        <div class="flex-grow-1">
                            <h4 style="font-weight: 700; margin-bottom: 0.5rem;">Get Verified</h4>
                            <p class="text-muted mb-3">
                                After completing all steps, our team will review your account within 24-48 hours
                            </p>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Note:</strong> Verification increases customer trust and improves search visibility
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="stat-card text-center">
                        <div class="stat-icon primary" style="margin: 0 auto 1rem;">
                            <i class="fas fa-book"></i>
                        </div>
                        <h5 style="font-weight: 700; margin-bottom: 0.75rem;">FAQ</h5>
                        <p class="text-muted mb-3">Answers to most common questions</p>
                        <a href="#" class="btn btn-outline-primary">
                            View FAQ
                        </a>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="stat-card text-center">
                        <div class="stat-icon success" style="margin: 0 auto 1rem;">
                            <i class="fas fa-video"></i>
                        </div>
                        <h5 style="font-weight: 700; margin-bottom: 0.75rem;">Tutorial Videos</h5>
                        <p class="text-muted mb-3">Watch explanatory videos on how to use the platform</p>
                        <a href="#" class="btn btn-outline-success">
                            Watch Videos
                        </a>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="stat-card text-center">
                        <div class="stat-icon warning" style="margin: 0 auto 1rem;">
                            <i class="fas fa-headset"></i>
                        </div>
                        <h5 style="font-weight: 700; margin-bottom: 0.75rem;">Support</h5>
                        <p class="text-muted mb-3">Contact support team for help</p>
                        <a href="#" class="btn btn-outline-warning">
                            Contact Us
                        </a>
                    </div>
                </div>
            </div>

            <!-- Tips & Best Practices -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-lightbulb text-warning"></i>
                        Tips for Success
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="stat-icon success" style="width: 50px; height: 50px;">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div>
                                    <h5 style="font-weight: 700; margin-bottom: 0.5rem;">High Quality Images</h5>
                                    <p class="text-muted mb-0">
                                        Use clear, high-quality images of your work to attract more customers
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="stat-icon info" style="width: 50px; height: 50px;">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div>
                                    <h5 style="font-weight: 700;">Be Punctual</h5>
                                    <p class="text-muted mb-0">
                                        Set realistic durations and commit to delivering work on time
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="stat-icon primary" style="width: 50px; height: 50px;">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div>
                                    <h5 style="font-weight: 700; margin-bottom: 0.5rem;">Focus on Ratings</h5>
                                    <p class="text-muted mb-0">
                                        Provide excellent service to get positive ratings that increase credibility
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3">
                                <div class="stat-icon warning" style="width: 50px; height: 50px;">
                                    <i class="fas fa-comments"></i>
                                </div>
                                <div>
                                    <h5 style="font-weight: 700;">Communicate Effectively</h5>
                                    <p class="text-muted mb-0">
                                        Respond to customer inquiries quickly and professionally
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CTA Section -->
            <div class="card text-center">
                <div class="card-body" style="padding: 3rem;">
                    <h3 style="font-weight: 700; margin-bottom: 1rem;">Ready to Start?</h3>
                    <p class="text-muted mb-4" style="font-size: 1.125rem;">
                        Start setting up your account and receiving orders now
                    </p>
                    <a href="@Url.Action("Tailor", "Dashboards")" class="btn btn-primary btn-lg">
                        <i class="fas fa-arrow-left"></i>
                        Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
