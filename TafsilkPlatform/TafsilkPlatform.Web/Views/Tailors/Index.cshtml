@model List<TafsilkPlatform.Models.Models.TailorProfile>

@{
    ViewData["Title"] = "Browse Tailors | Tafsilk";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentCity = ViewBag.CurrentCity as string;
    var currentSpec = ViewBag.CurrentSpecialization as string;
    var cities = ViewBag.Cities as List<string> ?? new List<string>();
    var specializations = ViewBag.Specializations as List<string> ?? new List<string>();
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tailors-premium.css" asp-append-version="true" />
    <style>
        .search-box {
            position: relative;
            flex: 1;
            max-width: 400px;
        }

        .search-input {
            width: 100%;
            padding: 12px 40px 12px 16px;
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            font-size: 0.95rem;
            transition: all 0.2s;
        }

        .search-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(201, 162, 39, 0.1);
            outline: none;
        }

        .search-icon {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
        }
    </style>
}

<!-- Hero Section -->
<div class="tailors-hero">
    <div class="hero-content">
        <h1 class="hero-title">Professional Tailors</h1>
        <p class="hero-subtitle">Connect with expert craftsmen for your perfect fit</p>
    </div>
</div>

<div class="store-container">
    <!-- Sidebar Filters -->
    <aside class="filter-sidebar">
        <form id="filterForm" method="get" action="@Url.Action("Index", "Tailors")">
            <div class="filter-group">
                <div class="filter-title">
                    City
                    @if (!string.IsNullOrEmpty(currentCity))
                    {
                        <a href="@Url.Action("Index", new { specialization = currentSpec })" class="btn btn-sm text-muted" style="padding: 0; font-size: 0.8rem;">Clear</a>
                    }
                </div>
                <select name="city" class="filter-select" onchange="this.form.submit()">
                    <option value="">All Cities</option>
                    @foreach (var city in cities)
                    {
                        <option value="@city" selected="@(city == currentCity)">@city</option>
                    }
                </select>
            </div>

            <div class="filter-group">
                <div class="filter-title">
                    Specialization
                    @if (!string.IsNullOrEmpty(currentSpec))
                    {
                        <a href="@Url.Action("Index", new { city = currentCity })" class="btn btn-sm text-muted" style="padding: 0; font-size: 0.8rem;">Clear</a>
                    }
                </div>
                <select name="specialization" class="filter-select" onchange="this.form.submit()">
                    <option value="">All Specializations</option>
                    @foreach (var spec in specializations)
                    {
                        <option value="@spec" selected="@(spec == currentSpec)">@spec</option>
                    }
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mt-3">Apply Filters</button>
        </form>
    </aside>

    <!-- Main Content -->
    <main>
        <div class="store-header">
            <div class="search-box">
                <input type="text" form="filterForm" name="search" class="search-input" placeholder="Search tailors..." value="@ViewBag.CurrentSearch">
                <i class="fas fa-search search-icon"></i>
            </div>
            
            <div style="display: flex; align-items: center; gap: 10px;">
                <span style="color: var(--text-secondary); font-size: 0.9rem;">@totalCount tailors found</span>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="tailors-grid">
                @foreach (var tailor in Model)
                {
                    <a href="@Url.Action("ViewPublicTailorProfile", "TailorPortfolio", new { area = "Tailor", id = tailor.Id })" class="tailor-card">
                        <div class="tailor-image-wrapper">
                            @{
                                var hasProfilePic = !string.IsNullOrWhiteSpace(tailor.ProfileImageUrl) || tailor.ProfilePictureData != null;
                            }

                            @if (hasProfilePic)
                            {
                                <img src="@Url.Action("GetTailorProfilePicture", "Profiles", new { id = tailor.Id })" 
                                     alt="@tailor.ShopName" 
                                     class="tailor-image" />
                            }
                            else
                            {
                                <div class="tailor-image" style="display: flex; align-items: center; justify-content: center; background: #f0f0f0; color: #ccc; font-size: 3rem;">
                                    <i class="fas fa-cut"></i>
                                </div>
                            }
                            
                            @if (tailor.IsVerified)
                            {
                                <div class="verification-badge">
                                    <i class="fas fa-check-circle"></i> Verified
                                </div>
                            }

                            <div class="tailor-actions-overlay">
                                <span class="btn btn-glass">
                                    <i class="fas fa-user"></i> View Profile
                                </span>
                            </div>
                        </div>

                        <div class="tailor-info">
                            <div class="tailor-specialization">@tailor.Specialization</div>
                            <h3 class="tailor-name">@tailor.ShopName</h3>

                            <div class="tailor-rating">
                                @if (tailor.AverageRating == 0)
                                {
                                    <div class="stars" style="color: #2ecc71;">
                                        <i class="fas fa-thumbs-up"></i>
                                    </div>
                                    <span class="rating-text" style="color: #2ecc71; font-weight: 700;">
                                        Recommended
                                    </span>
                                }
                                else
                                {
                                    <div class="stars">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < Math.Floor(tailor.AverageRating))
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else if (i < tailor.AverageRating)
                                            {
                                                <i class="fas fa-star-half-alt"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                    <span class="rating-text">
                                        @tailor.AverageRating.ToString("F1")
                                    </span>
                                }
                            </div>

                            <div class="tailor-location">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@tailor.City @if (!string.IsNullOrEmpty(tailor.District)) {<text>, @tailor.District</text>}</span>
                            </div>
                        </div>
                    </a>
                }
            </div>

            @if (totalPages > 1)
            {
                <div style="margin-top: 40px; display: flex; justify-content: center; gap: 8px;">
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <a href="@Url.Action("Index", new { city = currentCity, specialization = currentSpec, page = i })"
                           class="btn @(i == currentPage ? "btn-primary" : "btn-outline-secondary")"
                           style="width: 40px; height: 40px; padding: 0; border: 1px solid var(--border-color); color: var(--text-primary); background: @(i == currentPage ? "var(--primary-color)" : "white"); color: @(i == currentPage ? "white" : "inherit");">
                            @i
                        </a>
                    }
                </div>
            }
        }
        else
        {
            <div style="text-align: center; padding: 60px; background: var(--bg-surface); border-radius: var(--radius-lg); border: 1px dashed var(--border-color);">
                <i class="fas fa-search" style="font-size: 3rem; color: var(--text-light); margin-bottom: 20px;"></i>
                <h3 style="margin-bottom: 10px;">No tailors found</h3>
                <p style="color: var(--text-secondary); margin-bottom: 20px;">Try adjusting your filters.</p>
                <a href="@Url.Action("Index", "Tailors")" class="btn btn-primary">Clear Filters</a>
            </div>
        }
    </main>
</div>
