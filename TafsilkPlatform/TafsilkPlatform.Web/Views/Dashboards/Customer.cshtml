@{
    ViewData["Title"] = "Dashboard | Tafsilk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <div class="container">
        <!-- Header -->
        <div class="dashboard-header">
            <h1 class="dashboard-title">Welcome Back!</h1>
            <p class="dashboard-subtitle">Here's what's happening with your orders today</p>
        </div>

        <!-- Stats Grid -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon primary">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <div class="stat-label">Total Orders</div>
                    <div class="stat-value">12</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> 3 this month
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card info">
                    <div class="stat-icon info">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-label">Active Orders</div>
                    <div class="stat-value">3</div>
                    <div class="stat-change">In progress</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card success">
                    <div class="stat-icon success">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-label">Completed</div>
                    <div class="stat-value">9</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> 2 this week
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card warning">
                    <div class="stat-icon warning">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-label">Favorite Tailors</div>
                    <div class="stat-value">5</div>
                    <div class="stat-change">Saved</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="@Url.Action("Index", "Tailors")" class="action-btn">
                <i class="fas fa-plus-circle"></i>
                <span>New Order</span>
            </a>
            <a href="@Url.Action("Index", "Tailors")" class="action-btn">
                <i class="fas fa-search"></i>
                <span>Browse Tailors</span>
            </a>
            <a href="@Url.Action("MyOrders", "Orders")" class="action-btn">
                <i class="fas fa-list"></i>
               <span>My Orders</span>
            </a>
            <a href="@Url.Action("Index", "Store", new { area = "Customer" })" class="action-btn">
                <i class="fas fa-store"></i>
                <span>Shop Products</span>
            </a>
        </div>

        <!-- Recent Orders -->
        <div class="row">
            <div class="col-12">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2 class="card-title">Recent Orders</h2>
                        <a href="@Url.Action("Index", "Orders")" class="card-action">
                            View All <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="dashboard-table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Tailor</th>
                                    <th>Service</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Example rows - replace with actual data -->
                                <tr>
                                    <td><strong>#12345</strong></td>
                                    <td>Ahmed's Tailoring</td>
                                    <td>Custom Suit</td>
                                    <td>Nov 24, 2025</td>
                                    <td><span class="badge badge-warning">In Progress</span></td>
                                    <td>
                                        <a href="#" class="text-primary"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>#12344</strong></td>
                                    <td>Modern Tailors</td>
                                    <td>Shirt Alteration</td>
                                    <td>Nov 22, 2025</td>
                                    <td><span class="badge badge-success">Completed</span></td>
                                    <td>
                                        <a href="#" class="text-primary"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>#12343</strong></td>
                                    <td>Elite Tailoring</td>
                                    <td>Dress Fitting</td>
                                    <td>Nov 20, 2025</td>
                                    <td><span class="badge badge-success">Completed</span></td>
                                    <td>
                                        <a href="#" class="text-primary"><i class="fas fa-eye"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Empty State (show when no orders) -->
                    @* <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <h3>No Orders Yet</h3>
                        <p>Start by browsing tailors and creating your first order</p>
                        <a href="@Url.Action("Index", "Tailors")" class="btn btn-dark mt-3">Browse Tailors</a>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>
