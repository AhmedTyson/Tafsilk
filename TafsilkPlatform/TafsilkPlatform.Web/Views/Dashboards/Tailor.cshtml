@using TafsilkPlatform.Models.Models
@model TafsilkPlatform.Models.ViewModels.Dashboard.TailorDashboardViewModel

@{
    ViewData["Title"] = "Tailor Dashboard | Tafsilk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <div class="container">
        <!-- Header -->
        <div class="dashboard-header">
            <h1 class="dashboard-title">Welcome, @Model.FullName!</h1>
            <p class="dashboard-subtitle">Manage your orders, products, and portfolio</p>
        </div>

        <!-- Stats Grid -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card success">
                    <div class="stat-icon success">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-label">Total Revenue</div>
                    <div class="stat-value">$@Model.TotalRevenue.ToString("N0")</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> +12% this month
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card info">
                    <div class="stat-icon info">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="stat-label">Active Orders</div>
                    <div class="stat-value">@Model.ActiveOrdersCount</div>
                    <div class="stat-change">Requires attention</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card primary">
                    <div class="stat-icon primary">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <div class="stat-label">Total Orders</div>
                    <div class="stat-value">@Model.TotalOrdersCount</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> @Model.NewOrdersCount new
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card warning">
                    <div class="stat-icon warning">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-label">Average Rating</div>
                    <div class="stat-value">@(Model.AverageRating?.ToString("F1") ?? "N/A")</div>
                    <div class="stat-change">@Model.TotalReviews reviews</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a asp-area="Tailor" asp-controller="TailorOrders" asp-action="Index" class="action-btn">
                <i class="fas fa-clipboard-list"></i>
                <span>Manage Orders</span>
            </a>
            <a asp-area="Tailor" asp-controller="TailorManagement" asp-action="AddProduct" class="action-btn">
                <i class="fas fa-plus-circle"></i>
                <span>Add Product</span>
            </a>
            <a asp-area="Tailor" asp-controller="TailorManagement" asp-action="ManageProducts" class="action-btn">
                <i class="fas fa-box"></i>
                <span>My Products</span>
            </a>
            <a asp-area="Tailor" asp-controller="TailorManagement" asp-action="ManagePortfolio" class="action-btn">
                <i class="fas fa-images"></i>
                <span>Manage Gallery</span>
            </a>
        </div>

        <div class="row g-4">
            <!-- Pending Orders -->
            <div class="col-lg-8">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2 class="card-title">Recent Orders</h2>
                        <a asp-area="Tailor" asp-controller="TailorOrders" asp-action="Index" class="card-action">
                            View All <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>

                    @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="dashboard-table">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Service</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders.Take(5))
                                    {
                                        <tr>
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.ServiceName</td>
                                            <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (order.Status == OrderStatus.Pending)
                                                {
                                                    <span class="badge badge-warning">Pending</span>
                                                }
                                                else if (order.Status == OrderStatus.Confirmed)
                                                {
                                                    <span class="badge badge-info">Confirmed</span>
                                                }
                                                else if (order.Status == OrderStatus.Delivered)
                                                {
                                                    <span class="badge badge-success">Delivered</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@order.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-area="Tailor" asp-controller="TailorOrders" asp-action="Index" class="text-primary"><i class="fas fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <h3>No Recent Orders</h3>
                            <p>Orders will appear here once customers place them</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Alerts/Notifications -->
            <div class="col-lg-4">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2 class="card-title">Alerts</h2>
                    </div>

                    @if (Model.Alerts != null && Model.Alerts.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var alert in Model.Alerts)
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="stat-icon @alert.Type small-icon">
                                            <i class="@alert.Icon"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@alert.Title</h6>
                                            <p class="text-muted small mb-0">@alert.Message</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-bell-slash"></i>
                            <p class="mb-0">No alerts</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .small-icon {
            width: 32px;
            height: 32px;
            font-size: 1rem;
        }
    </style>
}
