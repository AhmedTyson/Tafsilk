@model TafsilkPlatform.Models.Models.TailorProfile

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>
    :root {
        --primary-color: #2c5aa0;
        --primary-hover: #1e3f73;
        --primary-light: #e3f2fd;
        --secondary-color: #f39c12;
        --success-color: #27ae60;
        --text-primary: #2c3e50;
        --text-secondary: #7f8c8d;
        --border-color: #e1e8ed;
        --background-white: #ffffff;
        --background-gray: #f8f9fa;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
    }

    .profile-page {
        padding: 2rem 0;
        background: var(--background-gray);
        min-height: 100vh;
    }

    .profile-header {
        background: var(--background-white);
        border-radius: var(--radius-lg);
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-sm);
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid var(--primary-color);
        flex-shrink: 0;
    }

    .profile-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-avatar i {
        font-size: 4rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        background: var(--background-gray);
    }

    .profile-info h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .profile-meta {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
    }

    .meta-item i {
        color: var(--primary-color);
    }

    .verification-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 0.875rem;
        background: #d4edda;
        color: #155724;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: var(--background-white);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        text-align: center;
        box-shadow: var(--shadow-sm);
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-outline {
        background: transparent;
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
    }

    .btn-outline:hover {
        background: var(--primary-color);
        color: white;
    }

    .profile-section {
        background: var(--background-white);
        border-radius: var(--radius-lg);
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-sm);
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-icon {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: var(--primary-color);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    .info-value {
        color: var(--text-primary);
        font-size: 1rem;
    }

    @@media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
            text-align: center;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
        }

        .profile-meta {
            justify-content: center;
        }

        .action-buttons {
            justify-content: center;
        }
    }
</style>
}

<div class="profile-page">
    <div class="container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="profile-avatar">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileImageUrl))
                {
                    if (Uri.IsWellFormedUriString(Model.ProfileImageUrl, UriKind.Absolute))
                    {
                        <img src="@Model.ProfileImageUrl" alt="@Model.FullName" />
                    }
                    else
                    {
                        <img src="@Model.ProfileImageUrl" alt="@Model.FullName" />
                    }
                }
                else if (Model.ProfilePictureData != null)
                {
                    <img src="@Url.Action("GetTailorProfilePicture", "Profiles", new { id = Model.Id })" 
                         alt="@Model.FullName" />
                }
                else
                {
                    <i class="fas fa-user"></i>
                }
            </div>
  
            <div class="profile-info">
                <h1>@(Model.FullName ?? "Tailor")</h1>
                <p class="text-muted">@Model.ShopName</p>
         
                @if (Model.IsVerified)
                {
                    <div class="verification-badge">
                        <i class="fas fa-check-circle"></i>
                        <span>Verified Account</span>
                    </div>
                }

                <div class="profile-meta">
                    @if (!string.IsNullOrEmpty(Model.City))
                    {
                        <div class="meta-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>@Model.City</span>
                        </div>
                    }
                    @if (Model.YearsOfExperience.HasValue)
                    {
                        <div class="meta-item">
                            <i class="fas fa-briefcase"></i>
                            <span>@Model.YearsOfExperience Years Experience</span>
                        </div>
                    }
                    @if (Model.AverageRating > 0)
                    {
                        <div class="meta-item">
                            <i class="fas fa-star"></i>
                            <span>@Model.AverageRating.ToString("F1")</span>
                        </div>
                    }
                </div>

                <div class="action-buttons">
                    <a asp-action="EditTailorProfile" class="btn btn-primary">
                        <i class="fas fa-edit"></i>
                        <span>Edit Profile</span>
                    </a>
                    <a asp-action="ManagePortfolio" class="btn btn-outline">
                        <i class="fas fa-images"></i>
                        <span>Manage Gallery</span>
                    </a>
                    <a asp-area="Tailor" asp-action="ViewPublicTailorProfile" asp-controller="TailorPortfolio" asp-route-id="@Model.Id" class="btn btn-outline" target="_blank">
                        <i class="fas fa-eye"></i>
                        <span>View Public Profile</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value">@ViewBag.ServiceCount</div>
                <div class="stat-label">Services</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@ViewBag.PortfolioCount</div>
                <div class="stat-label">Gallery Images</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@ViewBag.ReviewCount</div>
                <div class="stat-label">Reviews</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@Model.AverageRating.ToString("F1")</div>
                <div class="stat-label">Average Rating</div>
            </div>
        </div>

        <!-- Recent Reviews -->
        <div class="profile-section">
            <h2 class="section-title">
                <div class="section-icon">
                    <i class="fas fa-star"></i>
                </div>
                Recent Reviews
            </h2>
            
            @{
                var reviews = ViewBag.Reviews as List<TafsilkPlatform.Models.Models.Review>;
            }

            @if (reviews != null && reviews.Any())
            {
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    @foreach (var review in reviews)
                    {
                        <div style="padding: 1rem; border: 1px solid var(--border-color); border-radius: var(--radius-md); background: var(--background-white);">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <span style="font-weight: 600; color: var(--text-primary);">@(review.Customer?.FullName ?? "Customer")</span>
                                <small style="color: var(--text-secondary);">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                            <div style="color: #f39c12; margin-bottom: 0.5rem;">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating) { <i class="fas fa-star"></i> }
                                    else { <i class="far fa-star"></i> }
                                }
                            </div>
                            <p style="margin-bottom: 0.5rem; color: var(--text-secondary);">@review.Comment</p>
                            <small style="color: var(--primary-color);"><i class="fas fa-tag" style="margin-right: 4px;"></i> @review.Product?.Name</small>
                        </div>
                    }
                </div>
                <div style="margin-top: 1rem; text-align: center;">
                    <a href="@Url.Action("Details", "Tailors", new { id = Model.Id })" target="_blank" class="btn btn-outline">
                        View All Reviews on Public Profile
                    </a>
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 2rem; color: var(--text-secondary);">
                    <i class="far fa-star" style="font-size: 2rem; margin-bottom: 0.5rem;"></i>
                    <p>No reviews yet.</p>
                </div>
            }
        </div>

        <!-- Contact Information Preview -->
        <div style="margin-bottom: 2rem;">
            <button type="button" 
                    onclick="toggleContactInfo()"
                    style="width: 100%; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none; padding: 18px 24px; border-radius: 14px; font-weight: 700; font-size: 1.1rem; display: flex; align-items: center; justify-content: center; gap: 12px; cursor: pointer; transition: all 0.3s; box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);"
                    onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(16, 185, 129, 0.4)'"
                    onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(16, 185, 129, 0.3)'">
                <i class="fas fa-phone-alt" style="font-size: 1.2rem;"></i>
                <span>Preview Contact Information</span>
                <i class="fas fa-chevron-down" id="contactChevron" style="margin-left: auto; transition: transform 0.3s;"></i>
            </button>
            
            <div id="contactInfoPanel" style="max-height: 0; overflow: hidden; transition: max-height 0.4s ease-out, margin-top 0.4s ease-out; margin-top: 0;">
                <div style="background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.9) 100%); padding: 25px; border-radius: 16px; backdrop-filter: blur(15px); border: 1px solid rgba(0,0,0,0.1); box-shadow: 0 8px 32px rgba(0,0,0,0.1); margin-top: 15px;">
                    <h4 style="margin: 0 0 20px 0; font-size: 1.2rem; font-weight: 700; color: var(--text-primary); display: flex; align-items: center; gap: 10px;">
                        <i class="fas fa-address-book" style="font-size: 1.1rem; color: var(--primary-color);"></i>
                        How Customers Will Contact You
                    </h4>
                    
                    <div style="display: flex; flex-direction: column; gap: 14px;">
                        @if (!string.IsNullOrEmpty(Model.User?.PhoneNumber))
                        {
                            <div style="display: flex; align-items: center; gap: 15px; background: rgba(16, 185, 129, 0.1); padding: 16px 20px; border-radius: 12px; border: 1px solid rgba(16, 185, 129, 0.2);">
                                <div style="width: 45px; height: 45px; background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);">
                                    <i class="fas fa-phone" style="font-size: 1.2rem; color: white;"></i>
                                </div>
                                <div style="flex: 1;">
                                    <div style="font-size: 0.85rem; opacity: 0.7; margin-bottom: 2px;">Phone</div>
                                    <div style="font-size: 1.05rem; font-weight: 700;">@Model.User.PhoneNumber</div>
                                </div>
                                <i class="fas fa-check-circle" style="color: #10b981;"></i>
                            </div>
                        }
                        else
                        {
                            <div style="padding: 16px; background: rgba(255, 193, 7, 0.1); border: 1px solid rgba(255, 193, 7, 0.3); border-radius: 12px; color: var(--text-primary);">
                                <i class="fas fa-exclamation-triangle" style="color: #f39c12; margin-right: 8px;"></i>
                                <strong>No phone number set.</strong> Add your phone number in Edit Profile.
                            </div>
                        }
                        
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); gap: 12px;">
                            @if (!string.IsNullOrEmpty(Model.WhatsAppNumber))
                            {
                                <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; background: rgba(37, 211, 102, 0.1); padding: 18px 12px; border-radius: 12px; border: 1px solid rgba(37, 211, 102, 0.2);">
                                    <div style="width: 50px; height: 50px; background: linear-gradient(135deg, #25d366 0%, #128c7e 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 10px; box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);">
                                        <i class="fab fa-whatsapp" style="font-size: 1.6rem; color: white;"></i>
                                    </div>
                                    <span style="font-size: 0.95rem; font-weight: 600;">WhatsApp</span>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                            {
                                <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; background: rgba(193, 53, 132, 0.1); padding: 18px 12px; border-radius: 12px; border: 1px solid rgba(193, 53, 132, 0.2);">
                                    <div style="width: 50px; height: 50px; background: linear-gradient(135deg, #e1306c 0%, #c13584 40%, #833ab4 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 10px; box-shadow: 0 4px 12px rgba(193, 53, 132, 0.4);">
                                        <i class="fab fa-instagram" style="font-size: 1.6rem; color: white;"></i>
                                    </div>
                                    <span style="font-size: 0.95rem; font-weight: 600;">Instagram</span>
                                </div>
                            }
                        </div>
                        
                        @if (string.IsNullOrEmpty(Model.WhatsAppNumber) && string.IsNullOrEmpty(Model.InstagramUrl))
                        {
                            <div style="padding: 16px; background: rgba(255, 193, 7, 0.1); border: 1px solid rgba(255, 193, 7, 0.3); border-radius: 12px; color: var(--text-primary); text-align: center;">
                                <i class="fas fa-info-circle" style="color: #f39c12; margin-right: 8px;"></i>
                                Add WhatsApp or Instagram in Edit Profile for more contact options.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <script>
            function toggleContactInfo() {
                const panel = document.getElementById('contactInfoPanel');
                const chevron = document.getElementById('contactChevron');
                
                if (panel.style.maxHeight === '0px' || panel.style.maxHeight === '') {
                    panel.style.maxHeight = panel.scrollHeight + 'px';
                    panel.style.marginTop = '15px';
                    chevron.style.transform = 'rotate(180deg)';
                } else {
                    panel.style.maxHeight = '0px';
                    panel.style.marginTop = '0px';
                    chevron.style.transform = 'rotate(0deg)';
                }
            }
        </script>

        <!-- Profile Information -->
        <div class="profile-section">
            <h2 class="section-title">
                <div class="section-icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                Basic Information
            </h2>
          
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Full Name</div>
                    <div class="info-value">@(Model.FullName ?? "Not Specified")</div>
                </div>
      
                <div class="info-item">
                    <div class="info-label">Shop Name</div>
                    <div class="info-value">@Model.ShopName</div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Specialization))
                {
                    <div class="info-item">
                        <div class="info-label">Specialization</div>
                        <div class="info-value">@Model.Specialization</div>
                    </div>
                }

                @if (Model.YearsOfExperience.HasValue)
                {
                    <div class="info-item">
                        <div class="info-label">Years of Experience</div>
                        <div class="info-value">@Model.YearsOfExperience Years</div>
                    </div>
                }

                <div class="info-item">
                    <div class="info-label">Phone Number</div>
                    <div class="info-value">@(Model.User?.PhoneNumber ?? "Not Specified")</div>
                </div>

                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value">@(Model.User?.Email ?? "Not Specified")</div>
                </div>
            </div>
        </div>

        <!-- Location Information -->
        @if (!string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.Address))
        {
            <div class="profile-section">
                <h2 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    Location
                </h2>
        
                <div class="info-grid">
                    @if (!string.IsNullOrEmpty(Model.City))
                    {
                        <div class="info-item">
                            <div class="info-label">City</div>
                            <div class="info-value">@Model.City</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.District))
                    {
                        <div class="info-item">
                            <div class="info-label">District</div>
                            <div class="info-value">@Model.District</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="info-item" style="grid-column: 1 / -1;">
                            <div class="info-label">Address</div>
                            <div class="info-value">@Model.Address</div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Bio -->
        @if (!string.IsNullOrEmpty(Model.Bio))
        {
            <div class="profile-section">
                <h2 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-align-left"></i>
                    </div>
                    Bio
                </h2>
                <p>@Model.Bio</p>
            </div>
        }

        <!-- Business Hours -->
        @if (!string.IsNullOrEmpty(Model.BusinessHours))
        {
            <div class="profile-section">
                <h2 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    Business Hours
                </h2>
                <p>@Model.BusinessHours</p>
            </div>
        }

        <!-- Social Media -->
        @if (!string.IsNullOrEmpty(Model.FacebookUrl) || !string.IsNullOrEmpty(Model.InstagramUrl) || 
             !string.IsNullOrEmpty(Model.TwitterUrl) || !string.IsNullOrEmpty(Model.WebsiteUrl))
        {
            <div class="profile-section">
                <h2 class="section-title">
                    <div class="section-icon">
                        <i class="fas fa-share-alt"></i>
                    </div>
                    Social Media
                </h2>
              
                <div class="info-grid">
                    @if (!string.IsNullOrEmpty(Model.FacebookUrl))
                    {
                        <div class="info-item">
                            <div class="info-label">Facebook</div>
                            <div class="info-value">
                                <a href="@Model.FacebookUrl" target="_blank" class="text-primary">
                                    <i class="fab fa-facebook"></i> Visit Page
                                </a>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                    {
                        <div class="info-item">
                            <div class="info-label">Instagram</div>
                            <div class="info-value">
                                <a href="@Model.InstagramUrl" target="_blank" class="text-primary">
                                    <i class="fab fa-instagram"></i> Visit Account
                                </a>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.TwitterUrl))
                    {
                        <div class="info-item">
                            <div class="info-label">Twitter</div>
                            <div class="info-value">
                                <a href="@Model.TwitterUrl" target="_blank" class="text-primary">
                                    <i class="fab fa-twitter"></i> Visit Account
                                </a>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.WebsiteUrl))
                    {
                        <div class="info-item">
                            <div class="info-label">Website</div>
                            <div class="info-value">
                                <a href="@Model.WebsiteUrl" target="_blank" class="text-primary">
                                    <i class="fas fa-globe"></i> Visit Website
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
