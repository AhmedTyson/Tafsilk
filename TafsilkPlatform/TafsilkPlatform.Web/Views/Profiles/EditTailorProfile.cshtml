@model TafsilkPlatform.Models.ViewModels.Tailor.EditTailorProfileViewModel

@{
    ViewData["Title"] = "Tailor Account Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                <div class="card-body text-center p-4 bg-white">
                    <div class="mb-4 position-relative d-inline-block">
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto text-primary shadow-sm overflow-hidden" style="width: 120px; height: 120px;">
                            @if (!string.IsNullOrWhiteSpace(Model.CurrentProfilePictureUrl))
                            {
                                <img src="@Model.CurrentProfilePictureUrl" alt="Profile" class="w-100 h-100" style="object-fit: cover;" />
                            }
                            else if (Model.CurrentProfilePictureData != null)
                            {
                                <img src="@Url.Action("GetTailorProfilePicture", "Profiles", new { id = Model.TailorId })" alt="Profile" class="w-100 h-100" style="object-fit: cover;" />
                            }
                            else
                            {
                                <i class="fas fa-user-tie fa-3x text-muted"></i>
                            }
                        </div>
                        @if (Model.IsVerified)
                        {
                            <span class="position-absolute bottom-0 end-0 translate-middle p-2 bg-success border border-light rounded-circle" title="Verified Tailor" data-bs-toggle="tooltip">
                                <span class="visually-hidden">Verified</span>
                            </span>
                        }
                    </div>
                    <h5 class="fw-bold mb-1">@Model.ShopName</h5>
                    <p class="text-muted small mb-2">@Model.Specialization</p>
                    
                    @if (Model.IsVerified)
                    {
                        <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2 mb-3">
                            <i class="fas fa-check-circle me-1"></i> Verified
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-warning-subtle text-warning rounded-pill px-3 py-2 mb-3">
                            <i class="fas fa-clock me-1"></i> Pending Verification
                        </span>
                    }

                    <div class="d-flex justify-content-center gap-3 mb-2">
                        <div class="text-center px-2">
                            <small class="text-muted d-block" style="font-size: 0.75rem;">Orders</small>
                            <span class="fw-bold text-primary">@Model.TotalOrders</span>
                        </div>
                        <div class="vr opacity-25"></div>
                        <div class="text-center px-2">
                            <small class="text-muted d-block" style="font-size: 0.75rem;">Services</small>
                            <span class="fw-bold text-primary">@Model.ServiceCount</span>
                        </div>
                    </div>
                </div>
                <div class="list-group list-group-flush border-top-0 p-2 bg-white">
                    <a href="@Url.Action("Tailor", "Dashboards")" class="list-group-item list-group-item-action rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-tachometer-alt me-3 opacity-75"></i> 
                        <span class="fw-medium">Dashboard</span>
                    </a>
                    <a href="@Url.Action("EditTailorProfile", "Profiles")" class="list-group-item list-group-item-action active rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-user-cog me-3 opacity-75"></i> 
                        <span class="fw-medium">Account Settings</span>
                    </a>
                    <a href="@Url.Action("ManageProducts", "TailorManagement", new { area = "Tailor" })" class="list-group-item list-group-item-action rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-box me-3 opacity-75"></i>
                        <span class="fw-medium">Manage Products</span>
                    </a>
                    <a href="@Url.Action("ManagePortfolio", "TailorManagement", new { area = "Tailor" })" class="list-group-item list-group-item-action rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-images me-3 opacity-75"></i>
                        <span class="fw-medium">Manage Gallery</span>
                    </a>
                    <a href="@Url.Action("ChangePassword", "Account")" class="list-group-item list-group-item-action rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-lock me-3 opacity-75"></i>
                        <span class="fw-medium">Security</span>
                    </a>
                    <a href="@Url.Action("ViewPublicTailorProfile", "TailorPortfolio", new { area = "Tailor", id = Model.TailorId })" target="_blank" class="list-group-item list-group-item-action rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-external-link-alt me-3 opacity-75"></i>
                        <span class="fw-medium">View Public Profile</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-4 px-4">
                    <h4 class="mb-0 fw-bold text-dark">Edit Profile</h4>
                    <p class="text-muted small mb-0 mt-1">Update your shop information and preferences</p>
                </div>
                <div class="card-body px-4 pb-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="EditTailorProfile" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.TailorId)
                        @Html.HiddenFor(m => m.UserId)
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Profile Picture Upload -->
                        <div class="mb-5 p-4 bg-light rounded-4 border border-dashed text-center">
                            <label for="profilePicture" class="form-label fw-bold mb-3 d-block">Profile Picture</label>
                            <div class="d-flex flex-column align-items-center">
                                <label class="btn btn-outline-primary rounded-pill px-4">
                                    <i class="fas fa-camera me-2"></i> Choose New Photo
                                    <input type="file" asp-for="ProfilePicture" class="d-none" id="profilePicture" accept="image/*" onchange="previewImage(this)">
                                </label>
                                <span asp-validation-for="ProfilePicture" class="text-danger small mt-2"></span>
                                <small class="text-muted mt-2">Recommended size: 500x500px. Max 2MB.</small>
                            </div>
                        </div>

                        <!-- Personal Information -->
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-user me-2"></i>Personal Information</h5>
                        <div class="row g-3 mb-5">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FullName" class="form-control bg-light border-0" placeholder="Full Name" />
                                    <label asp-for="FullName">Full Name</label>
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control bg-light border-0" placeholder="Phone Number" />
                                    <label asp-for="PhoneNumber">Phone Number</label>
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control bg-light border-0" placeholder="Email" disabled />
                                    <label asp-for="Email">Email Address</label>
                                </div>
                                <small class="text-muted ms-2">Contact support to change your email.</small>
                            </div>
                        </div>

                        <!-- Shop Details -->
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-store me-2"></i>Shop Details</h5>
                        <div class="row g-3 mb-5">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ShopName" class="form-control bg-light border-0" placeholder="Shop Name" />
                                    <label asp-for="ShopName">Shop Name</label>
                                </div>
                                <span asp-validation-for="ShopName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Specialization" class="form-select bg-light border-0">
                                        <option value="">Select Specialization</option>
                                        @if (ViewBag.Specializations is List<string> specializations)
                                        {
                                            foreach (var spec in specializations)
                                            {
                                                <option value="@spec">@spec</option>
                                            }
                                        }
                                    </select>
                                    <label asp-for="Specialization">Specialization</label>
                                </div>
                                <span asp-validation-for="Specialization" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="YearsOfExperience" type="number" class="form-control bg-light border-0" placeholder="Years of Experience" />
                                    <label asp-for="YearsOfExperience">Years of Experience</label>
                                </div>
                                <span asp-validation-for="YearsOfExperience" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="BusinessHours" class="form-control bg-light border-0" placeholder="Business Hours" />
                                    <label asp-for="BusinessHours">Business Hours</label>
                                </div>
                                <span asp-validation-for="BusinessHours" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="ShopDescription" class="form-control bg-light border-0" placeholder="Shop Description" style="height: 100px"></textarea>
                                    <label asp-for="ShopDescription">Shop Description</label>
                                </div>
                                <span asp-validation-for="ShopDescription" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Bio" class="form-control bg-light border-0" placeholder="Bio" style="height: 100px"></textarea>
                                    <label asp-for="Bio">Bio / About You</label>
                                </div>
                                <span asp-validation-for="Bio" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Location -->
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-map-marker-alt me-2"></i>Location</h5>
                        <div class="row g-3 mb-5">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="City" class="form-select bg-light border-0">
                                        <option value="">Select City</option>
                                        @if (ViewBag.Cities is List<string> cities)
                                        {
                                            foreach (var city in cities)
                                            {
                                                <option value="@city">@city</option>
                                            }
                                        }
                                    </select>
                                    <label asp-for="City">City</label>
                                </div>
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="District" class="form-control bg-light border-0" placeholder="District" />
                                    <label asp-for="District">District</label>
                                </div>
                                <span asp-validation-for="District" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Address" class="form-control bg-light border-0" placeholder="Detailed Address" style="height: 80px"></textarea>
                                    <label asp-for="Address">Detailed Address</label>
                                </div>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Social Media -->
                        <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-share-alt me-2"></i>Social Media</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FacebookUrl" class="form-control bg-light border-0" placeholder="Facebook URL" />
                                    <label asp-for="FacebookUrl">Facebook URL</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="InstagramUrl" class="form-control bg-light border-0" placeholder="Instagram URL" />
                                    <label asp-for="InstagramUrl">Instagram URL</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="TwitterUrl" class="form-control bg-light border-0" placeholder="Twitter URL" />
                                    <label asp-for="TwitterUrl">Twitter URL</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="WebsiteUrl" class="form-control bg-light border-0" placeholder="Website URL" />
                                    <label asp-for="WebsiteUrl">Website URL</label>
                                </div>
                            </div>
                        </div>

                        <div class="text-end mt-5">
                            <button type="submit" class="btn btn-primary px-5 py-3 rounded-pill fw-bold shadow-sm transition-all">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <style>
        /* Premium Card Styling */
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .list-group-item {
            color: #6c757d;
            transition: all 0.2s ease;
        }
        
        .list-group-item:hover {
            background-color: #f8f9fa;
            color: var(--bs-primary);
            transform: translateX(5px);
        }
        
        .list-group-item.active {
            background-color: rgba(var(--bs-primary-rgb), 0.1);
            color: var(--bs-primary);
            border-color: transparent;
        }
        
        .form-control:focus, .form-select:focus {
            background-color: #fff;
            box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.15);
            border-color: rgba(var(--bs-primary-rgb), 0.3);
        }

        .btn-primary {
            background: linear-gradient(45deg, var(--bs-primary), #4a90e2);
            border: none;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(var(--bs-primary-rgb), 0.3) !important;
        }

        .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1) !important; color: #198754 !important; }
        .bg-warning-subtle { background-color: rgba(255, 193, 7, 0.1) !important; color: #ffc107 !important; }
    </style>
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    // Update sidebar image if it exists
                    var sidebarImg = document.querySelector('.card-body img');
                    if (sidebarImg) sidebarImg.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        $(document).ready(function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}
