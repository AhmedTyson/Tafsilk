@model TafsilkPlatform.Models.Models.CustomerProfile
@{
    ViewData["Title"] = "Account Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body text-center p-4 bg-white">
                    <div class="mb-4 position-relative d-inline-block">
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto text-primary shadow-sm" style="width: 100px; height: 100px; font-size: 2.5rem;">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold mb-1">@Model.FullName</h5>
                    <p class="text-muted small mb-0">@Model.User?.Email</p>
                </div>
                <div class="list-group list-group-flush border-top-0 p-2 bg-white">
                    <a href="@Url.Action("CustomerProfile", "Profiles")" class="list-group-item list-group-item-action active rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-user-cog me-3 opacity-75"></i> 
                        <span class="fw-medium">Profile Settings</span>
                    </a>
                    <a href="@Url.Action("MyOrders", "Orders")" class="list-group-item list-group-item-action rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-shopping-bag me-3 opacity-75"></i>
                        <span class="fw-medium">My Orders</span>
                    </a>
                    <a href="@Url.Action("ChangePassword", "Account")" class="list-group-item list-group-item-action rounded-3 mb-1 border-0 d-flex align-items-center px-3 py-2">
                        <i class="fas fa-lock me-3 opacity-75"></i>
                        <span class="fw-medium">Security</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-4 px-4">
                    <h4 class="mb-0 fw-bold text-dark">Personal Information</h4>
                    <p class="text-muted small mb-0 mt-1">Update your personal details and preferences</p>
                </div>
                <div class="card-body px-4 pb-4">
                    <form asp-action="CompleteCustomerProfile" method="post">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-light border-0" id="fullName" name="FullName" value="@Model.FullName" placeholder="Full Name" required>
                                    <label for="fullName" class="text-muted">Full Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="tel" class="form-control bg-light border-0" id="phone" name="PhoneNumber" value="@Model.User?.PhoneNumber" placeholder="Phone Number">
                                    <label for="phone" class="text-muted">Phone Number</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-light border-0" id="city" name="City" value="@Model.City" placeholder="City">
                                    <label for="city" class="text-muted">City</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select bg-light border-0" id="gender" name="Gender">
                                        <option value="">Select Gender</option>
                                        <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
                                        <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
                                    </select>
                                    <label for="gender" class="text-muted">Gender</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control bg-light border-0" id="bio" name="Bio" placeholder="Bio" style="height: 120px">@Model.Bio</textarea>
                                    <label for="bio" class="text-muted">Bio / About You</label>
                                </div>
                            </div>
                            <div class="col-12 text-end mt-4">
                                <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow-sm transition-all">
                                    Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom Styles for Premium Feel */
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .list-group-item {
        color: #6c757d;
        transition: all 0.2s ease;
    }
    
    .list-group-item:hover {
        background-color: #f8f9fa;
        color: var(--bs-primary);
        transform: translateX(5px);
    }
    
    .list-group-item.active {
        background-color: rgba(var(--bs-primary-rgb), 0.1);
        color: var(--bs-primary);
        border-color: transparent;
    }
    
    .form-control:focus, .form-select:focus {
        background-color: #fff;
        box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.15);
        border-color: rgba(var(--bs-primary-rgb), 0.3);
    }

    .btn-primary {
        background: linear-gradient(45deg, var(--bs-primary), #4a90e2);
        border: none;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(var(--bs-primary-rgb), 0.3) !important;
    }
</style>
