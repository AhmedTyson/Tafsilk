@model TafsilkPlatform.Models.Models.CustomerProfile

@{
    ViewData["Title"] = "الملف الشخصي";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>
    :root {
        --primary-color: #2c5aa0;
        --primary-hover: #1e3f73;
        --primary-light: #e3f2fd;
     --secondary-color: #f39c12;
        --success-color: #27ae60;
        --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
    --border-color: #e1e8ed;
        --background-white: #ffffff;
     --background-gray: #f8f9fa;
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
 --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
    }

    .profile-page {
        padding: 2rem 0;
        background: var(--background-gray);
   min-height: 100vh;
    }

 .profile-header {
        background: var(--background-white);
        border-radius: var(--radius-lg);
   padding: 2rem;
    margin-bottom: 2rem;
        box-shadow: var(--shadow-sm);
        display: flex;
    align-items: center;
      gap: 2rem;
    }

    .profile-avatar {
        width: 120px;
    height: 120px;
        border-radius: 50%;
        overflow: hidden;
      border: 4px solid var(--primary-color);
    flex-shrink: 0;
    }

    .profile-avatar img {
  width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-avatar i {
        font-size: 4rem;
     color: var(--text-secondary);
        display: flex;
        align-items: center;
        justify-content: center;
     height: 100%;
  background: var(--background-gray);
    }

    .profile-info h1 {
        font-size: 1.75rem;
        font-weight: 700;
  color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

.profile-meta {
        display: flex;
      gap: 1.5rem;
flex-wrap: wrap;
        margin-top: 1rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
   color: var(--text-secondary);
    }

    .meta-item i {
        color: var(--primary-color);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

  .stat-card {
        background: var(--background-white);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        text-align: center;
        box-shadow: var(--shadow-sm);
    }

    .stat-value {
    font-size: 2rem;
      font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .action-buttons {
      display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
   flex-wrap: wrap;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
      border-radius: var(--radius-md);
        font-weight: 600;
        text-decoration: none;
    transition: all 0.3s;
        border: none;
     cursor: pointer;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
box-shadow: var(--shadow-md);
    }

    .btn-outline {
        background: transparent;
        color: var(--primary-color);
     border: 2px solid var(--primary-color);
    }

    .btn-outline:hover {
     background: var(--primary-color);
        color: white;
    }

    .profile-section {
background: var(--background-white);
        border-radius: var(--radius-lg);
    padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-sm);
    }

    .section-title {
  font-size: 1.25rem;
      font-weight: 700;
        color: var(--text-primary);
      margin-bottom: 1.5rem;
 display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-icon {
   width: 36px;
        height: 36px;
 border-radius: 50%;
        background: var(--primary-color);
     color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-grid {
    display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .info-label {
        font-size: 0.875rem;
      color: var(--text-secondary);
        font-weight: 600;
}

    .info-value {
    color: var(--text-primary);
        font-size: 1rem;
    }

    .address-card {
        border: 2px solid var(--border-color);
     border-radius: var(--radius-md);
        padding: 1rem;
        margin-bottom: 1rem;
        transition: all 0.3s;
}

    .address-card.default {
      border-color: var(--primary-color);
   background: var(--primary-light);
    }

    .address-header {
     display: flex;
  justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
 }

    .address-label {
        font-weight: 700;
   color: var(--text-primary);
        display: flex;
        align-items: center;
     gap: 0.5rem;
  }

    .default-badge {
        background: var(--success-color);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
   font-size: 0.75rem;
        font-weight: 600;
    }

    .address-text {
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--text-secondary);
    }

    .empty-state i {
        font-size: 4rem;
margin-bottom: 1rem;
color: var(--border-color);
  }

    @@media (max-width: 768px) {
   .profile-header {
         flex-direction: column;
text-align: center;
    }

        .profile-avatar {
   width: 100px;
          height: 100px;
 }

  .profile-meta {
justify-content: center;
 }

   .action-buttons {
    justify-content: center;
  }
    }
</style>
}

<div class="profile-page">
    <div class="container">
 <!-- Profile Completion Indicator -->
@if (ViewBag.ProfileCompletion != null)
        {
     @await Html.PartialAsync("_ProfileCompletion", (TafsilkPlatform.Web.Services.ProfileCompletionResult)ViewBag.ProfileCompletion)
        }

  <!-- Profile Header -->
    <div class="profile-header">
         <div class="profile-avatar">
                @if (Model.ProfilePictureData != null)
   {
       <img src="@Url.Action("ProfilePicture", "Account", new { id = Model.UserId })" 
        alt="@Model.FullName" />
                }
 else
                {
         <i class="fas fa-user"></i>
   }
         </div>

            <div class="profile-info">
             <h1>@(Model.FullName ?? "عميل")</h1>
     <p class="text-muted">عميل تفصيلك</p>

       <div class="profile-meta">
  <div class="meta-item">
 <i class="fas fa-envelope"></i>
          <span>@(Model.User?.Email ?? "غير متوفر")</span>
 </div>
                  @if (!string.IsNullOrEmpty(Model.User?.PhoneNumber))
           {
    <div class="meta-item">
      <i class="fas fa-phone"></i>
          <span>@Model.User.PhoneNumber</span>
                   </div>
          }
        <div class="meta-item">
     <i class="fas fa-calendar"></i>
         <span>عضو منذ @Model.CreatedAt.ToString("yyyy/MM/dd")</span>
         </div>
         </div>

<div class="action-buttons">
          <a asp-controller="Dashboards" asp-action="Customer" class="btn btn-primary">
    <i class="fas fa-tachometer-alt"></i>
       <span>لوحة التحكم</span>
     </a>
          <a asp-action="ManageAddresses" class="btn btn-outline">
       <i class="fas fa-map-marker-alt"></i>
       <span>إدارة العناوين</span>
             </a>
      </div>
      </div>
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
          <div class="stat-card">
      <div class="stat-value">@ViewBag.AddressCount</div>
      <div class="stat-label">العناوين المحفوظة</div>
            </div>
    <div class="stat-card">
        <div class="stat-value">0</div>
    <div class="stat-label">الطلبات النشطة</div>
 </div>
         <div class="stat-card">
   <div class="stat-value">0</div>
        <div class="stat-label">الطلبات المكتملة</div>
       </div>
            <div class="stat-card">
     <div class="stat-value">0</div>
          <div class="stat-label">الخياطين المفضلين</div>
            </div>
        </div>

        <!-- Profile Information -->
 <div class="profile-section">
 <h2 class="section-title">
  <div class="section-icon">
    <i class="fas fa-info-circle"></i>
 </div>
  المعلومات الأساسية
      </h2>

      <div class="info-grid">
 <div class="info-item">
            <div class="info-label">الاسم الكامل</div>
             <div class="info-value">@(Model.FullName ?? "غير محدد")</div>
                </div>

     <div class="info-item">
          <div class="info-label">رقم الهاتف</div>
         <div class="info-value">@(Model.User?.PhoneNumber ?? "غير محدد")</div>
        </div>

            <div class="info-item">
    <div class="info-label">البريد الإلكتروني</div>
        <div class="info-value">@(Model.User?.Email ?? "غير محدد")</div>
          </div>

        <div class="info-item">
   <div class="info-label">تاريخ التسجيل</div>
<div class="info-value">@Model.CreatedAt.ToString("yyyy/MM/dd")</div>
   </div>
       </div>
        </div>

        <!-- Saved Addresses -->
        <div class="profile-section">
            <h2 class="section-title">
   <div class="section-icon">
      <i class="fas fa-map-marker-alt"></i>
 </div>
              العناوين المحفوظة
              <a asp-action="ManageAddresses" class="btn btn-outline btn-sm ms-auto">
      <i class="fas fa-plus"></i>
           <span>إضافة عنوان</span>
   </a>
            </h2>

 @if (ViewBag.Addresses != null && ((List<TafsilkPlatform.Models.Models.UserAddress>)ViewBag.Addresses).Any())
      {
       @foreach (var address in (List<TafsilkPlatform.Models.Models.UserAddress>)ViewBag.Addresses)
   {
        <div class="address-card @(address.IsDefault ? "default" : "")">
     <div class="address-header">
      <div class="address-label">
  <i class="fas fa-map-marker-alt"></i>
   @address.Label
         </div>
    @if (address.IsDefault)
             {
           <span class="default-badge">العنوان الافتراضي</span>
             }
        </div>
             <p class="address-text">
        @address.Street<br />
               @address.City
            </p>
     </div>
                }
   }
            else
            {
         <div class="empty-state">
             <i class="fas fa-map-marker-alt"></i>
  <p>لا توجد عناوين محفوظة</p>
       <a asp-action="AddAddress" class="btn btn-primary mt-3">
          <i class="fas fa-plus"></i>
       <span>إضافة عنوان جديد</span>
 </a>
     </div>
            }
        </div>
    </div>
</div>
