@using TafsilkPlatform.Models.Models
@model TafsilkPlatform.Models.ViewModels.Orders.OrderDetailsViewModel
@{
    ViewData["Title"] = $"Order #{Model.OrderNumber}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" dir="ltr">
    <!-- Breadcrumb & Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5">
        <div>
            <nav aria-label="breadcrumb" class="mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/" class="text-muted text-decoration-none">Home</a></li>
                    @if (Model.IsCustomer)
                    {
                        <li class="breadcrumb-item"><a asp-action="MyOrders" asp-controller="Orders" class="text-muted text-decoration-none">My Orders</a></li>
                    }
                    else if (Model.IsTailor)
                    {
                        <li class="breadcrumb-item"><a asp-action="TailorOrders" asp-controller="Orders" class="text-muted text-decoration-none">Orders</a></li>
                    }
                    <li class="breadcrumb-item active text-dark">#@Model.OrderNumber</li>
                </ol>
            </nav>
            <h1 class="display-5 fw-bold text-dark mb-0">Order Details</h1>
            <p class="text-muted mt-2">
                Created on @Model.CreatedAt.ToString("dd MMMM yyyy")
            </p>
        </div>
        <div class="mt-3 mt-md-0">
            @{
                var statusColor = Model.Status switch
                {
                    OrderStatus.Pending => "warning",
                    OrderStatus.PendingPayment => "warning",
                    OrderStatus.Confirmed => "info",
                    OrderStatus.Processing => "primary",
                    OrderStatus.Shipped => "primary",
                    OrderStatus.Delivered => "success",
                    OrderStatus.Cancelled => "danger",
                    _ => "secondary"
                };
                
                var statusIcon = Model.Status switch
                {
                    OrderStatus.Pending => "fa-clock",
                    OrderStatus.PendingPayment => "fa-credit-card",
                    OrderStatus.Confirmed => "fa-check-circle",
                    OrderStatus.Processing => "fa-cog fa-spin",
                    OrderStatus.Shipped => "fa-truck",
                    OrderStatus.Delivered => "fa-box-open",
                    OrderStatus.Cancelled => "fa-times-circle",
                    _ => "fa-info-circle"
                };
            }
            <div class="d-flex align-items-center gap-3">
                <span class="badge bg-@statusColor-subtle text-@statusColor border border-@statusColor-subtle rounded-pill px-4 py-3 fs-6 d-flex align-items-center gap-2">
                    <i class="fas @statusIcon"></i>
                    @Model.StatusDisplay
                </span>
            </div>
        </div>
    </div>

    <!-- Status Timeline -->
    <div class="card border-0 shadow-sm rounded-4 mb-5 overflow-hidden">
        <div class="card-body p-5">
            <h5 class="fw-bold mb-5">Order Timeline</h5>
            <div class="position-relative">
                <div class="progress" style="height: 2px; background-color: #e9ecef; position: absolute; top: 20px; left: 0; right: 0; z-index: 0;">
                    @{
                        var progress = 0;
                        if (Model.Status == OrderStatus.Pending) progress = 10;
                        else if (Model.Status == OrderStatus.PendingPayment) progress = 25;
                        else if (Model.Status == OrderStatus.Confirmed) progress = 40;
                        else if (Model.Status == OrderStatus.Processing) progress = 60;
                        else if (Model.Status == OrderStatus.Shipped) progress = 80;
                        else if (Model.Status == OrderStatus.Delivered) progress = 100;
                        else if (Model.Status == OrderStatus.Cancelled) progress = 0;
                    }
                    <div class="progress-bar bg-dark" role="progressbar" style="width: @progress%;" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                
                <div class="d-flex justify-content-between position-relative z-1">
                    <!-- Step 1: Placed -->
                    <div class="text-center timeline-step @(Model.Status >= OrderStatus.Pending ? "active" : "")">
                        <div class="timeline-icon bg-white border border-2 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow-sm">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <p class="fw-bold small mb-0">Order Placed</p>
                    </div>

                    <!-- Step 2: Payment -->
                    <div class="text-center timeline-step @(Model.Status >= OrderStatus.Confirmed || (Model.Status == OrderStatus.PendingPayment && Model.IsPaid) ? "active" : "")">
                        <div class="timeline-icon bg-white border border-2 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow-sm">
                            <i class="fas fa-credit-card"></i>
                        </div>
                        <p class="fw-bold small mb-0">Payment</p>
                    </div>

                    <!-- Step 3: Confirmed -->
                    <div class="text-center timeline-step @(Model.Status >= OrderStatus.Confirmed ? "active" : "")">
                        <div class="timeline-icon bg-white border border-2 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow-sm">
                            <i class="fas fa-check"></i>
                        </div>
                        <p class="fw-bold small mb-0">Confirmed</p>
                    </div>

                    <!-- Step 4: Processing -->
                    <div class="text-center timeline-step @(Model.Status >= OrderStatus.Processing ? "active" : "")">
                        <div class="timeline-icon bg-white border border-2 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow-sm">
                            <i class="fas fa-cut"></i>
                        </div>
                        <p class="fw-bold small mb-0">Processing</p>
                    </div>

                    <!-- Step 5: Delivered -->
                    <div class="text-center timeline-step @(Model.Status == OrderStatus.Delivered ? "active" : "")">
                        <div class="timeline-icon bg-white border border-2 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3 shadow-sm">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <p class="fw-bold small mb-0">Delivered</p>
                    </div>
                </div>
            </div>
            
            @if (Model.Status == OrderStatus.Cancelled)
            {
                <div class="alert alert-danger mt-5 mb-0 border-0 rounded-3 d-flex align-items-center">
                    <i class="fas fa-exclamation-circle fs-4 me-3"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Order Cancelled</h6>
                        <p class="mb-0 small">This order has been cancelled and is no longer active.</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Order Details -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-white border-0 p-4 pb-0">
                    <h5 class="fw-bold mb-0">Order Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-muted d-block mb-1 text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">Service Type</small>
                                <span class="fw-bold text-dark">@Model.ServiceType</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <small class="text-muted d-block mb-1 text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">Expected Delivery</small>
                                <span class="fw-bold text-dark">@(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("dd MMM yyyy") : "Not Set")</span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <small class="text-muted d-block mb-2 text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">Description</small>
                        <p class="text-muted mb-0 lh-lg">@Model.Description</p>
                    </div>

                    @if (Model.Items.Any())
                    {
                        <div>
                            <small class="text-muted d-block mb-3 text-uppercase fw-bold" style="font-size: 0.7rem; letter-spacing: 1px;">Order Items</small>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="border-0 rounded-start ps-3">Item</th>
                                            <th class="border-0 text-center">Qty</th>
                                            <th class="border-0 text-end pe-3 rounded-end">Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td class="ps-3">
                                                    <div class="fw-bold">@item.ServiceName</div>
                                                    @if (!string.IsNullOrEmpty(item.Notes))
                                                    {
                                                        <small class="text-muted">@item.Notes</small>
                                                    }
                                                </td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-end pe-3 fw-bold">@item.Price.ToString("N2") SAR</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Reference Images -->
            @if (Model.ReferenceImages.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                    <div class="card-header bg-white border-0 p-4 pb-0">
                        <h5 class="fw-bold mb-0">Reference Images</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            @foreach (var image in Model.ReferenceImages)
                            {
                                <div class="col-6 col-md-3">
                                    <a href="@Url.Action("GetOrderImage", "Orders", new { imageId = image.ImageId })" target="_blank" class="d-block position-relative rounded-3 overflow-hidden shadow-sm hover-zoom" style="padding-top: 100%;">
                                        <img src="@Url.Action("GetOrderImage", "Orders", new { imageId = image.ImageId })" 
                                             class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover" 
                                             alt="Reference Image" />
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Tailor Actions -->
            @if (Model.IsTailor && Model.Status != OrderStatus.Delivered && Model.Status != OrderStatus.Cancelled)
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden border-start border-4 border-primary">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Update Status</h5>
                        <form asp-action="UpdateOrderStatus" asp-controller="Orders" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.OrderId" />
            
                            <div class="row g-3 align-items-end">
                                <div class="col-md-5">
                                    <label class="form-label small text-muted text-uppercase fw-bold">New Status</label>
                                    <select name="newStatus" class="form-select form-select-lg" required>
                                        <option value="">Select Status...</option>
                                        @if (Model.Status == OrderStatus.Pending)
                                        {
                                            <option value="@((int)OrderStatus.Confirmed)">Confirm Order</option>
                                            <option value="@((int)OrderStatus.Cancelled)">Reject Order</option>
                                        }
                                        else if (Model.Status == OrderStatus.Confirmed)
                                        {
                                            <option value="@((int)OrderStatus.Processing)">Start Processing</option>
                                        }
                                        else if (Model.Status == OrderStatus.Processing)
                                        {
                                            <option value="@((int)OrderStatus.Shipped)">Ready for Shipping</option>
                                            <option value="@((int)OrderStatus.Delivered)">Mark as Delivered</option>
                                        }
                                        else if (Model.Status == OrderStatus.Shipped)
                                        {
                                            <option value="@((int)OrderStatus.Delivered)">Mark as Delivered</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-7">
                                    <button type="submit" class="btn btn-dark btn-lg w-100 fw-bold">
                                        Update Status
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Payment Summary -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Payment Summary</h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span class="fw-bold">@Model.TotalPrice.ToString("N2") SAR</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="text-muted">Tax (Included)</span>
                        <span class="fw-bold">0.00 SAR</span>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top mb-4">
                        <span class="fw-bold fs-5">Total</span>
                        <span class="fw-bold fs-4 text-primary">@Model.TotalPrice.ToString("N2") SAR</span>
                    </div>

                    @if (Model.IsPaid)
                    {
                        <div class="alert alert-success border-0 d-flex align-items-center mb-0">
                            <i class="fas fa-check-circle fs-4 me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-0">Paid Successfully</h6>
                                <small>Thank you for your payment</small>
                            </div>
                        </div>
                    }
                    else if (Model.Status != OrderStatus.Cancelled)
                    {
                        <div class="alert alert-warning border-0 d-flex align-items-center mb-3">
                            <i class="fas fa-clock fs-4 me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-0">Payment Pending</h6>
                                <small>Please complete payment</small>
                            </div>
                        </div>
                        
                        @if (Model.IsCustomer)
                        {
                            <a href="/payments/process?orderId=@Model.OrderId" class="btn btn-dark w-100 py-3 fw-bold rounded-pill shadow-sm transition-all hover-scale">
                                Pay Now <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        }
                    }
                </div>
            </div>

            <!-- Tailor/Customer Info -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-body p-4 text-center">
                    <h5 class="fw-bold mb-4">@(Model.IsTailor ? "Customer" : "Tailor") Info</h5>
                    
                    <div class="mb-3">
                        @if (Model.TailorProfilePictureData != null && !Model.IsTailor)
                        {
                            <img src="data:@Model.TailorProfilePictureContentType;base64,@Convert.ToBase64String(Model.TailorProfilePictureData)" 
                                 class="rounded-circle shadow-sm" 
                                 style="width: 80px; height: 80px; object-fit: cover;" 
                                 alt="@Model.TailorName" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center shadow-sm" style="width: 80px; height: 80px;">
                                <i class="fas fa-user fs-3 text-muted"></i>
                            </div>
                        }
                    </div>

                    <h5 class="fw-bold mb-1">@(Model.IsTailor ? Model.CustomerName : Model.TailorShopName)</h5>
                    <p class="text-muted mb-4">@(Model.IsTailor ? "Valued Customer" : Model.TailorName)</p>

                    <div class="d-grid gap-2">
                        @{
                            var phone = Model.IsTailor ? Model.CustomerPhone : Model.TailorPhone;
                        }
                        @if (!string.IsNullOrEmpty(phone))
                        {
                            <a href="tel:@phone" class="btn btn-outline-dark rounded-pill">
                                <i class="fas fa-phone me-2"></i> Call
                            </a>
                            <a href="https://wa.me/@phone.Replace("+", "")" target="_blank" class="btn btn-outline-success rounded-pill">
                                <i class="fab fa-whatsapp me-2"></i> WhatsApp
                            </a>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Cancel Order -->
            @if (Model.IsCustomer && (Model.Status == OrderStatus.Pending || Model.Status == OrderStatus.PendingPayment))
            {
                 <form action="/orders/@Model.OrderId/cancel" method="post" onsubmit="return confirm('Are you sure you want to cancel this order?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-danger text-decoration-none w-100">
                        Cancel Order
                    </button>
                </form>
            }
        </div>
    </div>
</div>

<style>
    /* Timeline Styles */
    .timeline-step {
        width: 20%;
        position: relative;
        z-index: 1;
    }
    
    .timeline-icon {
        width: 40px;
        height: 40px;
        color: #dee2e6;
        border-color: #dee2e6 !important;
        transition: all 0.3s ease;
    }
    
    .timeline-step.active .timeline-icon {
        background-color: #000000 !important;
        border-color: #000000 !important;
        color: #ffffff;
        transform: scale(1.1);
    }
    
    .timeline-step.active p {
        color: #000000;
    }
    
    .timeline-step p {
        color: #adb5bd;
        transition: all 0.3s ease;
    }

    /* Hover Effects */
    .hover-zoom {
        transition: transform 0.3s ease;
    }
    
    .hover-zoom:hover {
        transform: scale(1.02);
    }
    
    .hover-scale:hover {
        transform: scale(1.02);
    }
    
    .transition-all {
        transition: all 0.3s ease;
    }
    
    .object-fit-cover {
        object-fit: cover;
    }
    
    /* Theme Colors */
    .text-warning {
        color: #d4af37 !important;
    }
    
    .bg-warning-subtle {
        background-color: rgba(212, 175, 55, 0.1) !important;
    }
    
    .border-warning-subtle {
        border-color: rgba(212, 175, 55, 0.2) !important;
    }
</style>
