@model TafsilkPlatform.Models.Models.User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-4">
            <!-- User Profile Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                  <div class="user-avatar mb-3">
           @if (Model.CustomerProfile?.ProfilePictureData != null || Model.TailorProfile?.ProfilePictureData != null)
                {
              <img src="@Url.Action("ProfilePicture", "Account", new { id = Model.Id })" 
           alt="@Model.Email" 
   class="rounded-circle"
         style="width: 120px; height: 120px; object-fit: cover;">
        }
             else
  {
                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center"
            style="width: 120px; height: 120px; font-size: 3rem; margin: 0 auto;">
                @(Model.Email?.Substring(0, 1).ToUpper())
             </div>
        }
    </div>

   <h3 class="mb-1">
        @(Model.CustomerProfile?.FullName ?? 
  Model.TailorProfile?.FullName ?? 
          "User")
        </h3>
  <p class="text-muted mb-3">@Model.Email</p>

        @{
  var roleClass = Model.Role?.Name?.ToLower() ?? "customer";
              var roleText = Model.Role?.Name == "Customer" ? "Customer" :
   Model.Role?.Name == "Tailor" ? "Tailor" :
      Model.Role?.Name == "Admin" ? "Admin" : "User";
         }
 <span class="badge bg-primary mb-3">@roleText</span>

  @if (!Model.IsActive)
    {
       <div class="alert alert-danger" role="alert">
        <i class="fas fa-ban me-2"></i>
         Banned
     </div>
          }
   else if (Model.LastLoginAt.HasValue && (DateTime.UtcNow - Model.LastLoginAt.Value).TotalMinutes < 30)
      {
       <div class="alert alert-success" role="alert">
        <i class="fas fa-circle me-2"></i>
        Online Now
          </div>
     }
         else
                    {
       <div class="alert alert-secondary" role="alert">
             <i class="fas fa-circle me-2"></i>
       Offline
  </div>
          }

                    <div class="d-grid gap-2">
     @if (Model.Role?.Name != "Admin")
         {
        @if (!Model.IsActive)
          {
  <form method="post" asp-action="UnbanUser" asp-route-userId="@Model.Id">
           @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">
                <i class="fas fa-user-check me-2"></i>
      Unban
     </button>
          </form>
        }
else
        {
    <button class="btn btn-danger" onclick="confirmBan('@Model.Id', '@Model.Email')">
         <i class="fas fa-ban me-2"></i>
     Ban User
        </button>
  }
            }
<a href="@Url.Action("Users", "AdminDashboard")" class="btn btn-outline-secondary">
                 <i class="fas fa-arrow-right me-2"></i>
           Back to List
              </a>
           </div>
        </div>
            </div>

      <!-- Quick Stats -->
  <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
     <h5 class="mb-0">Quick Stats</h5>
        </div>
      <div class="list-group list-group-flush">
            <div class="list-group-item d-flex justify-content-between">
                    <span>Registration Date</span>
            <strong>@Model.CreatedAt.ToString("yyyy/MM/dd")</strong>
        </div>
      <div class="list-group-item d-flex justify-content-between">
<span>Last Login</span>
    <strong>
       @if (Model.LastLoginAt.HasValue)
        {
               @Model.LastLoginAt.Value.ToString("yyyy/MM/dd HH:mm")
    }
            else
            {
    <span class="text-muted">Never Logged In</span>
      }
     </strong>
        </div>
                <div class="list-group-item d-flex justify-content-between">
         <span>Email Verified</span>
        @if (Model.EmailVerified)
 {
 <span class="badge bg-success">Yes</span>
           }
                 else
           {
     <span class="badge bg-danger">No</span>
   }
        </div>
   @if (ViewBag.Orders != null)
           {
             <div class="list-group-item d-flex justify-content-between">
   <span>Order Count</span>
     <strong>@ViewBag.Orders.Count</strong>
   </div>
       }
            </div>
          </div>
        </div>

        <div class="col-md-8">
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs mb-3" role="tablist">
          <li class="nav-item" role="presentation">
      <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#info" type="button">
<i class="fas fa-info-circle me-2"></i>
 Basic Info
         </button>
                </li>
          @if (ViewBag.Orders != null && ViewBag.Orders.Count > 0)
{
        <li class="nav-item" role="presentation">
                 <button class="nav-link" data-bs-toggle="tab" data-bs-target="#orders" type="button">
     <i class="fas fa-shopping-cart me-2"></i>
      Orders
   </button>
         </li>
       }
        <li class="nav-item" role="presentation">
  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#activity" type="button">
    <i class="fas fa-history me-2"></i>
         History
      </button>
          </li>
      </ul>

            <!-- Tab Content -->
     <div class="tab-content">
         <!-- Basic Info Tab -->
       <div class="tab-pane fade show active" id="info" role="tabpanel">
            <div class="card shadow-sm">
<div class="card-header">
           <h5 class="mb-0">Personal Information</h5>
             </div>
            <div class="card-body">
        <table class="table table-borderless">
    <tr>
            <th style="width: 40%;">Email:</th>
        <td>@Model.Email</td>
       </tr>
            <tr>
    <th>Phone Number:</th>
             <td>@(Model.PhoneNumber ?? "Not Specified")</td>
      </tr>
 @if (Model.CustomerProfile != null)
    {
 <tr>
         <th>Full Name:</th>
       <td>@(Model.CustomerProfile.FullName ?? "Not Specified")</td>
            </tr>
            <tr>
  <th>Date of Birth:</th>
         <td>@(Model.CustomerProfile.DateOfBirth?.ToString("yyyy/MM/dd") ?? "Not Specified")</td>
 </tr>
      <tr>
    <th>Gender:</th>
           <td>@(Model.CustomerProfile.Gender ?? "Not Specified")</td>
  </tr>
      }
               @if (Model.TailorProfile != null)
         {
      <tr>
     <th>Shop Name:</th>
<td>@(Model.TailorProfile.ShopName ?? "Not Specified")</td>
</tr>
           <tr>
    <th>Address:</th>
       <td>@(Model.TailorProfile.Address ?? "Not Specified")</td>
          </tr>
      <tr>
            <th>City:</th>
       <td>@(Model.TailorProfile.City ?? "Not Specified")</td>
    </tr>
 <tr>
           <th>Years of Experience:</th>
       <td>@(Model.TailorProfile.ExperienceYears?.ToString() ?? "Not Specified")</td>
     </tr>
       <tr>
    <th>Verification Status:</th>
          <td>
         @if (Model.TailorProfile.IsVerified)
        {
   <span class="badge bg-success">
    <i class="fas fa-check-circle me-1"></i>
         Verified
             </span>
    }
        else
         {
     <span class="badge bg-warning">
<i class="fas fa-clock me-1"></i>
              Under Review
     </span>
        }
               </td>
   </tr>
        <tr>
      <th>Service Count:</th>
     <td>@Model.TailorProfile.TailorServices.Count(s => !s.IsDeleted)</td>
            </tr>
 <tr>
         <th>Gallery Images:</th>
        <td>@Model.TailorProfile.PortfolioImages.Count(p => !p.IsDeleted)</td>
             </tr>
   }
             @* REMOVED: Corporate Profile Section - Corporate feature has been removed
             @if (Model.CorporateAccount != null)
         {
       <tr>
   <th>Company Name:</th>
    <td>@(Model.CorporateAccount.CompanyName ?? "Not Specified")</td>
             </tr>
    <tr>
  <th>Contact Person:</th>
      <td>@(Model.CorporateAccount.ContactPerson ?? "Not Specified")</td>
    </tr>
           <tr>
  <th>Industry:</th>
           <td>@(Model.CorporateAccount.Industry ?? "Not Specified")</td>
    </tr>
       <tr>
   <th>Tax Number:</th>
  <td>@(Model.CorporateAccount.TaxNumber ?? "Not Specified")</td>
       </tr>
      <tr>
       <th>Approval Status:</th>
  <td>
 @if (Model.CorporateAccount.IsApproved)
     {
  <span class="badge badge-success">Approved</span>
 }
            else
  {
           <span class="badge badge-warning">Pending Approval</span>
     }
      </td>
   </tr>
       }
*@

         </table>

               @if (Model.UserAddresses.Any())
           {
       <hr>
     <h6 class="mb-3">Saved Addresses</h6>
         @foreach (var address in Model.UserAddresses)
     {
       <div class="alert alert-light border">
  <strong>@address.Label</strong>
             @if (address.IsDefault)
         {
   <span class="badge bg-success me-2">Default</span>
    }
 <p class="mb-0 text-muted">@address.Street, @address.City</p>
   </div>
     }
            }
           </div>
     </div>
                </div>

       <!-- Orders Tab -->
                @if (ViewBag.Orders != null && ViewBag.Orders.Count > 0)
           {
 <div class="tab-pane fade" id="orders" role="tabpanel">
      <div class="card shadow-sm">
         <div class="card-header">
    <h5 class="mb-0">Recent Orders</h5>
   </div>
              <div class="card-body p-0">
       <div class="table-responsive">
      <table class="table table-hover mb-0">
<thead class="table-light">
       <tr>
            <th>Order ID</th>
        <th>Date</th>
    <th>Status</th>
       <th>Amount</th>
        <th>Action</th>
        </tr>
     </thead>
       <tbody>
     @foreach (var order in ViewBag.Orders)
       {
               <tr>
         <td>@order.OrderId.ToString().Substring(0, 8)</td>
             <td>@order.CreatedAt.ToString("yyyy/MM/dd")</td>
      <td>
         <span class="badge bg-info">@order.Status</span>
         </td>
         <td>@order.TotalPrice SAR</td>
        <td>
               <a href="@Url.Action("OrderDetails", "AdminDashboard", new { id = order.OrderId })" 
              class="btn btn-sm btn-outline-primary">
View
 </a>
          </td>
              </tr>
}
        </tbody>
      </table>
 </div>
  </div>
              </div>
                    </div>
     }

    <!-- Activity Log Tab -->
   <div class="tab-pane fade" id="activity" role="tabpanel">
        <div class="card shadow-sm">
       <div class="card-header">
  <h5 class="mb-0">Activity Log</h5>
</div>
 <div class="card-body">
     @if (ViewBag.ActivityLogs != null && ViewBag.ActivityLogs.Count > 0)
    {
     <div class="timeline">
          @foreach (var log in ViewBag.ActivityLogs)
             {
       <div class="timeline-item mb-3">
       <div class="d-flex">
<div class="timeline-marker bg-primary"></div>
    <div class="timeline-content ms-3">
        <h6 class="mb-1">@log.Action</h6>
         <p class="text-muted mb-1">@log.Details</p>
       <small class="text-muted">
         <i class="fas fa-clock me-1"></i>
    @log.CreatedAt.ToString("yyyy/MM/dd HH:mm")
   </small>
       @if (!string.IsNullOrEmpty(log.IpAddress))
  {
       <small class="text-muted ms-3">
   <i class="fas fa-network-wired me-1"></i>
   @log.IpAddress
    </small>
           }
        </div>
          </div>
              </div>
       }
   </div>
         }
      else
      {
            <p class="text-muted text-center py-4">No activity log</p>
 }
     </div>
           </div>
     </div>
            </div>
        </div>
    </div>
</div>

<!-- Ban Confirmation Modal -->
<div class="modal fade" id="banModal" tabindex="-1">
    <div class="modal-dialog">
    <div class="modal-content">
         <div class="modal-header">
       <h5 class="modal-title">Confirm User Ban</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to ban user <strong id="userEmail"></strong>?</p>
 <p class="text-muted">The user will be prevented from logging into the platform.</p>
       </div>
      <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
     <form method="post" id="banForm" style="display: inline;">
        @Html.AntiForgeryToken()
             <button type="submit" class="btn btn-danger">Confirm Ban</button>
    </form>
            </div>
        </div>
  </div>
</div>

@section Styles {
<style>
    .timeline {
        position: relative;
        padding-right: 20px;
    }

    .timeline-item {
        position: relative;
    }

    .timeline-marker {
        width: 12px;
      height: 12px;
        border-radius: 50%;
        position: absolute;
        right: -26px;
        top: 5px;
    }

    .timeline-item:not(:last-child)::before {
        content: '';
  position: absolute;
        right: -21px;
        top: 17px;
     width: 2px;
      height: calc(100% + 12px);
        background: #e5e7eb;
    }
</style>
}

@section Scripts {
<script>
    function confirmBan(userId, email) {
        document.getElementById('userEmail').textContent = email;
  document.getElementById('banForm').action = '/Admin/Users/Ban/' + userId;
        new bootstrap.Modal(document.getElementById('banModal')).show();
    }
</script>
}
