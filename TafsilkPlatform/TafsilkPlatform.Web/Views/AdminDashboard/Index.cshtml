@model TafsilkPlatform.Models.ViewModels.Admin.DashboardHomeViewModel
@{
    ViewData["Title"] = "Admin Dashboard | Tafsilk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <div class="container-fluid">
        <!-- Header -->
        <div class="dashboard-header">
            <h1 class="dashboard-title">Admin Dashboard</h1>
            <p class="dashboard-subtitle">Platform overview and management</p>
        </div>

        <!-- Stats Grid -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card primary">
                    <div class="stat-icon primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-label">Total Users</div>
                    <div class="stat-value">@Model.TotalUsers</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> Active users
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card info">
                    <div class="stat-icon info">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <div class="stat-label">Tailors</div>
                    <div class="stat-value">@Model.TotalTailors</div>
                    <div class="stat-change">@Model.VerifiedTailors verified</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card success">
                    <div class="stat-icon success">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="stat-label">Total Orders</div>
                    <div class="stat-value">@Model.TotalOrders</div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> @Model.ActiveOrders active
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="stat-card warning">
                    <div class="stat-icon warning">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <div class="stat-label">Pending Reviews</div>
                    <div class="stat-value">@Model.PendingPortfolioReviews</div>
                    <div class="stat-change">Requires action</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a asp-controller="AdminDashboard" asp-action="Users" class="action-btn">
                <i class="fas fa-users-cog"></i>
                <span>Manage Users</span>
            </a>
            <a asp-controller="AdminDashboard" asp-action="PortfolioReview" class="action-btn">
                <i class="fas fa-images"></i>
                <span>Portfolio Review</span>
            </a>
            <a asp-controller="AdminDashboard" asp-action="Orders" class="action-btn">
                <i class="fas fa-shopping-bag"></i>
                <span>View Orders</span>
            </a>
            <a asp-controller="AdminDashboard" asp-action="Reviews" class="action-btn">
                <i class="fas fa-star"></i>
                <span>Reviews</span>
            </a>
        </div>

        <div class="row g-4">
            <!-- Platform Stats -->
            <div class="col-lg-8">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2 class="card-title">Platform Overview</h2>
                    </div>

                    <div class="p-3">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                    <span class="text-secondary">Total Customers</span>
                                    <strong class="fs-5">@Model.TotalCustomers</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                    <span class="text-secondary">Total Tailors</span>
                                    <strong class="fs-5">@Model.TotalTailors</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-secondary">Verified Tailors</span>
                                    <strong class="fs-5">@Model.VerifiedTailors</strong>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                    <span class="text-secondary">Active Orders</span>
                                    <strong class="fs-5">@Model.ActiveOrders</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                    <span class="text-secondary">Pending Reviews</span>
                                    <strong class="fs-5">@Model.PendingPortfolioReviews</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-secondary">Total Revenue</span>
                                    <strong class="fs-5">$@Model.TotalRevenue.ToString("N0")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Status -->
            <div class="col-lg-4">
                <div class="dashboard-card mb-4">
                    <div class="card-header">
                        <h2 class="card-title">System Status</h2>
                    </div>
                    <div class="p-3">
                        <div class="d-flex align-items-center gap-2 mb-3">
                            <div class="stat-icon small-icon success">
                                <i class="fas fa-check"></i>
                            </div>
                            <div>
                                <div class="fw-medium">System Healthy</div>
                                <small class="text-muted">All services operational</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <div class="stat-icon small-icon info">
                                <i class="fas fa-database"></i>
                            </div>
                            <div>
                                <div class="fw-medium">Database Connected</div>
                                <small class="text-muted">Response time: 45ms</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .small-icon {
            width: 32px;
            height: 32px;
            font-size: 1rem;
        }
    </style>
}
