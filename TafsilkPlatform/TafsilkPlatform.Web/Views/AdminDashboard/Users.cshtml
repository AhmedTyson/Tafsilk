@model IEnumerable<TafsilkPlatform.Models.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-theme.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="dashboard-title">
                <i class="fas fa-users me-3"></i>
                User Management
            </h1>
            <p class="dashboard-subtitle">
                Manage user accounts and monitor their activity on the platform
            </p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalUsers</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon success">
                    <i class="fas fa-circle"></i>
                </div>
                <div class="stat-value">@ViewBag.OnlineUsers</div>
                <div class="stat-label">Online Now</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon warning">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="stat-value">@ViewBag.ActiveUsers</div>
                <div class="stat-label">Active Users</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon danger">
                    <i class="fas fa-user-slash"></i>
                </div>
                <div class="stat-value">@ViewBag.BannedUsers</div>
                <div class="stat-label">Banned</div>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Users">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label text-muted">Search</label>
                        <input type="text" 
                               name="search" 
                               class="form-control" 
                               placeholder="Email or Name..."
                               value="@ViewBag.SearchTerm">
                    </div>

                    <div class="col-md-3">
                        <label class="form-label text-muted">Role</label>
                        <select name="role" class="form-select">
                            <option value="">All Roles</option>
                            <option value="Customer">Customer</option>
                            <option value="Tailor">Tailor</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label text-muted">Status</label>
                        <select name="status" class="form-select">
                            <option value="">All</option>
                            <option value="Active" selected="@(ViewBag.StatusFilter == "Active")">Active</option>
                            <option value="Inactive" selected="@(ViewBag.StatusFilter == "Inactive")">Inactive</option>
                            <option value="Banned" selected="@(ViewBag.StatusFilter == "Banned")">Banned</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i>
                            </button>
                            <a href="@Url.Action("Users", "AdminDashboard")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-redo"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">User List</h5>
            <span class="text-muted small">
                @Model.Count() Users
            </span>
        </div>

        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Email Verified</th>
                                <th>Registration Date</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                var isOnline = user.LastLoginAt.HasValue && 
                                               (DateTime.UtcNow - user.LastLoginAt.Value).TotalMinutes < 30;
                                var isBanned = !user.IsActive;

                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; overflow: hidden;">
                                                @if (user.TailorProfile?.ProfilePictureData != null)
                                                {
                                                    <img src="@Url.Action("ProfilePicture", "Account", new { id = user.Id })" 
                                                         alt="@user.Email" style="width: 100%; height: 100%; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <span class="text-white fw-bold">@(user.Email?.Substring(0, 1).ToUpper())</span>
                                                }
                                            </div>
                                            <div>
                                                <div class="fw-bold text-white">
                                                    @(user.CustomerProfile?.FullName ?? 
                                                      user.TailorProfile?.FullName ?? 
                                                      "User")
                                                </div>
                                                <div class="small text-muted">@user.Email</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var roleClass = user.Role?.Name switch
                                            {
                                                "Customer" => "bg-success",
                                                "Tailor" => "bg-warning",
                                                "Admin" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @roleClass">@user.Role?.Name</span>
                                    </td>
                                    <td>
                                        @if (isBanned)
                                        {
                                            <span class="badge bg-danger">Banned</span>
                                        }
                                        else if (isOnline)
                                        {
                                            <span class="badge bg-success">Online</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Offline</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.EmailVerified)
                                        {
                                            <span class="text-success"><i class="fas fa-check-circle me-1"></i> Verified</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger"><i class="fas fa-times-circle me-1"></i> Not Verified</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted small">
                                            @user.CreatedAt.ToString("yyyy/MM/dd")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="text-muted small">
                                            @(user.LastLoginAt.HasValue ? user.LastLoginAt.Value.ToString("yyyy/MM/dd HH:mm") : "Never")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    onclick="viewUserDetails('@user.Id')">
                                                <i class="fas fa-eye"></i>
                                            </button>

                                            @if (user.Role?.Name != "Admin")
                                            {
                                                if (isBanned)
                                                {
                                                    <form method="post" 
                                                          asp-action="UnbanUser" 
                                                          asp-route-userId="@user.Id"
                                                          style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-success" title="Unban">
                                                            <i class="fas fa-user-check"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-danger" 
                                                            onclick="confirmBan('@user.Id', '@(user.Email)')" title="Ban">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination (if needed) -->
                @if (ViewBag.TotalPages > 1)
                {
                    <div class="d-flex justify-content-center p-3 gap-2">
                        <button class="pagination-btn" 
                                disabled="@(ViewBag.CurrentPage == 1)"
                                onclick="location.href='?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter&status=@ViewBag.StatusFilter'">
                            <i class="fas fa-chevron-left"></i>
                        </button>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <button class="pagination-btn @(i == ViewBag.CurrentPage ? "active" : "")"
                                    onclick="location.href='?page=@i&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter&status=@ViewBag.StatusFilter'">
                                @i
                            </button>
                        }

                        <button class="pagination-btn" 
                                disabled="@(ViewBag.CurrentPage == ViewBag.TotalPages)"
                                onclick="location.href='?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.SearchTerm&role=@ViewBag.RoleFilter&status=@ViewBag.StatusFilter'">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3 text-muted" style="font-size: 3rem;">
                        <i class="fas fa-users-slash"></i>
                    </div>
                    <h5 class="text-muted">No users found</h5>
                    <p class="text-muted small">Try adjusting your search or filters</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Ban Confirmation Modal -->
<div class="modal fade" id="banModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm User Ban</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to ban user <strong id="userEmail" class="text-white"></strong>?</p>
                <p class="text-muted">The user will be prevented from logging into the platform.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" id="banForm" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Confirm Ban</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function confirmBan(userId, email) {
        document.getElementById('userEmail').textContent = email;
        document.getElementById('banForm').action = '/AdminDashboard/BanUser/' + userId;
        new bootstrap.Modal(document.getElementById('banModal')).show();
    }

    function viewUserDetails(userId) {
        window.location.href = '/AdminDashboard/UserDetails/' + userId;
    }

    // Auto-refresh online count every 60 seconds
    setInterval(function() {
        fetch('/AdminDashboard/GetOnlineCount')
            .then(response => response.json())
            .then(data => {
                const onlineStat = document.querySelector('.stat-card .success').closest('.stat-card').querySelector('.stat-value');
                if(onlineStat) onlineStat.textContent = data.count;
            });
    }, 60000);
</script>
}
