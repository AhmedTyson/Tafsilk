@model TafsilkPlatform.Models.ViewModels.Store.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
    var selectedCity = Model.ShippingAddress.City ?? "";
}

<div class="container py-5">
    <!-- ✅ SUCCESS SECTION (Hidden by default) -->
    <div id="successSection" class="d-none">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Success Animation -->
                <div class="text-center mb-4">
                    <div class="success-checkmark">
                        <div class="check-icon">
                            <span class="icon-line line-tip"></span>
                            <span class="icon-line line-long"></span>
                            <div class="icon-circle"></div>
                            <div class="icon-fix"></div>
                        </div>
                    </div>
                    <h1 class="text-success mt-4 mb-2">
                        <i class="fas fa-check-circle"></i> Order Confirmed Successfully!
                    </h1>
                    <p class="text-muted lead">Thank you for your order from Tafsilk Platform</p>
                </div>

                <!-- Order Summary Card -->
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-receipt"></i> Order Details
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <small class="text-muted d-block">Order Number</small>
                                    <strong class="h5 text-primary" id="successOrderNumber">#---</strong>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="info-item">
                                    <small class="text-muted d-block">Order Date</small>
                                    <strong id="successOrderDate">---</strong>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4"/>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-item mb-3">
                                    <small class="text-muted d-block">
                                        <i class="fas fa-money-bill-wave"></i> Payment Method
                                    </small>
                                    <strong class="text-success">Cash On Delivery</strong>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="info-item mb-3">
                                    <small class="text-muted d-block">
                                        <i class="fas fa-dollar-sign"></i> Total Amount
                                    </small>
                                    <strong class="h4 text-primary" id="successTotalAmount">@Model.Cart.Total.ToString("N2") EGP</strong>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info border-info" id="successPaymentNote">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle fa-2x me-3"></i>
                                <div>
                                    <strong>Important Note:</strong>
                                    <p class="mb-0">
                                        Please prepare the due amount (<span id="successAmount">@Model.Cart.Total.ToString("N2")</span> EGP) in cash upon receiving the order from the courier.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delivery Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-truck"></i> Delivery Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-primary text-white me-3">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Estimated Delivery Time</small>
                                        <strong>3-5 Business Days</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-success text-white me-3">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Order Status</small>
                                        <strong class="text-success">Confirmed</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-light border mt-3">
                            <h6><i class="fas fa-shipping-fast"></i> Delivery Steps:</h6>
                            <ol class="mb-0 ps-3">
                                <li>Order confirmed and processing</li>
                                <li>Order preparation and packing</li>
                                <li>Order shipped for delivery</li>
                                <li>Courier will contact you for delivery</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="mb-4">What would you like to do now?</h5>
                        
                        <div class="mb-4">
                            <a href="@Url.Action("MyOrders", "Orders")" class="btn btn-success btn-lg px-5 py-3" style="font-size: 1.1rem;">
                                <i class="fas fa-list me-2"></i>
                                View All Orders
                            </a>
                        </div>
                        
                        <hr class="my-4"/>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a href="#" id="viewOrderDetailsLink" class="btn btn-outline-primary btn-lg w-100">
                                    <i class="fas fa-eye"></i><br/>
                                    <small>Order Details</small>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="@Url.Action("Index", "Store")" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-shopping-bag"></i><br/>
                                    <small>Continue Shopping</small>
                                </a>
                            </div>
                        </div>

                        <hr class="my-4"/>

                        <div class="text-muted">
                            <p class="mb-1">
                                <i class="fas fa-envelope"></i> 
                                Order details will be sent to your email
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-question-circle"></i> 
                                Contact us for any inquiries
                            </p>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        <i class="fas fa-heart text-danger"></i>
                        Thank you for trusting Tafsilk
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ CHECKOUT FORM SECTION (Visible by default) -->
    <div id="checkoutSection">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="mb-3">
                    <i class="fas fa-shopping-bag"></i> Checkout
                </h1>
                
                <!-- Progress Steps -->
                <div class="checkout-progress mb-4">
                    <div class="progress" style="height: 3px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <small class="text-success"><i class="fas fa-check-circle"></i> Shopping</small>
                        <small class="text-success"><i class="fas fa-check-circle"></i> Cart</small>
                        <small class="text-primary fw-bold"><i class="fas fa-circle"></i> Confirm Order</small>
                        <small class="text-muted">Done</small>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="ProcessCheckout" method="post" id="checkoutForm">
            @Html.AntiForgeryToken()
            
            <input type="hidden" name="PaymentMethod" value="CashOnDelivery" />
            
            <div class="row">
                <div class="col-lg-8">
                    <!-- Shipping Address -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-shipping-fast"></i> Shipping Address
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="fullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="fullName" 
                                           name="ShippingAddress.FullName" 
                                           value="@Model.ShippingAddress.FullName" required>
                                    <div class="invalid-feedback">Please enter your full name</div>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text">+20</span>
                                        <input type="tel" class="form-control" id="phone" 
                                               name="ShippingAddress.PhoneNumber" 
                                               value="@Model.ShippingAddress.PhoneNumber" 
                                               pattern="01[0-9]{9}" maxlength="11" placeholder="01xxxxxxxxx" required>
                                    </div>
                                    <div class="invalid-feedback">Please enter a valid Egyptian phone number</div>
                                    <small class="text-muted">Enter 11 digits (e.g., 01012345678)</small>
                                </div>
                                
                                <div class="col-12">
                                    <label for="street" class="form-label">Address <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="street" 
                                           name="ShippingAddress.Street" 
                                           value="@Model.ShippingAddress.Street" 
                                           placeholder="Street, Building No, Floor" required>
                                    <div class="invalid-feedback">Please enter your address</div>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="city" class="form-label">City <span class="text-danger">*</span></label>
                                    <select class="form-select" id="city" name="ShippingAddress.City" required>
                                        <option value="">Select City</option>
                                        <option value="Cairo" selected="@(selectedCity == "Cairo")">Cairo</option>
                                        <option value="Giza" selected="@(selectedCity == "Giza")">Giza</option>
                                        <option value="Alexandria" selected="@(selectedCity == "Alexandria")">Alexandria</option>
                                        <option value="Shubra El Kheima" selected="@(selectedCity == "Shubra El Kheima")">Shubra El Kheima</option>
                                        <option value="Port Said" selected="@(selectedCity == "Port Said")">Port Said</option>
                                        <option value="Suez" selected="@(selectedCity == "Suez")">Suez</option>
                                        <option value="Luxor" selected="@(selectedCity == "Luxor")">Luxor</option>
                                        <option value="Aswan" selected="@(selectedCity == "Aswan")">Aswan</option>
                                        <option value="Other" selected="@(selectedCity == "Other")">Other</option>
                                    </select>
                                    <div class="invalid-feedback">Please select a city</div>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="district" class="form-label">District</label>
                                    <input type="text" class="form-control" id="district" 
                                           name="ShippingAddress.District" 
                                           value="@Model.ShippingAddress.District">
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="postalCode" class="form-label">Postal Code</label>
                                    <input type="text" class="form-control" id="postalCode" 
                                           name="ShippingAddress.PostalCode" 
                                           value="@Model.ShippingAddress.PostalCode"
                                           pattern="[0-9]{5}" placeholder="12345">
                                    <small class="text-muted">Optional - 5 digits</small>
                                </div>
                                
                                <div class="col-12">
                                    <label for="additionalInfo" class="form-label">Additional Information</label>
                                    <textarea class="form-control" id="additionalInfo" rows="2"
                                              name="ShippingAddress.AdditionalInfo"
                                              placeholder="Apartment number, access details, etc...">@Model.ShippingAddress.AdditionalInfo</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Cash Only Payment Method -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-money-bill-wave"></i> Payment Method
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-success border-success mb-0">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-money-bill fa-3x text-success me-3"></i>
                                    <div>
                                        <h5 class="mb-1"><strong>Cash On Delivery</strong></h5>
                                        <p class="mb-0">Payment will be made in cash upon receiving your order from the courier</p>
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle"></i> 
                                            Please prepare the due amount upon delivery
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delivery Notes -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-comment"></i> Delivery Notes (Optional)
                            </h5>
                        </div>
                        <div class="card-body">
                            <textarea class="form-control" name="DeliveryNotes" rows="3"
                                      placeholder="Any special delivery instructions..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Order Summary -->
                    <div class="card shadow-sm sticky-top" style="top: 20px;">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-receipt"></i> Order Summary
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Products (@Model.Cart.TotalItems):</strong>
                                <div class="mt-2" style="max-height: 200px; overflow-y: auto;">
                                    @foreach (var item in Model.Cart.Items)
                                    {
                                        <div class="d-flex justify-content-between small mt-2 pb-2 border-bottom">
                                            <span>
                                                <strong>@item.ProductName</strong>
                                                @if (!string.IsNullOrEmpty(item.SelectedSize))
                                                {
                                                    <span class="text-muted"> (@item.SelectedSize)</span>
                                                }
                                                <br/>
                                                <small class="text-muted">@item.Quantity × @item.UnitPrice.ToString("N2") EGP</small>
                                            </span>
                                            <span class="fw-bold">@item.TotalPrice.ToString("N2") EGP</span>
                                        </div>
                                    }
                                </div>
                            </div>
                            
                            <hr class="my-3"/>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>@Model.Cart.SubTotal.ToString("N2") EGP</span>
                            </div>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping:</span>
                                <span class="@(Model.Cart.ShippingCost == 0 ? "text-success fw-bold" : "")">
                                    @if (Model.Cart.ShippingCost == 0)
                                    {
                                        <text><i class="fas fa-gift"></i> Free</text>
                                    }
                                    else
                                    {
                                        <text>@Model.Cart.ShippingCost.ToString("N2") EGP</text>
                                    }
                                </span>
                            </div>
                            
                            <div class="d-flex justify-content-between mb-3">
                                <span>VAT (14%):</span>
                                <span>@Model.Cart.Tax.ToString("N2") EGP</span>
                            </div>
                            
                            <hr class="my-3"/>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <strong class="h5">Total:</strong>
                                <strong class="h4 text-primary">@Model.Cart.Total.ToString("N2") EGP</strong>
                            </div>
                            
                            <div class="alert alert-info small mb-3">
                                <i class="fas fa-hand-holding-usd"></i>
                                <strong>Cash on Delivery</strong>
                            </div>
                            
                            <button type="submit" class="btn btn-success btn-lg w-100 mb-2" id="submitBtn">
                                <i class="fas fa-check-circle"></i> Confirm Order
                            </button>
                            
                            <a href="@Url.Action("Cart", "Store")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-arrow-right"></i> Back to Cart
                            </a>

                            <div class="mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label small" for="agreeTerms">
                                        I agree to <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms and Conditions</a>
                                    </label>
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt"></i> 100% Secure Transaction
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Trust Badges -->
                    <div class="card shadow-sm mt-3">
                        <div class="card-body p-2">
                            <div class="row text-center small g-2">
                                <div class="col-4">
                                    <i class="fas fa-money-bill-wave text-success"></i>
                                    <p class="mb-0 small">Cash</p>
                                </div>
                                <div class="col-4">
                                    <i class="fas fa-truck text-primary"></i>
                                    <p class="mb-0 small">Fast Delivery</p>
                                </div>
                                <div class="col-4">
                                    <i class="fas fa-undo text-info"></i>
                                    <p class="mb-0 small">Free Returns</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Terms Modal -->
<div class="modal fade" id="termsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Terms and Conditions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>Purchase and Delivery Terms</h6>
                <p>By agreeing to these terms, you accept:</p>
                <ul>
                    <li>Accuracy of provided information</li>
                    <li>Return and Exchange Policy</li>
                    <li>Delivery and Shipping Terms</li>
                    <li>Privacy Policy</li>
                    <li>Cash on Delivery Payment</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Success Checkmark Animation */
        .success-checkmark {
            width: 100px;
            height: 100px;
            margin: 0 auto;
        }

        .check-icon {
            width: 100px;
            height: 100px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid #198754;
            animation: checkmark-circle 0.6s ease;
        }

        .icon-line {
            height: 5px;
            background-color: #198754;
            display: block;
            border-radius: 2px;
            position: absolute;
            z-index: 10;
        }

        .icon-line.line-tip {
            top: 46px;
            left: 14px;
            width: 25px;
            transform: rotate(45deg);
            animation: checkmark-tip 0.75s 0.3s ease forwards;
        }

        .icon-line.line-long {
            top: 38px;
            right: 8px;
            width: 47px;
            transform: rotate(-45deg);
            animation: checkmark-long 0.75s 0.3s ease forwards;
        }

        .icon-circle {
            top: -4px;
            left: -4px;
            z-index: 10;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            position: absolute;
            box-sizing: content-box;
            border: 4px solid rgba(25, 135, 84, 0.3);
        }

        .icon-fix {
            top: 8px;
            width: 5px;
            left: 26px;
            z-index: 1;
            height: 85px;
            position: absolute;
            transform: rotate(-45deg);
            background-color: #fff;
        }

        @@keyframes checkmark-circle {
            0% { transform: scale(0); opacity: 1; }
            100% { transform: scale(1); opacity: 1; }
        }

        @@keyframes checkmark-tip {
            0% { width: 0; left: 1px; top: 19px; }
            54% { width: 0; left: 1px; top: 19px; }
            70% { width: 50px; left: -8px; top: 37px; }
            84% { width: 17px; left: 21px; top: 48px; }
            100% { width: 25px; left: 14px; top: 46px; }
        }

        @@keyframes checkmark-long {
            0% { width: 0; right: 46px; top: 54px; }
            65% { width: 0; right: 46px; top: 54px; }
            84% { width: 55px; right: 0; top: 35px; }
            100% { width: 47px; right: 8px; top: 38px; }
        }

        .info-item {
            padding: 10px 0;
        }

        .icon-box {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .card {
            border: none;
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .btn-success.btn-lg {
            box-shadow: 0 4px 15px rgba(25, 135, 84, 0.3);
            transition: all 0.3s ease;
        }
        
        .btn-success.btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(25, 135, 84, 0.4);
        }

        .is-invalid {
            border-color: #dc3545 !important;
        }
        
        .is-valid {
            border-color: #198754 !important;
        }
        
        /* Fade transitions */
        .fade-out {
            animation: fadeOut 0.5s forwards;
        }

        .fade-in {
            animation: fadeIn 0.5s forwards;
        }

        @@keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; display: none; }
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
}

@section Scripts {
    <script>
        // ===== MERGED CHECKOUT WITH INLINE SUCCESS =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Merged Checkout page loaded');
            
            const checkoutForm = document.getElementById('checkoutForm');
            const submitBtn = document.getElementById('submitBtn');
            const agreeTerms = document.getElementById('agreeTerms');
            const checkoutSection = document.getElementById('checkoutSection');
            const successSection = document.getElementById('successSection');
            
            if (!checkoutForm || !submitBtn || !agreeTerms) {
                console.error('Required elements not found');
                return;
            }
            
            // ===== FORM SUBMISSION WITH AJAX =====
            checkoutForm.addEventListener('submit', function(e) {
                e.preventDefault(); // ✅ Prevent default form submission
                
                console.log('Form submit intercepted for AJAX');
                
                // Validate terms
                if (!agreeTerms.checked) {
                    showNotification('Please agree to Terms and Conditions', 'warning');
                    agreeTerms.focus();
                    agreeTerms.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    return false;
                }
                
                // Validate required fields
                const requiredFields = checkoutForm.querySelectorAll('input[required]:not([type="checkbox"]), select[required]');
                let isValid = true;
                
                requiredFields.forEach(field => {
                    const value = field.value ? field.value.trim() : '';
                    if (!value || (field.tagName === 'SELECT' && value === '')) {
                        isValid = false;
                        field.classList.add('is-invalid');
                        field.classList.remove('is-valid');
                    } else {
                        field.classList.remove('is-invalid');
                        field.classList.add('is-valid');
                    }
                });
                
                if (!isValid) {
                    showNotification('Please fill all required fields marked with *', 'danger');
                    const firstInvalid = checkoutForm.querySelector('.is-invalid');
                    if (firstInvalid) {
                        firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstInvalid.focus();
                    }
                    return false;
                }
                
                // Show loading state
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Confirming Order...';
                
                // ✅ Submit form via AJAX
                const formData = new FormData(checkoutForm);
                
                fetch(checkoutForm.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    // Check if response is JSON or redirect
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json();
                    } else {
                        // Handle redirect - get the URL from response
                        return response.text().then(html => {
                            // Try to extract order ID from redirect URL
                            const parser = new DOMParser();
                            const doc = parser.parseFromHTML(html, 'text/html');
                            return { success: true, redirected: true };
                        });
                    }
                })
                .then(data => {
                    console.log('✅ Order submitted successfully', data);
                    
                    // ✅ Show success section
                    showSuccessMessage(data);
                })
                .catch(error => {
                    console.error('❌ Error submitting order:', error);
                    showNotification('Error processing order. Please try again.', 'danger');
                    
                    // Re-enable button
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> Confirm Order';
                });
            });
            
            // ===== SHOW SUCCESS MESSAGE =====
            function showSuccessMessage(orderData) {
                // Update success section with order data
                if (orderData && orderData.orderNumber) {
                    document.getElementById('successOrderNumber').textContent = '#' + orderData.orderNumber;
                }
                if (orderData && orderData.orderDate) {
                    document.getElementById('successOrderDate').textContent = orderData.orderDate;
                }
                if (orderData && orderData.orderId) {
                    const viewDetailsLink = document.getElementById('viewOrderDetailsLink');
                    viewDetailsLink.href = '@Url.Action("OrderDetails", "Orders")?id=' + orderData.orderId;
                }
                
                // Fade out checkout section
                checkoutSection.classList.add('fade-out');
                
                setTimeout(() => {
                    checkoutSection.classList.add('d-none');
                    successSection.classList.remove('d-none');
                    successSection.classList.add('fade-in');
                    
                    // Scroll to top smoothly
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    
                    // Clear checkout storage
                    try {
                        localStorage.removeItem('tafsilk_checkout_data');
                        sessionStorage.removeItem('tafsilk_cart_data');
                    } catch (e) {
                        console.warn('Could not clear storage:', e);
                    }
                }, 500);
            }
            
            // ===== PHONE NUMBER FORMATTING =====
            const phoneInput = document.getElementById('phone');
            if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    let value = this.value.replace(/[^0-9]/g, '');
                    if (value.length > 11) value = value.substring(0, 11);
                    this.value = value;
                    
                    if (value.length === 11 && value.startsWith('01')) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else if (value.length > 0) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else {
                        this.classList.remove('is-invalid', 'is-valid');
                    }
                });
            }
            
            // ===== REAL-TIME VALIDATION =====
            const requiredFields = document.querySelectorAll('input[required]:not([type="checkbox"]), select[required]');
            requiredFields.forEach(field => {
                field.addEventListener('blur', function() {
                    const value = this.value ? this.value.trim() : '';
                    if (!value || (this.tagName === 'SELECT' && value === '')) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });
            
            // ===== NOTIFICATION HELPER =====
            function showNotification(message, type = 'info') {
                // Create notification element
                const notification = document.createElement('div');
                notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
                notification.style.cssText = 'top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 300px;';
                notification.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                
                document.body.appendChild(notification);
                
                // Auto-remove after 3 seconds
                setTimeout(() => {
                    notification.remove();
                }, 3000);
            }
        });
    </script>
