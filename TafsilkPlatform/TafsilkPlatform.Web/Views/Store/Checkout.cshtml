@model TafsilkPlatform.Models.ViewModels.Store.CheckoutViewModel
@{
    ViewData["Title"] = "إتمام الطلب";
    var selectedCity = Model.ShippingAddress.City ?? "";
}

<div class="container py-5" dir="rtl">
    <!-- ✅ SUCCESS SECTION (Hidden by default) -->
    <div id="successSection" class="d-none">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Success Animation -->
                <div class="text-center mb-4">
                    <div class="success-checkmark">
                        <div class="check-icon">
                            <span class="icon-line line-tip"></span>
                            <span class="icon-line line-long"></span>
                            <div class="icon-circle"></div>
                            <div class="icon-fix"></div>
                        </div>
                    </div>
                    <h1 class="text-success mt-4 mb-2">
                        <i class="fas fa-check-circle"></i> تم تأكيد طلبك بنجاح!
                    </h1>
                    <p class="text-muted lead">شكراً لك على طلبك من منصة تفصيلك</p>
                </div>

                <!-- Order Summary Card -->
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-receipt"></i> تفاصيل الطلب
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <small class="text-muted d-block">رقم الطلب</small>
                                    <strong class="h5 text-primary" id="successOrderNumber">#---</strong>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="info-item">
                                    <small class="text-muted d-block">تاريخ الطلب</small>
                                    <strong id="successOrderDate">---</strong>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4"/>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-item mb-3">
                                    <small class="text-muted d-block">
                                        <i class="fas fa-money-bill-wave"></i> طريقة الدفع
                                    </small>
                                    <strong class="text-success">الدفع عند الاستلام</strong>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <div class="info-item mb-3">
                                    <small class="text-muted d-block">
                                        <i class="fas fa-dollar-sign"></i> المبلغ الإجمالي
                                    </small>
                                    <strong class="h4 text-primary" id="successTotalAmount">@Model.Cart.Total.ToString("N2") ريال</strong>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info border-info" id="successPaymentNote">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle fa-2x me-3"></i>
                                <div>
                                    <strong>ملاحظة هامة:</strong>
                                    <p class="mb-0">
                                        يرجى تجهيز المبلغ المستحق (<span id="successAmount">@Model.Cart.Total.ToString("N2")</span> ريال) نقداً عند استلام الطلب من المندوب.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delivery Information -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-truck"></i> معلومات التوصيل
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-primary text-white me-3">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">الوقت المتوقع للتوصيل</small>
                                        <strong>3-5 أيام عمل</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-success text-white me-3">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">حالة الطلب</small>
                                        <strong class="text-success">تم التأكيد</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-light border mt-3">
                            <h6><i class="fas fa-shipping-fast"></i> خطوات التوصيل:</h6>
                            <ol class="mb-0 ps-3">
                                <li>تم تأكيد طلبك وجاري المعالجة</li>
                                <li>سيتم تحضير طلبك وتعبئته</li>
                                <li>سيتم شحن الطلب للتوصيل</li>
                                <li>سيقوم المندوب بالاتصال بك لتحديد موعد التسليم</li>
                            </ol>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="mb-4">ماذا تريد أن تفعل الآن؟</h5>
                        
                        <div class="mb-4">
                            <a href="@Url.Action("MyOrders", "Orders")" class="btn btn-success btn-lg px-5 py-3" style="font-size: 1.1rem;">
                                <i class="fas fa-list me-2"></i>
                                عرض جميع الطلبات
                            </a>
                        </div>
                        
                        <hr class="my-4"/>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a href="#" id="viewOrderDetailsLink" class="btn btn-outline-primary btn-lg w-100">
                                    <i class="fas fa-eye"></i><br/>
                                    <small>تفاصيل هذا الطلب</small>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="@Url.Action("Index", "Store")" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-shopping-bag"></i><br/>
                                    <small>متابعة التسوق</small>
                                </a>
                            </div>
                        </div>

                        <hr class="my-4"/>

                        <div class="text-muted">
                            <p class="mb-1">
                                <i class="fas fa-envelope"></i> 
                                سيتم إرسال تفاصيل الطلب إلى بريدك الإلكتروني
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-question-circle"></i> 
                                لأي استفسار، يمكنك التواصل معنا
                            </p>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        <i class="fas fa-heart text-danger"></i>
                        نشكرك على ثقتك بمنصة تفصيلك
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ CHECKOUT FORM SECTION (Visible by default) -->
    <div id="checkoutSection">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="mb-3">
                    <i class="fas fa-shopping-bag"></i> إتمام الطلب
                </h1>
                
                <!-- Progress Steps -->
                <div class="checkout-progress mb-4">
                    <div class="progress" style="height: 3px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <small class="text-success"><i class="fas fa-check-circle"></i> التسوق</small>
                        <small class="text-success"><i class="fas fa-check-circle"></i> السلة</small>
                        <small class="text-primary fw-bold"><i class="fas fa-circle"></i> تأكيد الطلب</small>
                        <small class="text-muted">تم</small>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="ProcessCheckout" method="post" id="checkoutForm">
            @Html.AntiForgeryToken()
            
            <input type="hidden" name="PaymentMethod" value="CashOnDelivery" />
            
            <div class="row">
                <div class="col-lg-8">
                    <!-- Shipping Address -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-shipping-fast"></i> عنوان الشحن
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="fullName" class="form-label">الاسم الكامل <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="fullName" 
                                           name="ShippingAddress.FullName" 
                                           value="@Model.ShippingAddress.FullName" required>
                                    <div class="invalid-feedback">الرجاء إدخال الاسم الكامل</div>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">رقم الجوال <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text">+966</span>
                                        <input type="tel" class="form-control" id="phone" 
                                               name="ShippingAddress.PhoneNumber" 
                                               value="@Model.ShippingAddress.PhoneNumber" 
                                               pattern="[0-9]{9}" placeholder="5xxxxxxxx" required>
                                    </div>
                                    <div class="invalid-feedback">الرجاء إدخال رقم جوال مكون من 9 أرقام</div>
                                    <small class="text-muted">أدخل 9 أرقام بدون الصفر (مثال: 512345678)</small>
                                </div>
                                
                                <div class="col-12">
                                    <label for="street" class="form-label">العنوان <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="street" 
                                           name="ShippingAddress.Street" 
                                           value="@Model.ShippingAddress.Street" 
                                           placeholder="الشارع، رقم المبنى، الطابق" required>
                                    <div class="invalid-feedback">الرجاء إدخال العنوان</div>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="city" class="form-label">المدينة <span class="text-danger">*</span></label>
                                    <select class="form-select" id="city" name="ShippingAddress.City" required>
                                        <option value="">اختر المدينة</option>
                                        <option value="الرياض" selected="@(selectedCity == "الرياض")">الرياض</option>
                                        <option value="جدة" selected="@(selectedCity == "جدة")">جدة</option>
                                        <option value="مكة" selected="@(selectedCity == "مكة")">مكة</option>
                                        <option value="المدينة" selected="@(selectedCity == "المدينة")">المدينة المنورة</option>
                                        <option value="الدمام" selected="@(selectedCity == "الدمام")">الدمام</option>
                                        <option value="الخبر" selected="@(selectedCity == "الخبر")">الخبر</option>
                                        <option value="الطائف" selected="@(selectedCity == "الطائف")">الطائف</option>
                                        <option value="أخرى" selected="@(selectedCity == "أخرى")">أخرى</option>
                                    </select>
                                    <div class="invalid-feedback">الرجاء اختيار المدينة</div>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="district" class="form-label">الحي</label>
                                    <input type="text" class="form-control" id="district" 
                                           name="ShippingAddress.District" 
                                           value="@Model.ShippingAddress.District">
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="postalCode" class="form-label">الرمز البريدي</label>
                                    <input type="text" class="form-control" id="postalCode" 
                                           name="ShippingAddress.PostalCode" 
                                           value="@Model.ShippingAddress.PostalCode"
                                           pattern="[0-9]{5}" placeholder="12345">
                                    <small class="text-muted">اختياري - 5 أرقام</small>
                                </div>
                                
                                <div class="col-12">
                                    <label for="additionalInfo" class="form-label">معلومات إضافية</label>
                                    <textarea class="form-control" id="additionalInfo" rows="2"
                                              name="ShippingAddress.AdditionalInfo"
                                              placeholder="رقم الشقة، معلومات الوصول، إلخ...">@Model.ShippingAddress.AdditionalInfo</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Cash Only Payment Method -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-money-bill-wave"></i> طريقة الدفع
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-success border-success mb-0">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-money-bill fa-3x text-success me-3"></i>
                                    <div>
                                        <h5 class="mb-1"><strong>الدفع عند الاستلام</strong></h5>
                                        <p class="mb-0">سيتم الدفع نقداً عند استلام طلبك من المندوب</p>
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle"></i> 
                                            يرجى تجهيز المبلغ المستحق عند الاستلام
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delivery Notes -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-comment"></i> ملاحظات التوصيل (اختياري)
                            </h5>
                        </div>
                        <div class="card-body">
                            <textarea class="form-control" name="DeliveryNotes" rows="3"
                                      placeholder="أي تعليمات خاصة للتوصيل..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Order Summary -->
                    <div class="card shadow-sm sticky-top" style="top: 20px;">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-receipt"></i> ملخص الطلب
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>المنتجات (@Model.Cart.TotalItems):</strong>
                                <div class="mt-2" style="max-height: 200px; overflow-y: auto;">
                                    @foreach (var item in Model.Cart.Items)
                                    {
                                        <div class="d-flex justify-content-between small mt-2 pb-2 border-bottom">
                                            <span>
                                                <strong>@item.ProductName</strong>
                                                @if (!string.IsNullOrEmpty(item.SelectedSize))
                                                {
                                                    <span class="text-muted"> (@item.SelectedSize)</span>
                                                }
                                                <br/>
                                                <small class="text-muted">@item.Quantity × @item.UnitPrice.ToString("N2") ريال</small>
                                            </span>
                                            <span class="fw-bold">@item.TotalPrice.ToString("N2") ريال</span>
                                        </div>
                                    }
                                </div>
                            </div>
                            
                            <hr class="my-3"/>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span>المجموع الفرعي:</span>
                                <span>@Model.Cart.SubTotal.ToString("N2") ريال</span>
                            </div>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span>الشحن:</span>
                                <span class="@(Model.Cart.ShippingCost == 0 ? "text-success fw-bold" : "")">
                                    @if (Model.Cart.ShippingCost == 0)
                                    {
                                        <text><i class="fas fa-gift"></i> مجاني</text>
                                    }
                                    else
                                    {
                                        <text>@Model.Cart.ShippingCost.ToString("N2") ريال</text>
                                    }
                                </span>
                            </div>
                            
                            <div class="d-flex justify-content-between mb-3">
                                <span>ضريبة القيمة المضافة (15%):</span>
                                <span>@Model.Cart.Tax.ToString("N2") ريال</span>
                            </div>
                            
                            <hr class="my-3"/>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <strong class="h5">الإجمالي:</strong>
                                <strong class="h4 text-primary">@Model.Cart.Total.ToString("N2") ريال</strong>
                            </div>
                            
                            <div class="alert alert-info small mb-3">
                                <i class="fas fa-hand-holding-usd"></i>
                                <strong>سيتم الدفع نقداً عند الاستلام</strong>
                            </div>
                            
                            <button type="submit" class="btn btn-success btn-lg w-100 mb-2" id="submitBtn">
                                <i class="fas fa-check-circle"></i> تأكيد الطلب
                            </button>
                            
                            <a href="@Url.Action("Cart", "Store")" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-arrow-right"></i> العودة للسلة
                            </a>

                            <div class="mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                    <label class="form-check-label small" for="agreeTerms">
                                        أوافق على <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">الشروط والأحكام</a>
                                    </label>
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt"></i> عملية آمنة ومضمونة 100%
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Trust Badges -->
                    <div class="card shadow-sm mt-3">
                        <div class="card-body p-2">
                            <div class="row text-center small g-2">
                                <div class="col-4">
                                    <i class="fas fa-money-bill-wave text-success"></i>
                                    <p class="mb-0 small">نقدي</p>
                                </div>
                                <div class="col-4">
                                    <i class="fas fa-truck text-primary"></i>
                                    <p class="mb-0 small">توصيل سريع</p>
                                </div>
                                <div class="col-4">
                                    <i class="fas fa-undo text-info"></i>
                                    <p class="mb-0 small">إرجاع مجاني</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Terms Modal -->
<div class="modal fade" id="termsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">الشروط والأحكام</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>شروط الشراء والتوصيل</h6>
                <p>بالموافقة على هذه الشروط، فإنك توافق على:</p>
                <ul>
                    <li>صحة المعلومات المقدمة</li>
                    <li>سياسة الإرجاع والاستبدال</li>
                    <li>شروط التوصيل والشحن</li>
                    <li>سياسة الخصوصية</li>
                    <li>الدفع نقداً عند الاستلام</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Success Checkmark Animation */
        .success-checkmark {
            width: 100px;
            height: 100px;
            margin: 0 auto;
        }

        .check-icon {
            width: 100px;
            height: 100px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid #198754;
            animation: checkmark-circle 0.6s ease;
        }

        .icon-line {
            height: 5px;
            background-color: #198754;
            display: block;
            border-radius: 2px;
            position: absolute;
            z-index: 10;
        }

        .icon-line.line-tip {
            top: 46px;
            left: 14px;
            width: 25px;
            transform: rotate(45deg);
            animation: checkmark-tip 0.75s 0.3s ease forwards;
        }

        .icon-line.line-long {
            top: 38px;
            right: 8px;
            width: 47px;
            transform: rotate(-45deg);
            animation: checkmark-long 0.75s 0.3s ease forwards;
        }

        .icon-circle {
            top: -4px;
            left: -4px;
            z-index: 10;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            position: absolute;
            box-sizing: content-box;
            border: 4px solid rgba(25, 135, 84, 0.3);
        }

        .icon-fix {
            top: 8px;
            width: 5px;
            left: 26px;
            z-index: 1;
            height: 85px;
            position: absolute;
            transform: rotate(-45deg);
            background-color: #fff;
        }

        @@keyframes checkmark-circle {
            0% { transform: scale(0); opacity: 1; }
            100% { transform: scale(1); opacity: 1; }
        }

        @@keyframes checkmark-tip {
            0% { width: 0; left: 1px; top: 19px; }
            54% { width: 0; left: 1px; top: 19px; }
            70% { width: 50px; left: -8px; top: 37px; }
            84% { width: 17px; left: 21px; top: 48px; }
            100% { width: 25px; left: 14px; top: 46px; }
        }

        @@keyframes checkmark-long {
            0% { width: 0; right: 46px; top: 54px; }
            65% { width: 0; right: 46px; top: 54px; }
            84% { width: 55px; right: 0; top: 35px; }
            100% { width: 47px; right: 8px; top: 38px; }
        }

        .info-item {
            padding: 10px 0;
        }

        .icon-box {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .card {
            border: none;
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .btn-success.btn-lg {
            box-shadow: 0 4px 15px rgba(25, 135, 84, 0.3);
            transition: all 0.3s ease;
        }
        
        .btn-success.btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(25, 135, 84, 0.4);
        }

        .is-invalid {
            border-color: #dc3545 !important;
        }
        
        .is-valid {
            border-color: #198754 !important;
        }
        
        /* Fade transitions */
        .fade-out {
            animation: fadeOut 0.5s forwards;
        }

        .fade-in {
            animation: fadeIn 0.5s forwards;
        }

        @@keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; display: none; }
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
}

@section Scripts {
    <script>
        // ===== MERGED CHECKOUT WITH INLINE SUCCESS =====
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Merged Checkout page loaded');
            
            const checkoutForm = document.getElementById('checkoutForm');
            const submitBtn = document.getElementById('submitBtn');
            const agreeTerms = document.getElementById('agreeTerms');
            const checkoutSection = document.getElementById('checkoutSection');
            const successSection = document.getElementById('successSection');
            
            if (!checkoutForm || !submitBtn || !agreeTerms) {
                console.error('Required elements not found');
                return;
            }
            
            // ===== FORM SUBMISSION WITH AJAX =====
            checkoutForm.addEventListener('submit', function(e) {
                e.preventDefault(); // ✅ Prevent default form submission
                
                console.log('Form submit intercepted for AJAX');
                
                // Validate terms
                if (!agreeTerms.checked) {
                    showNotification('الرجاء الموافقة على الشروط والأحكام', 'warning');
                    agreeTerms.focus();
                    agreeTerms.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    return false;
                }
                
                // Validate required fields
                const requiredFields = checkoutForm.querySelectorAll('input[required]:not([type="checkbox"]), select[required]');
                let isValid = true;
                
                requiredFields.forEach(field => {
                    const value = field.value ? field.value.trim() : '';
                    if (!value || (field.tagName === 'SELECT' && value === '')) {
                        isValid = false;
                        field.classList.add('is-invalid');
                        field.classList.remove('is-valid');
                    } else {
                        field.classList.remove('is-invalid');
                        field.classList.add('is-valid');
                    }
                });
                
                if (!isValid) {
                    showNotification('الرجاء ملء جميع الحقول المطلوبة المميزة بعلامة *', 'danger');
                    const firstInvalid = checkoutForm.querySelector('.is-invalid');
                    if (firstInvalid) {
                        firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstInvalid.focus();
                    }
                    return false;
                }
                
                // Show loading state
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>جارٍ تأكيد الطلب...';
                
                // ✅ Submit form via AJAX
                const formData = new FormData(checkoutForm);
                
                fetch(checkoutForm.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    // Check if response is JSON or redirect
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        return response.json();
                    } else {
                        // Handle redirect - get the URL from response
                        return response.text().then(html => {
                            // Try to extract order ID from redirect URL
                            const parser = new DOMParser();
                            const doc = parser.parseFromHTML(html, 'text/html');
                            return { success: true, redirected: true };
                        });
                    }
                })
                .then(data => {
                    console.log('✅ Order submitted successfully', data);
                    
                    // ✅ Show success section
                    showSuccessMessage(data);
                })
                .catch(error => {
                    console.error('❌ Error submitting order:', error);
                    showNotification('حدث خطأ أثناء معالجة الطلب. يرجى المحاولة مرة أخرى.', 'danger');
                    
                    // Re-enable button
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> تأكيد الطلب';
                });
            });
            
            // ===== SHOW SUCCESS MESSAGE =====
            function showSuccessMessage(orderData) {
                // Update success section with order data
                if (orderData && orderData.orderNumber) {
                    document.getElementById('successOrderNumber').textContent = '#' + orderData.orderNumber;
                }
                if (orderData && orderData.orderDate) {
                    document.getElementById('successOrderDate').textContent = orderData.orderDate;
                }
                if (orderData && orderData.orderId) {
                    const viewDetailsLink = document.getElementById('viewOrderDetailsLink');
                    viewDetailsLink.href = '@Url.Action("OrderDetails", "Orders")?id=' + orderData.orderId;
                }
                
                // Fade out checkout section
                checkoutSection.classList.add('fade-out');
                
                setTimeout(() => {
                    checkoutSection.classList.add('d-none');
                    successSection.classList.remove('d-none');
                    successSection.classList.add('fade-in');
                    
                    // Scroll to top smoothly
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    
                    // Clear checkout storage
                    try {
                        localStorage.removeItem('tafsilk_checkout_data');
                        sessionStorage.removeItem('tafsilk_cart_data');
                    } catch (e) {
                        console.warn('Could not clear storage:', e);
                    }
                }, 500);
            }
            
            // ===== PHONE NUMBER FORMATTING =====
            const phoneInput = document.getElementById('phone');
            if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    let value = this.value.replace(/[^0-9]/g, '');
                    if (value.startsWith('0')) value = value.substring(1);
                    if (value.length > 9) value = value.substring(0, 9);
                    this.value = value;
                    
                    if (value.length === 9) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else if (value.length > 0) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else {
                        this.classList.remove('is-invalid', 'is-valid');
                    }
                });
            }
            
            // ===== REAL-TIME VALIDATION =====
            const requiredFields = document.querySelectorAll('input[required]:not([type="checkbox"]), select[required]');
            requiredFields.forEach(field => {
                field.addEventListener('blur', function() {
                    const value = this.value ? this.value.trim() : '';
                    if (!value || (this.tagName === 'SELECT' && value === '')) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
                
                field.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid') && this.value.trim()) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });

            // ===== TERMS CHECKBOX VALIDATION =====
            if (agreeTerms) {
                agreeTerms.addEventListener('change', function() {
                    if (this.checked) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else {
                        this.classList.remove('is-valid');
                    }
                });
            }
        });
        
        // ===== NOTIFICATION HELPER =====
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            notification.style.cssText = 'top: 80px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
            notification.innerHTML = `
                <i class="fas fa-${type === 'danger' ? 'exclamation-circle' : type === 'success' ? 'check-circle' : 'info-circle'}"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 4000);
        }
    </script>
}
