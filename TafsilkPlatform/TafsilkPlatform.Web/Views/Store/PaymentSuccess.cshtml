@model TafsilkPlatform.Models.ViewModels.Store.PaymentSuccessViewModel
@{
    ViewData["Title"] = "Order Confirmed Successfully";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Animation -->
            <div class="text-center mb-4">
                <div class="success-checkmark">
                    <div class="check-icon">
                        <span class="icon-line line-tip"></span>
                        <span class="icon-line line-long"></span>
                        <div class="icon-circle"></div>
                        <div class="icon-fix"></div>
                    </div>
                </div>
                <h1 class="text-success mt-4 mb-2">
                    <i class="fas fa-check-circle"></i> Order Confirmed Successfully!
                </h1>
                <p class="text-muted lead">Thank you for your order from Tafsilk Platform</p>
            </div>

            <!-- Order Summary Card -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-receipt"></i> Order Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <small class="text-muted d-block">Order Number</small>
                                <strong class="h5 text-primary">#@Model.OrderNumber</strong>
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="info-item">
                                <small class="text-muted d-block">Order Date</small>
                                <strong>@Model.OrderDate.ToString("dd/MM/yyyy - HH:mm")</strong>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4"/>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <small class="text-muted d-block">
                                    <i class="fas fa-money-bill-wave"></i> Payment Method
                                </small>
                                <strong class="text-success">@Model.PaymentMethod</strong>
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="info-item mb-3">
                                <small class="text-muted d-block">
                                    <i class="fas fa-dollar-sign"></i> Total Amount
                                </small>
                                <strong class="h4 text-primary">@Model.TotalAmount.ToString("N2") SAR</strong>
                            </div>
                        </div>
                    </div>

                    @if (Model.TotalAmount > 0)
                    {
                        <div class="alert alert-info border-info">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle fa-2x me-3"></i>
                                <div>
                                    <strong>Important Note:</strong>
                                    <p class="mb-0">
                                        Please prepare the due amount (@Model.TotalAmount.ToString("N2") SAR) in cash upon receiving the order from the courier.
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Delivery Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-truck"></i> Delivery Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-primary text-white me-3">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Estimated Delivery Time</small>
                                    <strong>@Model.EstimatedDeliveryDays-@(Model.EstimatedDeliveryDays + 2) Business Days</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-success text-white me-3">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Order Status</small>
                                    <strong class="text-success">Confirmed</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light border mt-3">
                        <h6><i class="fas fa-shipping-fast"></i> Delivery Steps:</h6>
                        <ol class="mb-0 ps-3">
                            <li>Order confirmed and processing</li>
                            <li>Order preparation and packing</li>
                            <li>Order shipped for delivery</li>
                            <li>Courier will contact you for delivery</li>
                        </ol>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="mb-4">What would you like to do now?</h5>
                    
                    <!-- Primary Action Button -->
                    <div class="mb-4">
                        <a href="@Url.Action("MyOrders", "Orders")" class="btn btn-success btn-lg px-5 py-3" id="viewOrdersBtn" style="font-size: 1.1rem;">
                            <i class="fas fa-list me-2"></i>
                            View All Orders
                        </a>
                    </div>
                    
                    <hr class="my-4"/>
                    
                    <!-- Secondary Action Buttons -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a href="@Url.Action("OrderDetails", "Orders", new { id = Model.OrderId })" class="btn btn-outline-primary btn-lg w-100" id="viewOrderBtn">
                                <i class="fas fa-eye"></i><br/>
                                <small>Order Details</small>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("Index", "Store")" class="btn btn-outline-secondary btn-lg w-100" id="continueShoppingBtn">
                                <i class="fas fa-shopping-bag"></i><br/>
                                <small>Continue Shopping</small>
                            </a>
                        </div>
                    </div>

                    <hr class="my-4"/>

                    <div class="text-muted">
                        <p class="mb-1">
                            <i class="fas fa-envelope"></i> 
                            Order details will be sent to your email
                        </p>
                        <p class="mb-0">
                            <i class="fas fa-question-circle"></i> 
                            Contact us for any inquiries
                        </p>
                    </div>
                </div>
            </div>

            <!-- Thank You Message -->
            <div class="text-center mt-4">
                <p class="text-muted">
                    <i class="fas fa-heart text-danger"></i>
                    Thank you for trusting Tafsilk
                </p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .success-checkmark {
            width: 100px;
            height: 100px;
            margin: 0 auto;
        }

        .check-icon {
            width: 100px;
            height: 100px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid #198754;
            animation: checkmark-circle 0.6s ease;
        }

        .check-icon::before {
            top: 3px;
            left: -2px;
            width: 30px;
            transform-origin: 100% 50%;
            border-radius: 100px 0 0 100px;
        }

        .check-icon::after {
            top: 0;
            left: 30px;
            width: 60px;
            transform-origin: 0 50%;
            border-radius: 0 100px 100px 0;
            animation: checkmark-circle-rotate 0.6s ease;
        }

        .icon-line {
            height: 5px;
            background-color: #198754;
            display: block;
            border-radius: 2px;
            position: absolute;
            z-index: 10;
        }

        .icon-line.line-tip {
            top: 46px;
            left: 14px;
            width: 25px;
            transform: rotate(45deg);
            animation: checkmark-tip 0.75s 0.3s ease forwards;
        }

        .icon-line.line-long {
            top: 38px;
            right: 8px;
            width: 47px;
            transform: rotate(-45deg);
            animation: checkmark-long 0.75s 0.3s ease forwards;
        }

        .icon-circle {
            top: -4px;
            left: -4px;
            z-index: 10;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            position: absolute;
            box-sizing: content-box;
            border: 4px solid rgba(25, 135, 84, 0.3);
        }

        .icon-fix {
            top: 8px;
            width: 5px;
            left: 26px;
            z-index: 1;
            height: 85px;
            position: absolute;
            transform: rotate(-45deg);
            background-color: #fff;
        }

        @@keyframes checkmark-circle {
            0% {
                transform: scale(0);
                opacity: 1;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @@keyframes checkmark-tip {
            0% {
                width: 0;
                left: 1px;
                top: 19px;
            }
            54% {
                width: 0;
                left: 1px;
                top: 19px;
            }
            70% {
                width: 50px;
                left: -8px;
                top: 37px;
            }
            84% {
                width: 17px;
                left: 21px;
                top: 48px;
            }
            100% {
                width: 25px;
                left: 14px;
                top: 46px;
            }
        }

        @@keyframes checkmark-long {
            0% {
                width: 0;
                right: 46px;
                top: 54px;
            }
            65% {
                width: 0;
                right: 46px;
                top: 54px;
            }
            84% {
                width: 55px;
                right: 0;
                top: 35px;
            }
            100% {
                width: 47px;
                right: 8px;
                top: 38px;
            }
        }

        .info-item {
            padding: 10px 0;
        }

        .icon-box {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .card {
            border: none;
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.6;
            }
        }

        .btn-success.btn-lg {
            box-shadow: 0 4px 15px rgba(25, 135, 84, 0.3);
            transition: all 0.3s ease;
        }
        
        .btn-success.btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(25, 135, 84, 0.4);
        }
    </style>
}

@section Scripts {
    <script>
        (function() {
            'use strict';
            
            console.log('Payment success page loaded - Order #@Model.OrderNumber');
            
            // ‚úÖ FIXED: Clear any stored checkout data immediately
            try {
                localStorage.removeItem('tafsilk_checkout_data');
                sessionStorage.removeItem('tafsilk_cart_data');
                sessionStorage.removeItem('tafsilk_checkout_in_progress');
            } catch (e) {
                console.warn('Could not clear storage:', e);
            }
            
            // ‚úÖ Log order confirmation
            console.log('‚úÖ Order confirmed successfully!');
            console.log('Order ID: @Model.OrderId');
            console.log('Order Number: @Model.OrderNumber');
            console.log('Total Amount: @Model.TotalAmount');
            
            // ‚úÖ FIXED: Add click tracking for analytics (optional)
            const viewOrdersBtn = document.getElementById('viewOrdersBtn');
            if (viewOrdersBtn) {
                viewOrdersBtn.addEventListener('click', function() {
                    console.log('üëÜ User clicked "View Orders" button');
                    // Clear history state before navigation
                    sessionStorage.setItem('navigating_from_success', 'true');
                });
            }

            const viewOrderBtn = document.getElementById('viewOrderBtn');
            if (viewOrderBtn) {
                viewOrderBtn.addEventListener('click', function() {
                    console.log('üëÜ User clicked "View Order Details" button');
                    sessionStorage.setItem('navigating_from_success', 'true');
                });
            }

            const continueShoppingBtn = document.getElementById('continueShoppingBtn');
            if (continueShoppingBtn) {
                continueShoppingBtn.addEventListener('click', function() {
                    console.log('üëÜ User clicked "Continue Shopping" button');
                    sessionStorage.setItem('navigating_from_success', 'true');
                });
            }
        })();

        // ‚úÖ FIXED: Prevent back button after successful order - improved implementation
        (function preventBackButton() {
            // Replace current state to prevent back navigation to checkout
            if (window.history && window.history.pushState) {
                // Add entry to history
                window.history.pushState(
                    { page: 'payment-success', orderId: '@Model.OrderId' }, 
                    '', 
                    window.location.href
                );
                
                // Handle popstate (back button)
                window.addEventListener('popstate', function(event) {
                    console.log('‚ö†Ô∏è Back button pressed on success page');
                    
                    // Check if user is trying to go back
                    if (!sessionStorage.getItem('navigating_from_success')) {
                        // Prevent going back by pushing state again
                        window.history.pushState(
                            { page: 'payment-success', orderId: '@Model.OrderId' }, 
                            '', 
                            window.location.href
                        );
                        
                        // Show friendly message
                        if (confirm('You have successfully completed your order. Do you want to go to the orders page?')) {
                            sessionStorage.setItem('navigating_from_success', 'true');
                            window.location.href = '@Url.Action("MyOrders", "Orders")';
                        }
                    } else {
                        // Allow navigation if user clicked a button
                        sessionStorage.removeItem('navigating_from_success');
                    }
                }, false);
                
                console.log('‚úÖ Back button prevention enabled');
            }
        })();
        
        // ‚úÖ NEW: Detect if page was accessed via refresh or back button
        (function detectPageAccess() {
            const navigationEntry = performance.getEntriesByType('navigation')[0];
            if (navigationEntry) {
                const navigationType = navigationEntry.type;
                console.log('Page access type:', navigationType);
                
                if (navigationType === 'reload') {
                    console.log('‚ö†Ô∏è Page was refreshed');
                } else if (navigationType === 'back_forward') {
                    console.log('‚ö†Ô∏è Page accessed via back/forward button');
                    // Could add a message here if needed
                } else if (navigationType === 'navigate') {
                    console.log('‚úÖ Normal navigation (redirect from checkout)');
                }
            }
        })();
    </script>
}
